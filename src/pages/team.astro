// Collaborator Data
const team = [
    { 
        name: "Anton M. E. Jørgensen", 
        role: "Hovedforfatter & Udvikler", 
        image: "/assets/img/billede-af-mig.jpg", 
        description: "Specialiseret i makroøkonomisk modellering, webudvikling og brobygning mellem økonomisk teori og data science.",
        links: { linkedin: "https://linkedin.com/in/antonebsen", github: "https://github.com/AntonEbsen" },
        status: { text: "Writing Thesis", color: "red" }
    },
    { 
        name: "Sheng Ye Michael Chen", 
        role: "Medforfatter & Data Scientist", 
        image: "/assets/collaborators/sheng.jpg",
        description: "Ekspertise i højdimensionel datahåndtering, Stata-programmering og rigoristisk økonometrisk implementering (GMM).",
        links: { linkedin: "https://www.linkedin.com/in/sheng-ye-michael-chen-a52595275/", github: "https://github.com/nsr708" },
        status: { text: "Coding Stata", color: "blue" }
    },
    { 
        name: "Jonas Amasa Skov Nielsen", 
        role: "Medforfatter & Teoretiker", 
        image: "/assets/collaborators/jonas.jpg",
        description: "Fokus på pengepolitisk transmission, spilteori og strukturelle brud i tidsseriedata.",
        links: { linkedin: "https://www.linkedin.com/in/jonas-amasa-skov-nielsen-aa0431357/", github: "https://github.com/JonasASNielsen" },
