---
import Layout from '../layouts/Layout.astro';
import Pill from '../components/common/Pill.astro';
import Section from '../components/common/Section.astro';
import ProjectCard from '../components/common/ProjectCard.astro';
import portfolioData from '../data/portfolio.json';
import '../styles/portfolio.css';
---

<Layout 
  title="Anton Meier Ebsen Jørgensen – Portefølje" 
  description="Portefølje med udvalgte projekter inden for makroøkonomi, økonometri, tidsrækker og økonomiske modeller. Python, SAS, GAMS og Excel/VBA."
  bodyClass="portfolio-page"
>

  <!-- HERO -->
    <Section class="card hero">
      <div>
        <p class="eyebrow">Portefølje</p>
        <h1>Udvalgte projekter</h1>
        <p class="lead">
          Her finder du projekter inden for makroøkonomi, økonometri, tidsrækker og modellering.
          Jeg lægger især vægt på reproducerbar analyse, klare resultater og pæn formidling.
        </p>

        <div class="cta">
          <a class="btn" href="/cv">Se CV</a>
          <a class="btn ghost" href="https://github.com/AntonEbsen" target="_blank" rel="noopener">GitHub</a>
          <a class="btn ghost" href="https://www.linkedin.com/in/antonebsen/" target="_blank" rel="noopener">LinkedIn</a>
        </div>

        <div class="pill-wrap">
           {["Makro & pengepolitik", "Tidsrækker", "CGE/RBC", "Python", "SAS", "GAMS", "Excel/VBA"].map(pill => (
             <Pill text={pill} />
           ))}
        </div>
      </div>

      <div class="hero-side">
        <div class="mini-card">
          <h2 class="section-title">Sådan er projekterne bygget</h2>
          <ul class="clean-list">
            <li>Kort problemformulering</li>
            <li>Metode (model/økonometri)</li>
            <li>Data & kode (hvis muligt)</li>
            <li>Resultater og læring</li>
          </ul>
        </div>
      </div>
    </Section>

    <!-- PROJECT GRID -->
    <section class="grid">
      {portfolioData.map(project => (
        <ProjectCard
          title={project.title}
          tagString={project.tagString}
          description={project.description}
          tools={project.tools}
          output={project.output}
          links={project.links}
        />
      ))}
    </section>

    <!-- Footer card -->
    <Section class="card">
      <h2 class="section-title">Mere</h2>
      <p class="muted">
        Jeg opdaterer løbende porteføljen. Du kan også finde mere på
        <a href="https://github.com/AntonEbsen" target="_blank" rel="noopener">GitHub</a>
        og
        <a href="https://www.linkedin.com/in/antonebsen/" target="_blank" rel="noopener">LinkedIn</a>.
      </p>
    </Section>

</Layout>
