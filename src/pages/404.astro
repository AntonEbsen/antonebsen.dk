---
import Layout from '@layouts/BaseLayout.astro';
import Section from '@components/ui/Section.astro';
import Card from '@components/ui/Card.astro';
import Button from '@components/ui/Button.astro';

// No localization needed for 404 usually, or hardcoded English/Danish combo
const title = "404 - Page Not Found";
const desc = "The page you are looking for does not exist.";
---

<Layout title={title} description={desc}>
    <main style="min-height: 60vh; display: flex; align-items: center; justify-content: center;">
        <Section>
            <Card variant="glass" class="p-12 text-center">
                <h1 class="text-6xl font-bold mb-4 text-accent">404</h1>
                <p class="text-xl text-dim mb-8">Page Not Found / Side Ikke Fundet</p>
                <div class="flex gap-4 justify-center">
                    <Button href="/">Home (DK)</Button>
                    <Button href="/en" variant="ghost">Home (EN)</Button>
                </div>
            </Card>
        </Section>
    </main>
</Layout>
