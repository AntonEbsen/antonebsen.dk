---
import Layout from '@layouts/Layout.astro';
import Section from '@components/ui/Section.astro';
import Card from '@components/ui/Card.astro';
import SectionHeading from '@components/ui/SectionHeading.astro';
import ContactCard from '@components/common/ContactCard.astro';
import cvDA from '@data/cv.json';
import cvEN from '@data/cv_en.json';

interface Props {
  lang: 'da' | 'en';
}

const { lang } = Astro.props;
const isDa = lang === 'da';
const cv = isDa ? cvDA : cvEN;

const content = {
  da: {
    title: "Anton Meier Ebsen Jørgensen – Organisationer",
    metaDescription: "Organisationer og foreninger: roller, ansvar og engagement.",
    eyebrow: "Organisationer",
    heroTitle: "Foreninger, roller og ansvar",
    heroText: "Her samler jeg organisationer og foreninger jeg er tilknyttet.",
    sectionRoles: "Mine roller",
    contactTitle: "Kontakt",
    contactText: "Har du en forening eller et projekt, du mangler en hånd til?"
  },
  en: {
    title: "Anton Meier Ebsen Jørgensen – Organizations",
    metaDescription: "Organizations and associations: roles, responsibilities, and engagement.",
    eyebrow: "Organizations",
    heroTitle: "Associations, roles & responsibility",
    heroText: "Here I collect organizations and associations I am affiliated with.",
    sectionRoles: "My Roles",
    contactTitle: "Contact",
    contactText: "Do you have an association or project you need a hand with?"
  }
};

const t = isDa ? content.da : content.en;
---

<Layout 
  title={t.title}
  description={t.metaDescription}
  bodyClass="organizations-page"
>
  <style>
    .orgs-wrap {
      max-width: 1200px;
      margin: 24px auto;
      padding: 0 16px 32px;
    }

    .hero-grid {
      display: grid;
      grid-template-columns: minmax(0, 1.6fr) minmax(0, 1fr);
      gap: 22px;
      align-items: start;
    }

    .orgs-grid {
      display: grid;
      grid-template-columns: repeat(2, minmax(0, 1fr));
      gap: 14px;
      margin-top: 12px;
    }

    @media (max-width: 980px) {
      .hero-grid, .orgs-grid { 
        grid-template-columns: 1fr; 
      }
    }
  </style>

  <main class="orgs-wrap">

    <Section class="mb-12">
      <div class="hero-grid">
        <Card variant="glass" class="p-8">
          <p class="text-xs font-bold uppercase tracking-widest text-accent mb-3">{t.eyebrow}</p>
          <h1 class="text-4xl font-bold leading-tight mb-4">{t.heroTitle}</h1>
          <p class="text-lg text-dim">
            {t.heroText}
          </p>
        </Card>
      </div>
    </Section>

    <Section id="orgs" class="mb-20">
      <Card variant="bordered" class="p-6">
        <SectionHeading>{t.sectionRoles}</SectionHeading>
        <div class="orgs-grid">
          {cv.organizations.map(org => (
            <Card variant="glass" class="p-6">
               <h3 class="font-bold mb-2">{org.name}</h3>
               <p class="text-xs text-accent font-bold mb-3">{org.role} · {org.period}</p>
               <p class="text-sm text-dim">{org.description}</p>
            </Card>
          ))}
        </div>
      </Card>
    </Section>

    <Section>
        <ContactCard />
    </Section>

  </main>
</Layout>
