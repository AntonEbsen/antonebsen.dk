---
import Layout from '@layouts/BaseLayout.astro';
import { getEntry } from 'astro:content';

interface Props {
  lang: 'da' | 'en';
}

const { lang } = Astro.props;
const isDa = lang === 'da';

const entry = await getEntry('adversity', lang);
if (!entry) {
    throw new Error(`Could not find adversity content for ${lang}`);
}
const content = entry.data;

const cvLink = isDa ? '/cv' : '/en/cv';
const portLink = isDa ? '/portfolio' : '/en/portfolio';
---

<Layout 
  title={content.title}
  description={content.desc}
  bodyClass="history-page"
>
  <style>
    .story-wrap {
      max-width: 800px;
      margin: 4rem auto;
      padding: 0 1.5rem;
    }

    .story-hero {
      text-align: center;
      margin-bottom: 5rem;
    }

    .eyebrow {
      text-transform: uppercase;
      letter-spacing: 0.1em;
      font-size: 0.9rem;
      color: var(--accent);
      margin-bottom: 1.5rem;
      font-weight: 700;
      display: block;
    }

    h1 {
      font-size: clamp(2.5rem, 8vw, 3.5rem);
      font-weight: 900;
      line-height: 1.1;
      margin-bottom: 2rem;
      background: linear-gradient(135deg, #fff 0%, rgba(255,255,255,0.7) 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
    }

    .quote-box {
      background: rgba(var(--accent-rgb), 0.05);
      border-left: 4px solid var(--accent);
      padding: 2rem;
      border-radius: 0 16px 16px 0;
      margin: 3rem 0;
      font-style: italic;
      font-size: 1.2rem;
      line-height: 1.6;
      color: rgba(255,255,255,0.9);
    }

    .chapter {
      margin-bottom: 8rem;
      position: relative;
    }

    .chapter-number {
      font-family: serif;
      font-size: 5rem;
      opacity: 0.05;
      position: absolute;
      top: -2rem;
      left: -2rem;
      font-weight: 900;
      pointer-events: none;
    }

    h2 {
      font-size: 2rem;
      font-weight: 800;
      margin-bottom: 1.5rem;
      color: var(--accent);
    }

    .content {
      font-size: 1.15rem;
      line-height: 1.8;
      color: rgba(255,255,255,0.85);
    }

    .content p {
      margin-bottom: 1.5rem;
    }

    .high-contrast {
      display: grid;
      grid-template-columns: 1fr;
      gap: 2rem;
      margin: 4rem 0;
    }

    @media (min-width: 768px) {
      .high-contrast {
        grid-template-columns: 1fr 1fr;
      }
    }

    .contrast-card {
      background: rgba(255,255,255,0.03);
      border: 1px solid rgba(255,255,255,0.1);
      padding: 2rem;
      border-radius: 20px;
      backdrop-filter: blur(10px);
    }

    .contrast-card.past {
      border-color: rgba(239, 68, 68, 0.2);
    }

    .contrast-card.present {
      border-color: rgba(34, 197, 94, 0.2);
      background: rgba(var(--accent-rgb), 0.03);
    }

    .label {
      font-size: 0.8rem;
      text-transform: uppercase;
      font-weight: 700;
      margin-bottom: 1rem;
      display: block;
      opacity: 0.5;
    }

    .icon-box {
      width: 50px;
      height: 50px;
      background: rgba(255,255,255,0.05);
      border-radius: 12px;
      display: flex;
      align-items: center;
      justify-content: center;
      margin-bottom: 1.5rem;
      font-size: 1.5rem;
      color: var(--accent);
    }

    .navigation-footer {
      border-top: 1px solid rgba(255,255,255,0.1);
      padding-top: 3rem;
      margin-top: 6rem;
      display: flex;
      justify-content: space-between;
      align-items: center;
      flex-wrap: wrap;
      gap: 2rem;
    }

    .btn {
      display: inline-flex;
      align-items: center;
      gap: 0.75rem;
      padding: 0.8rem 1.5rem;
      background: var(--accent);
      color: #000;
      text-decoration: none;
      font-weight: 700;
      border-radius: 12px;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .btn:hover {
      transform: translateY(-3px);
      box-shadow: 0 10px 20px rgba(var(--accent-rgb), 0.2);
    }

    .btn.ghost {
      background: transparent;
      color: #fff;
      border: 1px solid rgba(255,255,255,0.2);
    }

    .btn.ghost:hover {
      border-color: var(--accent);
      color: var(--accent);
      background: rgba(var(--accent-rgb), 0.05);
    }

    strong {
      color: #fff;
      font-weight: 600;
    }
  </style>

  <main class="story-wrap">
    <header class="story-hero">
      <span class="eyebrow">{content.eyebrow}</span>
      <h1>{content.h1}</h1>
      <p class="content" style="font-size: 1.3rem; opacity: 0.8;">
        {content.intro}
      </p>
    </header>

    {content.chapters.map(c => (
        <section class="chapter">
           <span class="chapter-number">{c.id}</span>
           <h2>{c.title}</h2>
           <div class="content">
              {c.content.map(p => <p set:html={p} />)}
              
              {c.quotes && c.quotes.map(q => (
                  <div class="quote-box" style={q.style !== 'default' ? q.style : ''}>
                    <span set:html={q.text} />
                    {q.author && <><br/><small style="font-style: normal; opacity: 0.6; font-size: 0.9rem;">{q.author}</small></>}
                  </div>
              ))}
              
              {c.outro && <p set:html={c.outro} />}

              {c.cards && (
                <div class="high-contrast">
                    <div class="contrast-card past">
                        <span class="label">{content.cards.past.label}</span>
                        <div class="icon-box"><i class="fa-solid fa-brain"></i></div>
                        <p set:html={content.cards.past.text} />
                    </div>
                    <div class="contrast-card present">
                        <span class="label">{content.cards.present.label}</span>
                        <div class="icon-box"><i class="fa-solid fa-chart-line"></i></div>
                        <p set:html={content.cards.present.text} />
                    </div>
                </div>
              )}
           </div>
        </section>
    ))}

    <footer class="navigation-footer">
      <div>
        <h3 style="margin-bottom: 0.5rem; font-weight: 700;">{content.footer.title}</h3>
        <p style="opacity: 0.6; margin-bottom: 0;">{content.footer.text}</p>
      </div>
      <div style="display: flex; gap: 1rem;">
        <a href={cvLink} class="btn ghost">{content.footer.btnCV}</a>
        <a href={portLink} class="btn">{content.footer.btnPort} <i class="fa-solid fa-arrow-right"></i></a>
      </div>
    </footer>
  </main>
</Layout>


