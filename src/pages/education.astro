---
import Layout from '../layouts/Layout.astro';
import cv from '../data/cv.json';
import Card from '../components/ui/Card.astro';
import Button from '../components/ui/Button.astro';
import Pill from '../components/ui/Pill.astro';
import Section from '../components/ui/Section.astro';

const ku = cv.education.find(e => e.degree.includes("cand.polit"));
const hhx = cv.education.find(e => e.degree.includes("HHX"));
---

<Layout 
  title="Anton Meier Ebsen Jørgensen – Uddannelse" 
  description="Uddannelsesprofil: cand.polit./ba.polit., relevante kurser, projekter og fokusområder."
  bodyClass="edu-page"
>
  <style>
    .edu-wrap {
      max-width: 1200px;
      margin: 24px auto;
      padding: 0 16px 32px;
    }
    
    .hero {
      display: grid;
      grid-template-columns: minmax(0, 1.6fr) minmax(0, 1fr);
      gap: 22px;
      align-items: start;
    }

    .two-col {
      display: grid;
      grid-template-columns: repeat(2, minmax(0,1fr));
      gap: 14px;
      margin-top: 12px;
    }

    .grid-3 {
      display: grid;
      grid-template-columns: repeat(3, minmax(0,1fr));
      gap: 14px;
      margin-top: 12px;
    }

    @media (max-width: 980px) {
      .hero, .two-col, .grid-3 { 
        grid-template-columns: 1fr; 
      }
    }
  </style>

  <main class="edu-wrap">

    <!-- HERO -->
    <Section class="hero">
      <Card variant="glass" class="p-6">
        <p class="text-xs font-extrabold uppercase tracking-wider text-[var(--text-dim)] mb-3">Uddannelse</p>
        <h1 class="text-[clamp(26px,4vw,40px)] leading-tight mb-4 font-bold">Kurser, projekter og faglig profil</h1>
        <p class="text-lg leading-relaxed text-[var(--text-dim)] mb-6">
          Her samler jeg det, der ellers bliver for langt til CV’et: udvalgte kurser, projektarbejde
          og hvad jeg konkret har lært (metoder, værktøjer, modeller).
        </p>

        <div class="flex flex-wrap gap-3 mb-6">
          <Button href="#ku">Københavns Universitet</Button>
          <Button href="#hhx" variant="ghost">HHX</Button>
          <Button href="#courses" variant="ghost">Kursusoversigt</Button>
          <Button href="#projects" variant="ghost">Projektarbejde</Button>
        </div>

        <div class="flex flex-wrap gap-2">
          <Pill variant="accent">Makro</Pill>
          <Pill variant="accent">Økonometri</Pill>
          <Pill variant="accent">Modeller</Pill>
          <Pill variant="accent">Tidsrækker</Pill>
          <Pill variant="accent">Python/SAS/GAMS</Pill>
        </div>
      </Card>

      <div class="hidden md:block">
        <Card variant="glass" class="p-4">
          <h2 class="text-xs font-bold uppercase tracking-wider text-[var(--accent)] mb-4">Kort version?</h2>
          <p class="text-[13px] text-[var(--text-dim)] mb-4 opacity-70">
            CV-siden har den “HR-venlige” oversigt. Denne side er til dem, der faktisk læser.
          </p>
          <Button href="/cv#education" variant="ghost" class="w-full">Til CV-oversigt</Button>
        </Card>
      </div>
    </Section>

    <!-- KU -->
    {ku && (
      <Section id="ku">
        <Card variant="default">
          <h2 class="text-xs font-bold uppercase tracking-wider text-[var(--accent)] mb-4">{ku.institution} ({ku.degree})</h2>

          <div class="two-col">
            <Card variant="glass" class="p-4">
              <h3 class="text-base font-bold mb-2">Program & fokus</h3>
              <p class="text-[var(--text-dim)] text-[14px] leading-relaxed mb-4">
                {ku.description}
              </p>
              <ul class="list-none p-0 m-0 space-y-2 text-[13px] text-[var(--text-dim)]">
                {ku.bullets.map(item => (
                  <li class="relative pl-3 before:content-['•'] before:absolute before:left-0 before:text-[var(--accent)]">{item}</li>
                ))}
              </ul>
            </Card>

            <Card variant="glass" class="p-4">
              <h3 class="text-base font-bold mb-2">Nøgleværktøjer</h3>
              <div class="flex flex-wrap gap-2 mb-4">
                {ku.technologies && ku.technologies.map(tech => (
                  <Pill variant="default">{tech}</Pill>
                ))}
              </div>
              <p class="text-[13px] text-[var(--text-dim)] opacity-70">
                (Du kan senere tilføje links til notebooks, repo’er eller “resources”.)
              </p>
            </Card>
          </div>
        </Card>
      </Section>
    )}

    <!-- COURSES -->
    <Section id="courses">
      <Card variant="bordered" class="bg-[rgba(255,255,255,0.01)]!">
        <h2 class="text-xs font-bold uppercase tracking-wider text-[var(--accent)] mb-2">Kursusoversigt (udvalg)</h2>
        <p class="text-[var(--text-dim)] opacity-70 mb-6">
          Tip: hold denne liste “kurateret” (10–15 kurser). Resten kan ligge i PDF CV.
        </p>

        <div class="grid-3">
          {cv.courses.map(course => (
            <Card variant="bordered" class="flex flex-col h-full bg-[rgba(17,24,39,0.02)]!">
              <div class="flex justify-between items-start mb-2 gap-2">
                <h3 class="text-[16px] font-bold leading-tight m-0">{course.title}</h3>
                <Pill variant="accent" class="shrink-0">{course.tag}</Pill>
              </div>
              <p class="text-[13px] text-[var(--text-dim)] mb-3">{course.institution}</p>
              <p class="text-[14px] text-[var(--text-dim)] opacity-80 leading-relaxed mb-4 flex-grow">
                {course.description}
              </p>
              <div class="flex flex-wrap gap-2 mt-auto">
                {course.links && course.links.map(link => (
                  <a href={link.href} class="text-xs font-bold text-[var(--accent)] hover:text-white transition-colors">{link.text} →</a>
                ))}
              </div>
            </Card>
          ))}
        </div>
      </Card>
    </Section>

    <!-- PROJECTS -->
    <Section id="projects">
      <Card variant="bordered" class="bg-[rgba(255,255,255,0.01)]!">
        <h2 class="text-xs font-bold uppercase tracking-wider text-[var(--accent)] mb-6">Projektarbejde (udvalg)</h2>

        <div class="grid-3">
          {cv.projects.map(proj => (
            <Card variant="bordered" class="flex flex-col h-full bg-[rgba(17,24,39,0.02)]!">
              <div class="flex justify-between items-start mb-2 gap-2">
                <h3 class="text-[16px] font-bold leading-tight m-0">{proj.title}</h3>
                <Pill variant="accent" class="shrink-0">{proj.tag}</Pill>
              </div>
              {proj.meta && <p class="text-[13px] text-[var(--text-dim)] mb-3">{proj.meta}</p>}
              <p class="text-[14px] text-[var(--text-dim)] opacity-80 leading-relaxed mb-4 flex-grow">
                {proj.description}
              </p>
              <div class="flex flex-wrap gap-2 mt-auto">
                 {proj.links && proj.links.map(link => (
                  <a href={link.href} class="text-xs font-bold text-[var(--accent)] hover:text-white transition-colors">{link.text} →</a>
                ))}
              </div>
            </Card>
          ))}
        </div>
      </Card>
    </Section>

    <!-- HHX -->
    {hhx && (
      <Section id="hhx">
        <Card variant="glass" class="p-6">
          <h2 class="text-xs font-bold uppercase tracking-wider text-[var(--accent)] mb-3">{hhx.degree} ({hhx.institution})</h2>
          <p class="text-[var(--text-dim)] mb-4 leading-relaxed">
            {hhx.description}
          </p>
          <ul class="list-none p-0 m-0 space-y-2 text-[14px] text-[var(--text-dim)]">
            {hhx.bullets.map(item => (
              <li class="relative pl-3 before:content-['•'] before:absolute before:left-0 before:text-[var(--accent)]">{item}</li>
            ))}
          </ul>
        </Card>
      </Section>
    )}

    <!-- CTA -->
    <Section>
      <Card variant="default">
        <h2 class="text-xs font-bold uppercase tracking-wider text-[var(--accent)] mb-3">Vil du se certificeringer også?</h2>
        <p class="text-[var(--text-dim)] opacity-70 mb-6">Certificeringer er “beviser”. Uddannelse er “forløb”. Begge styrker troværdigheden.</p>
        <div class="flex flex-wrap gap-3">
          <Button href="/certifications">Til certificeringer</Button>
          <Button href="/contact" variant="ghost">Kontakt</Button>
        </div>
      </Card>
    </Section>

  </main>
</Layout>

<Layout 
  title="Anton Meier Ebsen Jørgensen – Uddannelse" 
  description="Uddannelsesprofil: cand.polit./ba.polit., relevante kurser, projekter og fokusområder."
  bodyClass="edu-page"
>
<style>
.edu-wrap {
  max-width: 1200px;
  margin: 24px auto;
  padding: 0 16px 32px;
}

.card {
  background: var(--glass);
  backdrop-filter: blur(16px);
  -webkit-backdrop-filter: blur(16px);
  border-radius: var(--radius);
  padding: 24px;
  border: 1px solid var(--glass-border);
  box-shadow: var(--shadow);
  transition: transform 0.3s cubic-bezier(0.34, 1.56, 0.64, 1), border-color 0.3s ease;
}
.card:hover {
  transform: translateY(-4px) scale(1.01);
  border-color: var(--accent-soft);
}

.section-title {
  margin: 0 0 24px;
  font-size: 13px;
  text-transform: uppercase;
  letter-spacing: 0.2em;
  font-weight: 800;
  color: var(--accent);
}

.eyebrow {
  margin: 0 0 12px;
  color: var(--text-dim);
  font-weight: 800;
  text-transform: uppercase;
  letter-spacing: 0.15em;
  font-size: 12px;
}

.lead { 
  margin: 0 0 24px; 
  color: var(--text-dim); 
  font-size: 18px; 
  line-height: 1.6; 
}

.muted { 
  color: var(--text-dim); 
  opacity: 0.7; 
}
.small { 
  font-size: 13px; 
}

.cta {
  display: flex;
  flex-wrap: wrap;
  gap: 10px;
  margin: 10px 0 14px;
}

.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 12px 24px;
  border-radius: 999px;
  background: var(--accent);
  color: #050506;
  text-decoration: none;
  font-weight: 700;
  font-size: 14.5px;
  transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
}
.btn:hover {
  transform: translateY(-2px);
  box-shadow: var(--glow);
}
.btn.ghost {
  background: transparent;
  border: 1.5px solid var(--accent);
  color: var(--accent);
}

.pill-wrap {
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
  margin-top: 8px;
}

.pill {
  padding: 6px 14px;
  background: var(--accent-soft);
  border: 1px solid var(--accent);
  border-radius: 999px;
  font-size: 11px;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  color: var(--accent);
}

/* Hero */
.hero {
  display: grid;
  grid-template-columns: minmax(0, 1.6fr) minmax(0, 1fr);
  gap: 22px;
  align-items: start;
  margin-bottom: 14px;
}

.mini-card {
  background: var(--glass);
  backdrop-filter: blur(12px);
  -webkit-backdrop-filter: blur(12px);
  border-radius: 14px;
  padding: 16px;
  border: 1px solid var(--glass-border);
  transition: border-color 0.3s ease;
}
.mini-card:hover { 
  border-color: var(--accent-soft); 
}

.mini-title { 
  margin: 0 0 8px; 
  font-size: 16px; 
}

/* Two-column block */
.two-col {
  display: grid;
  grid-template-columns: repeat(2, minmax(0,1fr));
  gap: 14px;
  margin-top: 12px;
}

/* Grids */
.grid {
  display: grid;
  grid-template-columns: repeat(3, minmax(0,1fr));
  gap: 14px;
  margin-top: 12px;
}

.course,
.proj {
  border: 1px solid var(--glass-border);
  border-radius: var(--radius);
  padding: 16px;
  background: rgba(255, 255, 255, 0.02);
}

.course-top,
.proj-top {
  display: flex;
  gap: 10px;
  align-items: flex-start;
  justify-content: space-between;
  margin-bottom: 6px;
}

.course-title,
.proj-title {
  margin: 0;
  font-size: 16px;
  line-height: 1.25;
}

.tag {
  font-size: 11px;
  font-weight: 700;
  padding: 4px 10px;
  border-radius: 999px;
  border: 1px solid var(--accent-blue);
  background: rgba(56, 189, 248, 0.1);
  color: var(--accent-blue);
  white-space: nowrap;
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.course-meta,
.proj-meta {
  margin: 0 0 10px;
  font-size: 13px;
  color: var(--text-dim);
}

.course-links,
.proj-links {
  margin-top: 12px;
  display: flex;
  flex-wrap: wrap;
  gap: 10px;
}

/* Lists */
.clean-list {
  margin: 10px 0 0;
  padding-left: 18px;
}

/* Mobile */
@media (max-width: 980px) {
  .hero { 
    grid-template-columns: 1fr; 
  }
  .two-col { 
    grid-template-columns: 1fr; 
  }
  .grid { 
    grid-template-columns: 1fr; 
  }
}

.edu-wrap > .card {
  margin-bottom: 14px;
}

.edu-wrap > .card:last-child {
  margin-bottom: 0;
}
</style>

  <main class="edu-wrap">

    <!-- HERO -->
    <section class="card hero">
      <div>
        <p class="eyebrow">Uddannelse</p>
        <h1>Kurser, projekter og faglig profil</h1>
        <p class="lead">
          Her samler jeg det, der ellers bliver for langt til CV’et: udvalgte kurser, projektarbejde
          og hvad jeg konkret har lært (metoder, værktøjer, modeller).
        </p>

        <div class="cta">
          <a class="btn" href="#ku">Københavns Universitet</a>
          <a class="btn ghost" href="#hhx">HHX</a>
          <a class="btn ghost" href="#courses">Kursusoversigt</a>
          <a class="btn ghost" href="#projects">Projektarbejde</a>
        </div>

        <div class="pill-wrap">
          <span class="pill">Makro</span>
          <span class="pill">Økonometri</span>
          <span class="pill">Modeller</span>
          <span class="pill">Tidsrækker</span>
          <span class="pill">Python/SAS/GAMS</span>
        </div>
      </div>

      <div class="hero-side">
        <div class="mini-card">
          <h2 class="section-title">Kort version?</h2>
          <p class="muted small" style="margin:0;">
            CV-siden har den “HR-venlige” oversigt. Denne side er til dem, der faktisk læser.
          </p>
          <div class="cta" style="margin-top:12px;">
            <a class="btn ghost" href="/cv#education">Til CV-oversigt</a>
          </div>
        </div>
      </div>
    </section>

    <!-- KU -->
    <section class="card" id="ku">
      <h2 class="section-title">Københavns Universitet (ba.polit./cand.polit.)</h2>

      <div class="two-col">
        <div class="mini-card">
          <h3 class="mini-title">Program & fokus</h3>
          <p class="muted">
            Økonomi med fokus på makroøkonomi, pengepolitik, tidsrækker og modellering.
            Stor vægt på praktisk dataarbejde og programmering.
          </p>
          <ul class="clean-list">
            <li>Makro & pengepolitik (ECB/centralbanker)</li>
            <li>Økonometri & tidsrækker (forecasting, SVAR, etc.)</li>
            <li>Økonomiske modeller (RBC/CGE)</li>
            <li>Værktøjer: Python, SAS, GAMS, Excel/VBA</li>
          </ul>
        </div>

        <div class="mini-card">
          <h3 class="mini-title">Nøgleværktøjer</h3>
          <div class="pill-wrap">
            <span class="pill">Python</span>
            <span class="pill">SAS</span>
            <span class="pill">GAMS</span>
            <span class="pill">Excel/VBA</span>
            <span class="pill">Stata</span>
            <span class="pill">MATLAB</span>
          </div>
          <p class="muted small" style="margin-top:10px;">
            (Du kan senere tilføje links til notebooks, repo’er eller “resources”.)
          </p>
        </div>
      </div>
    </section>

    <!-- COURSE OVERVIEW -->
    <section class="card" id="courses">
      <h2 class="section-title">Kursusoversigt (udvalg)</h2>
      <p class="muted">
        Tip: hold denne liste “kurateret” (10–15 kurser). Resten kan ligge i PDF CV.
      </p>

      <div class="grid">
        <article class="course">
          <div class="course-top">
            <h3 class="course-title">Advanced Macroeconomics: SVAR</h3>
            <span class="tag">Makro</span>
          </div>
          <p class="course-meta">KU · (indsæt semester/år)</p>
          <p class="muted">Metoder: identifikation, impulssvar, robusthed. Værktøj: (SAS/Stata/Python).</p>
          <div class="course-links">
            <a class="btn ghost" href="#" aria-disabled="true">Noter</a>
            <a class="btn ghost" href="#" aria-disabled="true">Projekt</a>
          </div>
        </article>

        <article class="course">
          <div class="course-top">
            <h3 class="course-title">Introduction to Programming & Numerical Analysis</h3>
            <span class="tag">Coding</span>
          </div>
          <p class="course-meta">KU · (indsæt semester/år)</p>
          <p class="muted">Numerik, model-simulering og basale workflows. Værktøj: Python/MATLAB.</p>
          <div class="course-links">
            <a class="btn ghost" href="#" aria-disabled="true">Noter</a>
          </div>
        </article>

        <article class="course">
          <div class="course-top">
            <h3 class="course-title">CGE / Applied Economic Modelling</h3>
            <span class="tag">Modeller</span>
          </div>
          <p class="course-meta">KU · (indsæt semester/år)</p>
          <p class="muted">Kalibrering, SAM, stød, baseline checks. Værktøj: GAMS.</p>
          <div class="course-links">
            <a class="btn ghost" href="#" aria-disabled="true">Case</a>
          </div>
        </article>
      </div>
    </section>

    <!-- PROJECT WORK -->
    <section class="card" id="projects">
      <h2 class="section-title">Projektarbejde (udvalg)</h2>

      <div class="grid">
        <article class="proj">
          <div class="proj-top">
            <h3 class="proj-title">Bachelorprojekt: Global Financial Cycle & spillovers</h3>
            <span class="tag">Empiri</span>
          </div>
          <p class="proj-meta">Tema: USA pengepolitik → global økonomi</p>
          <p class="muted">1–2 linjer: metode, data, og hvad du bidrog med.</p>
          <div class="proj-links">
            <a class="btn ghost" href="#" aria-disabled="true">PDF</a>
            <a class="btn ghost" href="#" aria-disabled="true">Kode</a>
          </div>
        </article>

        <article class="proj">
          <div class="proj-top">
            <h3 class="proj-title">RBC-model: steady state</h3>
            <span class="tag">Model</span>
          </div>
          <p class="proj-meta">Tema: numerik & modelsetup</p>
          <p class="muted">1–2 linjer: hvad modellen gjorde, og hvad du lærte.</p>
          <div class="proj-links">
            <a class="btn ghost" href="#" aria-disabled="true">Noter</a>
          </div>
        </article>

        <article class="proj">
          <div class="proj-top">
            <h3 class="proj-title">ECB-projekt: heterogene effekter på tværs af lande</h3>
            <span class="tag">Pengepolitik</span>
          </div>
          <p class="proj-meta">Tema: Taylor rules / syntetiske renter</p>
          <p class="muted">1–2 linjer: metode og output (plots/tables).</p>
          <div class="proj-links">
            <a class="btn ghost" href="#" aria-disabled="true">Slides</a>
          </div>
        </article>
      </div>
    </section>

    <!-- HHX -->
    <section class="card" id="hhx">
      <h2 class="section-title">HHX (Handelsgymnasiet Lolland-Falster)</h2>
      <p class="muted">
        Studieretning: Økonomi. Fokus på international økonomi og virksomhedsøkonomi.
      </p>
      <ul class="clean-list">
        <li>Projekter og skriftlig formidling</li>
        <li>Grundlæggende kvantitativ metode</li>
      </ul>
    </section>

    <!-- CTA -->
    <section class="card">
      <h2 class="section-title">Vil du se certificeringer også?</h2>
      <p class="muted">Certificeringer er “beviser”. Uddannelse er “forløb”. Begge styrker troværdigheden.</p>
      <div class="cta">
        <a class="btn" href="/certifications">Til certificeringer</a>
        <a class="btn ghost" href="/contact">Kontakt</a>
      </div>
    </section>

  </main>
</Layout>
