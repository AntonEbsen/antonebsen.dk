const curriculum = [
    { course: "Advanced Macroeconomics", ects: "7.5", desc: "DSGE modeller, real business cycles & New Keynesian theory." },
    { course: "Econometrics II", ects: "7.5", desc: "Instrument variables, GMM, Time Series Analysis & asymptotic theory." },
