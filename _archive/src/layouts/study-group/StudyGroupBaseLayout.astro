import Layout from '../BaseLayout.astro';
import group from '../../data/group.json';
import { ViewTransitions } from 'astro:transitions';

interface Props {
	title: string;
    activePage: string;
}

const { title, activePage } = Astro.props;

let authenticated = Astro.cookies.get('study_auth')?.value === 'manifestet';
const comradeId = Astro.cookies.get('study_comrade')?.value;
let error = "";

if (Astro.request.method === "POST") {
    try {
        const formData = await Astro.request.formData();
        const password = formData.get("password")?.toString().toLowerCase();
        
        if (password === "manifestet") {
            Astro.cookies.set('study_auth', 'manifestet', { path: '/study-group', maxAge: 60 * 60 * 24 * 7 });
            authenticated = true;
        } else {
            error = "Uværdig kode! Prøv igen, kammerat.";
        }
    } catch (e) {
        error = "Kontrarevolutionær fejl opstået.";
    }
}
---

<Layout title={`${title} | De tre kammerater`} description="Koordinationsportal for Stalin, Mao og Che">
    <link rel="icon" type="image/png" href="/study-group-favicon.png" slot="head" />
    <ViewTransitions />
    <main class="min-h-screen bg-[#0a0a0a] text-white font-sans selection:bg-red-600/30">
        
        {!authenticated ? (
            // Password Gate
            <div class="h-screen flex flex-col items-center justify-center px-6 relative overflow-hidden">
                <div class="absolute top-0 left-0 w-full h-full opacity-10 pointer-events-none">
                    <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[800px] h-[800px] bg-red-600 blur-[150px] rounded-full"></div>
                </div>

                <div class="max-w-md w-full relative z-10 space-y-12 text-center">
                    <div class="space-y-4">
                        <div class="w-24 h-24 bg-red-700/20 border border-red-600/40 rounded-3xl flex items-center justify-center mx-auto mb-8 shadow-[0_0_50px_rgba(185,28,28,0.2)]">
                             <i class="fa-solid fa-flag text-red-600 text-4xl animate-pulse"></i>
                        </div>
                        <h1 class="text-4xl font-black uppercase tracking-tighter italic text-white leading-none">De tre kammerater</h1>
                        <p class="text-red-500/60 font-medium uppercase tracking-[0.2em] text-[10px]">Eksklusiv adgang for kollektivet</p>
                    </div>

                    <form method="POST" class="space-y-4">
                        <input 
                            type="password" 
                            name="password" 
                            placeholder="Indtast revolutions-koden..." 
                            required
                            class="w-full bg-white/[0.03] border border-white/10 rounded-2xl px-6 py-4 text-white placeholder:text-white/20 focus:outline-none focus:border-red-600/50 focus:ring-4 focus:ring-red-600/10 transition-all text-center tracking-widest"
                        />
                        {error && <p class="text-red-500 text-xs font-bold uppercase tracking-widest">{error}</p>}
                        <button type="submit" class="w-full bg-red-600 hover:bg-red-700 text-white font-black uppercase tracking-widest py-4 rounded-2xl transition-all shadow-[0_0_30px_rgba(185,28,28,0.3)]">
                            Tilgå Portalen
                        </button>
                    </form>
                </div>
            </div>
        ) : !Astro.cookies.get('study_comrade')?.value ? (
            // Identity Selection (Individual Login)
            <div class="h-screen flex flex-col items-center justify-center px-6 relative overflow-hidden">
                <div class="max-w-4xl w-full relative z-10 space-y-16 text-center">
                    <div class="space-y-4">
                        <h2 class="text-3xl font-black uppercase tracking-tighter italic text-white">Vælg din identitet</h2>
                        <p class="text-white/20 text-[10px] font-black uppercase tracking-widest">For at personliggøre revolutionen</p>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                        {group.map(member => (
                            <button 
                                onclick={`document.cookie = "study_comrade=${member.id.toLowerCase()}; path=/study-group; max-age=${60 * 60 * 24 * 30}"; window.location.reload();`}
                                class="bg-white/[0.02] border border-white/5 rounded-[40px] p-8 space-y-6 group hover:bg-white/[0.04] hover:border-red-600/20 transition-all duration-500 text-center"
                            >
                                <img src={member.image} alt={member.name} class="w-24 h-24 mx-auto rounded-2xl grayscale group-hover:grayscale-0 group-hover:scale-110 transition-all duration-500" />
                                <div class="space-y-1">
                                    <h3 class="text-xl font-black uppercase text-white">{member.alias}</h3>
                                    <p class="text-red-600 text-[10px] font-black uppercase tracking-widest">{member.role}</p>
                                </div>
                            </button>
                        ))}
                    </div>
                </div>
            </div>
        ) : (
            <div class="flex">
                {/* Revolutions-Sidebar */}
                <aside class="w-80 border-r border-white/5 bg-white/[0.02] flex flex-col h-screen sticky top-0">
            <div class="px-8 py-10 space-y-8">
                <div class="flex items-center gap-4">
                    <div class="w-10 h-10 bg-red-600 flex items-center justify-center rounded-lg shadow-glow-red">
                        <i class="fa-solid fa-star text-white text-lg"></i>
                    </div>
                    <span class="font-black uppercase tracking-tighter text-xl italic pt-1">Kollektivet</span>
                </div>

                <nav class="space-y-4">
                    {[
                        { id: 'dashboard', label: 'Hovedkvarter', icon: 'fa-house', href: '/study-group' },
                        { id: 'calendar', label: 'Planøkonomi', icon: 'fa-calendar-days', href: '/study-group/calendar' },
                        { id: 'analytics', label: 'Kommissariat', icon: 'fa-chart-line', href: '/study-group/analytics' },
                        { id: 'leaderboard', label: 'Klassekampen', icon: 'fa-trophy', href: '/study-group/leaderboard' },
                        { id: 'war-room', label: 'Krigsrådet', icon: 'fa-kaaba', href: '/study-group/war-room' },
                        { id: 'resources', label: 'Hvælvingen', icon: 'fa-vault', href: '/study-group/resources' },
                        { id: 'theory', label: 'Den Røde Tråd', icon: 'fa-diagram-project', href: '/study-group/theory' },
                        { id: 'commissar', label: 'Kommissæren', icon: 'fa-robot', href: '/study-group/commissar' },
                        { id: 'work', label: 'Arbejdslejr', icon: 'fa-hammer', href: '/study-group/work' },
                        { id: 'protocols', label: 'Protokollen', icon: 'fa-scroll', href: '/study-group/protocols' },
                        { id: 'finance', label: 'Kollektivkasse', icon: 'fa-piggy-bank', href: '/study-group/finance' }
                    ].map(item => (
                        <a 
                            href={item.href}
                            class={`flex items-center gap-4 px-6 py-4 rounded-2xl transition-all font-black uppercase tracking-widest text-[10px] ${
                                activePage === item.id 
                                ? 'bg-red-600 text-white shadow-glow-red' 
                                : 'text-white/20 hover:text-white hover:bg-white/5'
                            }`}
                        >
                            <i class={`fa-solid ${item.icon} w-5`}></i>
                            {item.label}
                        </a>
                    ))}
                </nav>
            </div>

            <div class="mt-auto p-8 border-t border-white/5 space-y-6">
                <div class="flex flex-col gap-4">
                    <p class="text-[8px] font-black uppercase tracking-widest text-white/10 italic">Indloggede Kammerater</p>
                    <div class="flex -space-x-3">
                        {group.map(member => (
                            <div class="relative group">
                                <img 
                                    src={member.image} 
                                    alt={member.alias} 
                                    class={`w-10 h-10 rounded-full border-2 grayscale group-hover:grayscale-0 transition-all cursor-help ${comradeId === member.id ? 'border-red-600 grayscale-0 shadow-glow-red' : 'border-[#0a0a0a]'}`} 
                                    title={`Kamerat ${member.alias}`}
                                />
                                {comradeId === member.id && (
                                    <div class="absolute -top-1 -right-1 w-3 h-3 bg-red-600 rounded-full border-2 border-[#0a0a0a]"></div>
                                )}
                            </div>
                        ))}
                    </div>
                </div>
                <a href="/" class="text-[10px] font-black uppercase tracking-widest text-red-600/60 hover:text-red-500 transition-colors flex items-center gap-3">
                    <i class="fa-solid fa-right-from-bracket"></i>
                    Log ud
                </a>
                {/* Logout / Switch Comrade */}
                <button 
                    onclick="document.cookie = 'study_comrade=; path=/study-group; expires=Thu, 01 Jan 1970 00:00:00 UTC;'; window.location.reload();"
                    class="w-14 h-14 rounded-2xl bg-white/[0.02] border border-white/5 flex items-center justify-center text-white/20 hover:text-red-600 hover:border-red-600/30 transition-all group mt-auto"
                    title="Skift Kammerat"
                >
                    <i class="fa-solid fa-right-from-bracket group-hover:scale-110 transition-transform"></i>
                </button>
            </div>
        </aside>

        {/* Content Area */}
        <section class="flex-1 overflow-y-auto h-screen p-16 pb-32">
            <slot />
            
            <footer class="mt-32 pt-20 border-t border-white/5 text-center space-y-8">
                <div class="flex justify-center gap-4 text-red-600/20 text-4xl">
                    <i class="fa-solid fa-hammer"></i>
                    <i class="fa-solid fa-gear"></i>
                </div>
                <p class="text-white/5 text-[10px] font-black uppercase tracking-[0.5em]">De tre kammerater — Fællesskab & Resultater</p>
            </footer>
        </section>
            </div>
        )}
    </main>
</Layout>

<style is:global>
    .shadow-glow-red {
        box-shadow: 0 0 20px rgba(185, 28, 28, 0.4);
    }
</style>



