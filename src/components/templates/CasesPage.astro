            role: ["• Eigenständige Problemformulering", "• Datenerhebung und Trendanalyse", "• Theoretischer Rahmen für CBDC"],
            tools: ["Excel", "Word", "Literaturrecherche"],
            lang: "de"
        },
        {
            id: "case-erd",
            title: "Case 4: Wechselkursdynamik – Inflation & relative Kurse",
            pill: "Angewandte Datenanalyse",
            desc: "Explorative Analyse des Zusammenhangs zwischen dänischer Inflation und Hauptwährungen (EUR, USD, CNY).",
            problem: "Wie haben sich dänische Preise und Wechselkurse in den letzten 20 Jahren zueinander bewegt?",
            data: ["• DST API-Daten (Preisindex & Wechselkurse)", "• Jährliche Beobachtungen (2000-2023)"],
            method: ["• Datenzusammenführung und -reinigung in Python", "• Periodenindexierung (2010=100)", "• Vergleichende visuelle Analyse"],
            result: ["• Dokumentation der Wechselkursstabilität", "• Visualisierung der globalen Wechselkursvolatilität"],
            role: ["• Pipeline zur Datenerhebung", "• Reinigung und Zusammenführung von DST-Daten", "• Design visueller Vergleiche"],
            tools: ["Python", "Pandas", "Matplotlib"],
            labUrl: "https://lab.antonebsen.dk/lab/index.html?path=interactive_demo.ipynb",
            lang: "de"
