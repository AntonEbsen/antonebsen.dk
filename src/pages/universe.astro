---
import Layout from '../layouts/BaseLayout.astro';
import SkillGraph from '../components/visuals/SkillGraph.tsx';
---

<Layout title="The Universe | Anton Ebsen" description="An interactive constellation of my skills, experience, and projects.">
    <main class="relative w-full h-screen overflow-hidden bg-[#050505]">
        
        <!-- Controls / Overlay -->
        <div class="absolute top-24 left-8 z-10 pointer-events-none">
            <h1 class="text-4xl md:text-6xl font-black text-transparent bg-clip-text bg-gradient-to-r from-gold-400 to-white mb-2">
                The Universe
            </h1>
            <p class="text-dim text-sm md:text-base max-w-sm">
                Explore the connections between my skills, academic journey, and professional experience.
                <br>
                <span class="text-accent mt-2 block"><i class="fa-solid fa-mouse pointer-events-auto"></i> Drag to rotate · Scroll to zoom · Click to focus</span>
            </p>
        </div>

        <!-- The Graph -->
        <div class="absolute inset-0 z-0">
            <SkillGraph client:only="react" />
        </div>

        <!-- Legend -->
        <div class="absolute bottom-8 right-8 z-10 bg-black/40 backdrop-blur-md p-4 rounded-xl border border-white/10 text-xs text-dim space-y-2 pointer-events-auto">
            <div class="flex items-center gap-2">
                <span class="w-3 h-3 rounded-full bg-[#D4AF37]"></span>
                <span>Anton (Root)</span>
            </div>
            <div class="flex items-center gap-2">
                <span class="w-3 h-3 rounded-full bg-[#60A5FA]"></span>
                <span>Skills</span>
            </div>
            <div class="flex items-center gap-2">
                <span class="w-3 h-3 rounded-full bg-[#34D399]"></span>
                <span>Courses</span>
            </div>
             <div class="flex items-center gap-2">
                <span class="w-3 h-3 rounded-full bg-[#A1A1AA]"></span>
                <span>Experience</span>
            </div>
        </div>

        <a href="/" class="absolute bottom-8 left-8 z-10 px-4 py-2 bg-white/5 border border-white/10 rounded-lg text-sm text-dim hover:text-white hover:bg-white/10 transition-all">
            <i class="fa-solid fa-arrow-left mr-2"></i> Return to Earth
        </a>

    </main>
</Layout>
