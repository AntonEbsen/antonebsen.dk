---
import Layout from '@layouts/Layout.astro';
import Pill from '@components/ui/Pill.astro';
import Section from '@components/ui/Section.astro';
import Card from '@components/ui/Card.astro';
import Button from '@components/ui/Button.astro';
import SectionHeading from '@components/ui/SectionHeading.astro';
import ContactCard from '@components/common/ContactCard.astro';
import BlogCard from '@components/blog/BlogCard.astro';
import { createClient } from '@supabase/supabase-js';

export const prerender = false;

const supabase = createClient(import.meta.env.SUPABASE_URL, import.meta.env.SUPABASE_ANON_KEY);
let { data: posts, error } = await supabase
  .from('posts')
  .select('*')
  .eq('published', true)
  .order('created_at', { ascending: false });

if (error || !posts) posts = [];
---

<Layout 
  title="Anton Meier Ebsen Jørgensen – Blog" 
  description="Blog with posts about professional topics, training, and travel."
  bodyClass="blog-page"
>

  <style>
    .blog-wrap { 
      max-width: 1200px; 
      margin: 24px auto; 
      padding: 0 16px 32px; 
    }

    .hero-grid {
      display: grid; 
      grid-template-columns: minmax(0, 1.6fr) minmax(0, 1fr);
      gap: 22px; 
      align-items: start; 
    }

    .posts-grid {
      display: grid; 
      grid-template-columns: repeat(3, minmax(0, 1fr));
      gap: 14px; 
      margin-top: 14px;
    }

    @media (max-width: 980px) {
      .hero-grid { 
        grid-template-columns: 1fr; 
      }
      .posts-grid { 
        grid-template-columns: 1fr; 
      }
    }
  </style>

  <main class="blog-wrap">

    <!-- HERO -->
    <Section>
      <div class="hero-grid">
        <Card variant="glass" class="p-8">
          <p class="text-xs font-extrabold uppercase tracking-widest text-dim mb-3">Blog</p>
          <h1 class="text-4xl leading-[1.15] mb-5 font-bold">Posts and Notes</h1>
          <p class="text-[17px] leading-relaxed text-dim mb-6 opacity-90">
            Three tracks: <strong>Professional</strong> (economics, data, models), <strong>Training</strong> (structure and progression)
            and <strong>Travel</strong> (hiking, routes, and practical experiences).
          </p>
  
          <div class="flex flex-wrap gap-3 mb-6">
            <Button href="#latest">Latest</Button>
            <Button href="/en/bucketlist" variant="ghost" class="text-gold-400 hover:text-gold-300"><i class="fa-solid fa-trophy mr-2"></i>Bucket List</Button>
          </div>
        </Card>
  
        <div class="hidden md:block">
          <Card variant="glass" class="p-6">
            <SectionHeading>Status</SectionHeading>
            <p class="text-dim opacity-80 m-0">
              {posts.length > 0 ? `Displaying ${posts.length} posts.` : 'No posts yet.'}
            </p>
          </Card>
        </div>
      </div>
    </Section>

    <!-- ===================== -->
    <!-- PERMANENT POSTS (Resources) -->
    <!-- ===================== -->
    <Section id="featured">
      <SectionHeading class="mb-4 text-xl font-bold">Featured Posts & Resources</SectionHeading>
      <div class="posts-grid mb-12">
        <BlogCard 
          title="My Training Program (6-day Split)"
          tag="Training"
          meta="Full Program · PPL"
          description="A complete overview of my exercises, sets, tempo, and focus areas. Optimized for progression."
          links={[{ label: 'View Program', url: '/en/training-program', icon: 'arrow-right' }]}
        />
        <BlogCard 
          title="Favorite Books & Notes"
          tag="Learning"
          meta="Classics · Professional"
          description="A curated list of the books that have shaped my thinking the most."
          links={[{ label: 'Open Library', url: '/en/books', icon: 'arrow-right' }]}
        />
        <BlogCard 
          title="Exercise Focus: Incline Press"
          tag="Training"
          meta="Technique · Data · Progression"
          description="Why the upper chest is important, and how my strength has progressed over the past year."
          links={[{ label: 'Read Deep Dive', url: '/en/exercises/incline-press', icon: 'arrow-right' }]}
        />
        <BlogCard 
          title="My Favorite Podcasts"
          tag="Inspiration"
          meta="Macro · Data · Humor"
          description="An overview of the best sources for knowledge and entertainment on the go."
          links={[{ label: 'See List', url: '/en/podcasts', icon: 'arrow-right' }]}
        />
      </div>
    </Section>

    <!-- ===================== -->
    <!-- ALL POSTS (DB) -->
    <!-- ===================== -->
    <Section id="latest">
      <div class="flex flex-wrap items-baseline justify-between gap-2 mb-4">
        <SectionHeading class="mb-0 text-xl font-bold">Latest Posts</SectionHeading>
        <p class="m-0 text-dim text-sm opacity-80">Directly from the database.</p>
      </div>

      <div class="posts-grid">
        {posts.map(p => (
            <BlogCard 
              title={p.title}
              tag={p.category || "Blog"}
              meta={new Date(p.created_at).toLocaleDateString('en-US')}
              description={p.excerpt || ""}
              links={[{ text: 'Read more', url: `/en/blog/${p.slug}`, icon: 'arrow-right' }]}
            />
        ))}
        {posts.length === 0 && (
            <div class="col-span-3 text-center py-12 border border-white/5 rounded-lg bg-white/5">
                <i class="fa-solid fa-feather text-4xl text-dim mb-4 opacity-50"></i>
                <p class="text-dim">No posts found. Check your database.</p>
            </div>
        )}
      </div>
    </Section>

    <!-- CTA -->
    <Section>
      <ContactCard 
        variant="glass" 
        title="Suggestions for posts?" 
        text="If you have a topic you'd like me to write about, please feel free to reach out."
        action="contact"
      />
    </Section>

  </main>
</Layout>
