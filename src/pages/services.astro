}

.clean-list {
  margin: 0;
  padding-left: 18px;
}

/* Grid */
.grid-2 {
  display: grid;
  grid-template-columns: repeat(2, minmax(0, 1fr));
  gap: 14px;
  margin-bottom: 14px;
}

/* Service blocks */
.service-list {
  display: flex;
  flex-direction: column;
  gap: 14px;
}

.service {
  border: 1px solid var(--glass-border);
  border-radius: 14px;
  padding: 14px;
  background: rgba(255, 255, 255, 0.02);
}

.service h3 {
  margin: 0 0 8px;
  font-size: 15px;
}

.steps {
  margin: 0;
  padding-left: 18px;
}

.tool-grid {
  display: grid;
  grid-template-columns: repeat(2, minmax(0, 1fr));
  gap: 12px;
}

.tool {
  border: 1px solid var(--glass-border);
