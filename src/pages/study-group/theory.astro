---
import StudyGroupLayout from '../../layouts/study-group/StudyGroupLayout.astro';

export const prerender = false;
---

<StudyGroupLayout title="Den Røde Tråd" activePage="theory">
    <div class="space-y-32">
        <div class="space-y-4">
            <h2 class="text-6xl font-black italic tracking-tighter text-white uppercase">Den Røde <br/> <span class="text-red-600">Tråd</span></h2>
            <p class="text-white/40 text-lg max-w-lg leading-relaxed italic">
                Visuel kortlægning af den teoretiske infrastruktur. Her sikrer vi sammenhængen mellem data, model og virkelighed.
            </p>
        </div>

        {/* Interactive-ish Mind Map */}
        <div class="bg-white/[0.02] border border-white/5 rounded-[64px] p-20 relative overflow-hidden min-h-[800px] flex items-center justify-center">
            <div class="absolute inset-0 opacity-10 pointer-events-none" style="background-image: radial-gradient(circle at 2px 2px, white 1px, transparent 0); background-size: 40px 40px;"></div>
            
            <div class="relative z-10 w-full max-w-4xl">
                {/* SVG Connections */}
                <svg class="absolute inset-0 w-full h-full pointer-events-none overflow-visible" xmlns="http://www.w3.org/2000/svg">
                    <line x1="50%" y1="50%" x2="20%" y2="25%" stroke="currentColor" class="text-red-600/30" stroke-width="2" />
                    <line x1="50%" y1="50%" x2="80%" y2="25%" stroke="currentColor" class="text-red-600/30" stroke-width="2" />
                    <line x1="50%" y1="50%" x2="20%" y2="75%" stroke="currentColor" class="text-red-600/30" stroke-width="2" />
                    <line x1="50%" y1="50%" x2="80%" y2="75%" stroke="currentColor" class="text-red-600/30" stroke-width="2" />
                </svg>

                {/* Core Node */}
                <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-64 h-64 bg-red-600 rounded-full flex flex-col items-center justify-center text-center p-8 shadow-glow-red z-20 group hover:scale-110 transition-transform cursor-pointer">
                    <i class="fa-solid fa-book-journal-whills text-4xl mb-4 text-white"></i>
                    <h3 class="text-lg font-black uppercase text-white leading-tight">Seminar- <br/> Opgaven</h3>
                    <p class="text-[9px] font-bold text-white/60 mt-2 uppercase tracking-widest italic">Hovedtese</p>
                </div>

                {/* Branch Nodes */}
                <div class="absolute top-[10%] left-[5%] w-56 p-8 bg-white/[0.03] border border-white/10 rounded-[32px] group hover:border-red-600/40 transition-all cursor-pointer">
                     <h4 class="text-red-600 font-black text-xs uppercase tracking-widest mb-2 italic">Teori A</h4>
                     <p class="text-white font-bold text-lg uppercase tracking-tight">Vækst- <br/> Modeller</p>
                     <p class="text-white/20 text-[10px] mt-4 italic leading-relaxed">Solow-Swan & Endogen vækst</p>
                </div>

                <div class="absolute top-[10%] left-[65%] w-56 p-8 bg-white/[0.03] border border-white/10 rounded-[32px] group hover:border-red-600/40 transition-all cursor-pointer">
                     <h4 class="text-red-600 font-black text-xs uppercase tracking-widest mb-2 italic">Data</h4>
                     <p class="text-white font-bold text-lg uppercase tracking-tight">DST & <br/> Micro-Data</p>
                     <p class="text-white/20 text-[10px] mt-4 italic leading-relaxed">Pani-baseret analyse (2010-2024)</p>
                </div>

                <div class="absolute top-[70%] left-[5%] w-56 p-8 bg-white/[0.03] border border-white/10 rounded-[32px] group hover:border-red-600/40 transition-all cursor-pointer">
                     <h4 class="text-red-600 font-black text-xs uppercase tracking-widest mb-2 italic">Metode</h4>
                     <p class="text-white font-bold text-lg uppercase tracking-tight">Synthetic <br/> Control</p>
                     <p class="text-white/20 text-[10px] mt-4 italic leading-relaxed">Kausal inferens via kontrafaktisk analyse</p>
                </div>

                <div class="absolute top-[70%] left-[65%] w-56 p-8 bg-white/[0.03] border border-white/10 rounded-[32px] group hover:border-red-600/40 transition-all cursor-pointer">
                     <h4 class="text-red-600 font-black text-xs uppercase tracking-widest mb-2 italic">Output</h4>
                     <p class="text-white font-bold text-lg uppercase tracking-tight">Politik- <br/> Implikationer</p>
                     <p class="text-white/20 text-[10px] mt-4 italic leading-relaxed">Anbefalinger til fremtidens reformer</p>
                </div>
            </div>
        </div>

        {/* Legend */}
        <section class="grid grid-cols-1 md:grid-cols-3 gap-8">
            {[
                { label: "Bekræftet Link", color: "bg-red-600" },
                { label: "Teoretisk Hypotese", color: "bg-white/20" },
                { label: "Mangler Data", color: "bg-yellow-500/50" }
            ].map(item => (
                <div class="flex items-center gap-4 px-8 py-6 bg-white/[0.02] border border-white/5 rounded-2xl">
                    <div class={`w-3 h-3 rounded-full ${item.color}`}></div>
                    <span class="text-[10px] font-black uppercase tracking-widest text-white/40">{item.label}</span>
                </div>
            ))}
        </section>
    </div>
</StudyGroupLayout>
