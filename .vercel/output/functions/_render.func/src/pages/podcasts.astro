---
import Layout from '@layouts/Layout.astro';
import Section from '@components/ui/Section.astro';
import Card from '@components/ui/Card.astro';
import Button from '@components/ui/Button.astro';
import Pill from '@components/ui/Pill.astro';
import SectionHeading from '@components/ui/SectionHeading.astro';
import ContactCard from '@components/common/ContactCard.astro';
import PodcastCard from '@components/resources/PodcastCard.astro';
import podcastsData from '@data/resources/podcasts.json';
---

<Layout 
  title="Anton Meier Ebsen Jørgensen – Favoritpodcasts" 
  description="En kurateret liste over mine favoritpodcasts – makro, data, træning, humor og refleksion."
  bodyClass="podcasts-page"
>

  <style>
    .podcasts-wrap {
      max-width: 1200px;
      margin: 24px auto;
      padding: 0 16px 32px;
    }

    .hero-grid {
      display: grid;
      grid-template-columns: minmax(0, 1.6fr) minmax(0, 1fr);
      gap: 22px;
      align-items: start;
    }

    .pod-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
      gap: 16px;
      margin-top: 16px;
    }

    @media (max-width: 980px) {
      .hero-grid {
        grid-template-columns: 1fr;
      }
    }
  </style>

  <main class="podcasts-wrap">

    <!-- HERO -->
    <Section>
      <div class="hero-grid">
        <Card variant="glass" class="p-8">
          <p class="text-xs font-extrabold uppercase tracking-widest text-dim mb-3">Podcasts</p>
          <h1 class="text-4xl font-bold leading-tight mb-5">Favoritter jeg faktisk hører igen</h1>
          <p class="text-lg text-dim mb-6">
            En kurateret liste opdelt efter tema. Jeg opdaterer løbende.
          </p>
  
          <div class="flex flex-wrap gap-2 mb-8" aria-label="Kategorier">
            <Pill variant="accent">Makro</Pill>
            <Pill variant="accent">Data/Tech</Pill>
            <Pill variant="accent">Træning</Pill>
            <Pill variant="accent">Humor</Pill>
            <Pill variant="accent">Refleksion</Pill>
          </div>
  
          <div class="flex flex-wrap gap-3">
            <Button href="#cat-makro">Se listen</Button>
            <Button href="/contact" variant="ghost">Foreslå en podcast</Button>
          </div>
        </Card>
  
        <div class="hidden md:block">
          <Card variant="glass" class="p-6">
            <SectionHeading>Hvordan jeg vælger</SectionHeading>
            <ul class="list-none p-0 m-0 space-y-2 text-sm text-dim">
              <li>Høj signalværdi (ikke bare “snak”)</li>
              <li>Gode gæster / konkret viden</li>
              <li>Kan tåle genlyt</li>
            </ul>
          </Card>
        </div>
      </div>
    </Section>

    <!-- KATEGORI: MAKRO -->
    <Section id="cat-makro">
      <Card variant="bordered" class="p-6">
        <SectionHeading>Makro & pengepolitik</SectionHeading>
        <div class="pod-grid">
          {podcastsData.macro.map(pod => (
            <PodcastCard 
               title={pod.title}
               tag={pod.tag}
               reason={pod.reason}
               description={pod.description}
               links={pod.links || []}
            />
          ))}
        </div>
      </Card>
    </Section>

    <Section>
      <ContactCard 
        variant="glass" 
        title="Vil du se flere?" 
        text="Kontakt mig eller gå tilbage til oversigten."
        action="contact"
      />
    </Section>

  </main>
</Layout>
