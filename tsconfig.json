{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@components/*": [
                "src/components/*"
            ],
            "@layouts/*": [
                "src/layouts/*"
            ],
            "@data/*": [
                "src/data/*"
            ],
            "@styles/*": [
                "src/styles/*"
            ],
            "@assets/*": [
                "src/assets/*"
            ],
            "@i18n/*": [
                "src/i18n/*"
            ],
            "@lib/*": [
                "src/lib/*"
            ],
            "@types/*": [
                "src/types/*"
            ]
        }
    },
    "extends": "astro/tsconfigs/strict",
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.tsx",
        "src/**/*.astro"
    ]
}