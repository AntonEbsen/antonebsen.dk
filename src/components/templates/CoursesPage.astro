---
import Layout from '@layouts/BaseLayout.astro';
import Section from '@components/ui/Section.astro';
import Card from '@components/ui/Card.astro';
import Button from '@components/ui/Button.astro';
import Pill from '@components/ui/Pill.astro';
import SectionHeading from '@components/ui/SectionHeading.astro';
import ContactCard from '@components/common/ContactCard.astro';
import { getEntry } from 'astro:content';

interface Props {
  lang: 'da' | 'en';
}

const { lang } = Astro.props;
const isDa = lang === 'da';

// 1. UI Content
const pageEntry = await getEntry('pages', `${lang}/courses`);
if (!pageEntry) throw new Error(`Missing pages entry for ${lang}/courses`);
const content = pageEntry.data; 

// 2. CV Data
const cvEntry = await getEntry('cv', lang);
if (!cvEntry) throw new Error(`Missing cv entry for ${lang}`);
const cv = cvEntry.data;

// Separate courses into Uni and Other
const uniCourses = cv.courses.filter(c => c.institution.includes("Copenhagen") || c.institution.includes("Københavns Universitet") || c.institution === "UCPH" || c.institution === "KU");
const otherCourses = cv.courses.filter(c => !uniCourses.includes(c));
---

<Layout 
  title={content.title}
  description={content.desc}
  bodyClass="courses-page"
>
  <style>
    .courses-wrap {
      max-width: 1200px;
      margin: 24px auto;
      padding: 0 16px 32px;
    }

    .hero-grid {
      display: grid;
      grid-template-columns: minmax(0, 1.5fr) minmax(0, 1fr);
      gap: 22px;
      align-items: start;
    }

    .courses-grid {
      display: grid;
      grid-template-columns: repeat(3, minmax(0,1fr));
      gap: 14px;
      margin-top: 12px;
    }

    @media (max-width: 980px) {
      .hero-grid, .courses-grid { 
        grid-template-columns: 1fr; 
      }
    }
  </style>

  <main class="courses-wrap">

    <Section>
      <div class="hero-grid">
        <Card variant="glass" class="p-8">
          <p class="text-xs font-extrabold uppercase tracking-wider text-dim mb-3">{isDa ? 'Kurser' : 'Courses'}</p>
          <h1 class="text-4xl font-bold leading-tight mb-4">{content.hero.title}</h1>
          <p class="text-lg leading-relaxed text-dim mb-6">
            {content.hero.text}
          </p>
  
          <div class="flex flex-wrap gap-3">
            <Button href="#university">{content.hero.buttons.uni}</Button>
            <Button href="#programming" variant="ghost">{content.hero.buttons.prog}</Button>
          </div>
        </Card>
  
        <div class="hidden md:block">
          <Card variant="glass" class="p-6">
            <SectionHeading>{content.help.title}</SectionHeading>
            <p class="text-[13px] text-dim mb-4 opacity-70 leading-relaxed">
              {content.help.text}
            </p>
          </Card>
        </div>
      </div>
    </Section>

    <Section id="university">
       <Card variant="default" class="p-6">
         <SectionHeading>{content.grid.university.title}</SectionHeading>
         <div class="courses-grid">
           {uniCourses.map(course => (
              <Card variant="glass" class="p-4 flex flex-col h-full">
                <div class="flex justify-between items-start mb-2 gap-2">
                  <h3 class="font-bold text-base leading-tight">{course.title}</h3>
                  <Pill variant="accent" class="shrink-0">{course.tag}</Pill>
                </div>
                <p class="text-sm text-dim opacity-80 mb-4 flex-grow">{course.description}</p>
                {course.links && course.links.length > 0 && (
                  <div class="flex flex-wrap gap-2 mt-auto">
                    {course.links.map(l => (
                      <a href={l.href} class="text-xs font-bold text-accent no-underline hover:text-white transition-colors">{l.text} â†’</a>
                    ))}
                  </div>
                )}
              </Card>
           ))}
           {uniCourses.length === 0 && <p class="text-dim text-sm italic">{content.grid.university.empty}</p>}
         </div>
       </Card>
    </Section>

    <Section id="programming">
       <Card variant="bordered" class="p-6">
         <SectionHeading>{content.grid.programming.title}</SectionHeading>
         <div class="courses-grid">
           {otherCourses.map(course => (
              <Card variant="glass" class="p-4 flex flex-col h-full">
                <div class="flex justify-between items-start mb-2 gap-2">
                  <h3 class="font-bold text-base leading-tight">{course.title}</h3>
                  <Pill variant="accent" class="shrink-0">{course.tag}</Pill>
                </div>
                <p class="text-xs text-dim mb-2">{course.institution}</p>
                <p class="text-sm text-dim opacity-80 mb-4 flex-grow">{course.description}</p>
                {course.links && course.links.length > 0 && (
                  <div class="flex flex-wrap gap-2 mt-auto">
                    {course.links.map(l => (
                      <a href={l.href} class="text-xs font-bold text-accent no-underline hover:text-white transition-colors">{l.text} â†’</a>
                    ))}
                  </div>
                )}
              </Card>
           ))}
         </div>
       </Card>
    </Section>

    <Section>
      <ContactCard 
        variant="glass"
        title={content.contact.title}
        text={content.contact.text}
        action="contact"
      />
    </Section>

  </main>
</Layout>



