---
import Layout from '@layouts/BaseBaseBaseLayout.astro';
import { getEntry } from 'astro:content';

interface Props {
  lang: 'da' | 'en';
}

const { lang } = Astro.props;
const entry = await getEntry('pages', `${lang}/guestbook`);

if (!entry) {
  throw new Error(`Could not find content for ${lang}/guestbook`);
}

const content = entry.data;

// For date locale
const dateLocale = lang === 'da' ? 'da-DK' : 'en-US';
const homeLink = lang === 'en' ? '/' : '/'; // Keeping simple
---

<Layout 
  title={content.title} 
  description={content.description}
  bodyClass={content.bodyClass}
>
    <!-- Use inline styles or global CSS, but here we keep using Tailwind classes -->
    <main class="max-w-4xl mx-auto p-6 md:p-12 min-h-screen font-mono text-gold-50 bg-black">
        
        <!-- HEADER -->
        <header class="mb-12 text-center">
            <h1 class="text-4xl md:text-6xl font-bold mb-4 text-gold-400">
                {content.header.title}
            </h1>
            <div class="h-1 w-24 bg-gold-500 mx-auto mb-6"></div>
            <p class="text-gray-400 max-w-lg mx-auto">
                {content.header.lead}
                <br><span class="text-xs opacity-50">{content.header.approval}</span>
            </p>
        </header>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
            
            <!-- SIGN FORM -->
            <section>
                <div class="border border-gray-800 bg-gray-900/50 p-6 rounded-lg backdrop-blur-sm shadow-[0_0_20px_rgba(0,0,0,0.5)] sticky top-24">
                    <h2 class="text-xl font-bold text-gold-400 mb-6 flex items-center">
                        <i class="fa-solid fa-pen-nib mr-3"></i> {content.form.title}
                    </h2>
                    
                    <form id="sign-form" class="space-y-4" 
                          data-btn-submit={content.form.btnSubmit}
                          data-btn-sending={content.form.btnSending}
                          data-error={content.form.error}
                    >
                        <div>
                            <label class="block text-xs uppercase text-gray-500 mb-1">{content.form.nameLabel}</label>
                            <input type="text" id="g-name" required class="w-full bg-black border border-gray-700 p-3 rounded text-gold-100 focus:border-gold-500 focus:outline-none transition-colors" placeholder={content.form.namePlaceholder} />
                        </div>
                        
                        <div>
                            <label class="block text-xs uppercase text-gray-500 mb-1">{content.form.messageLabel}</label>
                            <textarea id="g-message" required rows="4" class="w-full bg-black border border-gray-700 p-3 rounded text-gold-100 focus:border-gold-500 focus:outline-none transition-colors" placeholder={content.form.messagePlaceholder}></textarea>
                        </div>

                        <button type="submit" class="w-full bg-white text-black font-bold py-3 rounded hover:bg-gray-200 transform hover:scale-[1.02] transition-all shadow-lg">
                            {content.form.btnSubmit}
                        </button>
                        <p id="form-feedback" class="text-center text-xs text-green-400 hidden mt-2">
                            {content.form.feedback}
                        </p>
                    </form>
                </div>
            </section>

            <!-- MESSAGES FEED -->
            <section>
                <h2 class="text-xl font-bold text-gray-400 mb-6 flex items-center border-b border-gray-800 pb-2">
                    <i class="fa-solid fa-clock-rotate-left mr-3"></i> {content.feed.title}
                </h2>
                
                <div id="messages-feed" class="space-y-6" data-locale={dateLocale} data-error={content.feed.error}>
                    <!-- LOADING STATE -->
                    <div class="animate-pulse flex space-x-4">
                        <div class="flex-1 space-y-4 py-1">
                            <div class="h-4 bg-gray-800 rounded w-3/4"></div>
                            <div class="space-y-2">
                                <div class="h-4 bg-gray-800 rounded"></div>
                                <div class="h-4 bg-gray-800 rounded w-5/6"></div>
                            </div>
                        </div>
                    </div>
                </div>

                <div id="empty-state" class="hidden text-center py-12 text-gray-600">
                    <p>{content.feed.empty}</p>
                </div>
            </section>

        </div>

        <div class="mt-24 text-center">
            <a href={homeLink} class="text-gray-500 hover:text-gold-400 text-sm transition-colors">{content.ui.back}</a>
        </div>

    </main>
</Layout>

<script>
    async function loadGuestbook() {
        const feed = document.getElementById('messages-feed');
        if (!feed) return;
        
        const locale = feed.getAttribute('data-locale') || 'da-DK';
        const errorMsg = feed.getAttribute('data-error') || 'Error loading guestbook';

        try {
            const res = await fetch('/api/guestbook');
            const data = await res.json();
            
            feed.innerHTML = '';
            
            if (data.length === 0) {
                document.getElementById('empty-state')?.classList.remove('hidden');
                return;
            } else {
                 document.getElementById('empty-state')?.classList.add('hidden');
            }

            data.forEach((msg: any) => {
                const date = new Date(msg.created_at).toLocaleDateString(locale, { year: 'numeric', month: 'short', day: 'numeric' });
                
                const card = document.createElement('div');
                card.className = "group relative border-l-2 border-gray-800 pl-6 pb-2 hover:border-gold-500/50 transition-colors";
                card.innerHTML = `
                    <div class="absolute -left-[9px] top-0 w-4 h-4 rounded-full bg-black border-2 border-gray-800 group-hover:border-gold-500 transition-colors"></div>
                    <div class="mb-2">
                        <span class="font-bold text-gold-200 text-lg">${safeHTML(msg.name)}</span>
                        <span class="text-xs text-gray-600 ml-2 font-mono">${date}</span>
                    </div>
                    <p class="text-gray-400 leading-relaxed font-serif italic">"${safeHTML(msg.message)}"</p>
                `;
                feed.appendChild(card);
            });

        } catch (err) {
            console.error(err);
            feed.innerHTML = `<p class="text-red-500 text-sm">${errorMsg}</p>`;
        }
    }
    
    function safeHTML(str: string) {
        const div = document.createElement('div');
        div.textContent = str;
        return div.innerHTML;
    }

    const form = document.getElementById('sign-form');
    form?.addEventListener('submit', async (e) => {
        e.preventDefault();
        const f = e.currentTarget as HTMLFormElement;
        const btn = f.querySelector('button');
        if(!btn) return;
        
        const originalText = btn.innerText;
        const sendingText = f.getAttribute('data-btn-sending') || "Sending...";
        const errorText = f.getAttribute('data-error') || "Error";

        btn.disabled = true;
        btn.innerText = sendingText;

        const name = (document.getElementById('g-name') as HTMLInputElement).value;
        const message = (document.getElementById('g-message') as HTMLTextAreaElement).value;

        try {
            await fetch('/api/guestbook', {
                method: 'POST',
                body: JSON.stringify({ name, message })
            });
            
            f.reset();
            const feedback = document.getElementById('form-feedback');
            if(feedback) {
                feedback.classList.remove('hidden');
                setTimeout(() => feedback.classList.add('hidden'), 5000);
            }

        } catch (err) {
            alert(errorText);
        } finally {
            btn.disabled = false;
            btn.innerText = originalText;
        }
    });

    // Init
    loadGuestbook();
</script>



