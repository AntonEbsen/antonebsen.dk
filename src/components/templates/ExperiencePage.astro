---
import Layout from '@layouts/BaseLayout.astro';
import Card from '@components/ui/Card.astro';
import Button from '@components/ui/Button.astro';
import Pill from '@components/ui/Pill.astro';
import SectionHeading from '@components/ui/SectionHeading.astro';
import Section from '@components/ui/Section.astro';
import ExperienceCard from '@components/experience/ExperienceCard.astro';
import ContactCard from '@components/common/ContactCard.astro';
import { getEntry } from 'astro:content';

interface Props {
  lang: 'da' | 'en';
}

const { lang } = Astro.props;
const isDa = lang === 'da';

// 1. UI Content
const pageEntry = await getEntry('pages', `${lang}/experience`);
if (!pageEntry) throw new Error(`Missing pages entry for ${lang}/experience`);
const content: any = pageEntry.data;

// 2. CV Data
const cvEntry = await getEntry('cv', lang);
if (!cvEntry) throw new Error(`Missing cv entry for ${lang}`);
const cv = cvEntry.data;
const experience = cv.experience || [];

const statsLink = isDa ? '/kursusstatistik' : '/en/course-stats';
const contactLink = isDa ? '/contact' : '/en/contact';

---

<Layout 
  title={content.title}
  description={content.desc}
  bodyClass="experience-page"
>
  <style>
    .experience-wrap {
      max-width: 1200px;
      margin: 24px auto;
      padding: 0 16px 32px;
    }
    
    .hero-grid {
      display: grid;
      grid-template-columns: minmax(0, 1.6fr) minmax(0, 1fr);
      gap: 22px;
      align-items: start;
    }

    .roles-grid {
      display: grid;
      grid-template-columns: repeat(3, minmax(0, 1fr));
      gap: 14px;
      margin-top: 12px;
    }

    .process-grid {
      display: grid;
      grid-template-columns: repeat(4, minmax(0, 1fr));
      gap: 14px;
      margin-top: 12px;
    }

    @media (max-width: 980px) {
      .hero-grid, .roles-grid, .process-grid { 
        grid-template-columns: 1fr; 
      }
    }
  </style>

  <main class="experience-wrap">

    <!-- HERO -->
    <Section>
      <div class="hero-grid">
        <Card variant="glass" class="p-6">
          <SectionHeading class="text-dim mb-3">{isDa ? 'Erhvervserfaring' : 'Experience'}</SectionHeading>
          <h1 class="text-4xl leading-tight mb-4 font-bold">{content.hero.title}</h1>
          <p class="text-lg leading-relaxed text-dim mb-6">
            {content.hero.text}
          </p>
  
          <div class="flex flex-wrap gap-2 mb-6" aria-label="Nøglekompetencer">
            {content.hero.pills.map(p => <Pill variant="accent">{p}</Pill>)}
          </div>
  
          <div class="flex flex-wrap gap-3">
            <Button href="#roles"><i class="fa-solid fa-briefcase mr-2"></i> {content.hero.buttons.role}</Button>
            <Button href={statsLink} variant="ghost"><i class="fa-solid fa-chart-column mr-2"></i> {content.hero.buttons.stats}</Button>
            <Button href={contactLink} variant="ghost"><i class="fa-solid fa-envelope mr-2"></i> {content.hero.buttons.contact}</Button>
          </div>
        </Card>
  
        <div class="hidden md:block">
          <Card variant="glass" class="p-4">
            <SectionHeading>{content.short.title}</SectionHeading>
            <ul class="list-none p-0 m-0 space-y-2 text-dim text-[14px]">
              {content.short.list.map(li => <li>{li}</li>)}
            </ul>
          </Card>
        </div>
      </div>
    </Section>

    <!-- ROLLER -->
    <Section id="roles" aria-label="Roller">
      <Card variant="bordered" class="p-6">
        <SectionHeading>{content.roles.title}</SectionHeading>
        <div class="roles-grid">
          {experience.map((role) => (
            <ExperienceCard 
              title={role.title}
              organization={role.organization}
              location={role.location}
              period={role.period}
              type={role.type}
              description={role.description}
              highlights={role.highlights}
              links={role.links}
            />
          ))}
          {experience.length === 0 && <p class="text-dim">{content.roles.empty}</p>}
        </div>
      </Card>
    </Section>

    <!-- HOW I WORK -->
    <Section>
      <Card variant="bordered" class="p-6">
        <SectionHeading>{content.work.title}</SectionHeading>

        <div class="process-grid">
          {content.work.steps.map((item) => (
            <Card variant="bordered" class="p-4 bg-glass">
              <h3 class="text-[15px] font-bold m-0 mb-2">{item.step}</h3>
              <p class="text-[13px] text-dim m-0 opacity-80 leading-relaxed">{item.desc}</p>
            </Card>
          ))}
        </div>
      </Card>
    </Section>

    <!-- CTA -->
    <Section>
      <ContactCard 
        variant="default" 
        title={content.cta.title} 
        text={content.cta.text}
        action="contact"
      />
    </Section>

  </main>
</Layout>



