---
import Layout from '@layouts/Layout.astro';
import Section from '@components/ui/Section.astro';
import Card from '@components/ui/Card.astro';
import SectionHeading from '@components/ui/SectionHeading.astro';
import ContactCard from '@components/common/ContactCard.astro';
---

<Layout 
  title="Anton Meier Ebsen Jørgensen – Publications & Notes" 
  description="Publications, working notes, and short one-pagers on economics, data, and models."
  bodyClass="notes-page"
>
  <style>
    .notes-wrap {
      max-width: 1200px;
      margin: 24px auto;
      padding: 0 16px 32px;
    }
    
    .hero-grid {
      display: grid;
      grid-template-columns: minmax(0, 1.6fr) minmax(0, 1fr);
      gap: 22px;
      align-items: start;
    }

    .notes-grid {
      display: grid;
      grid-template-columns: repeat(3, minmax(0, 1fr));
      gap: 14px;
      margin-top: 12px;
    }

    @media (max-width: 980px) {
      .hero-grid, .notes-grid { 
        grid-template-columns: 1fr; 
      }
    }
  </style>

  <main class="notes-wrap">

    <Section class="mb-12">
      <div class="hero-grid">
        <Card variant="glass" class="p-8">
          <p class="text-xs font-bold uppercase tracking-widest text-accent mb-3">Publications / Notes</p>
          <h1 class="text-4xl font-bold leading-tight mb-4">Short writeups & materials</h1>
          <p class="text-lg text-dim">
            Here I collect things that are more "archive and reference" than blog posts: one-pagers, slides, and working notes.
          </p>
        </Card>
      </div>
    </Section>

    <Section id="noter" class="mb-20">
      <Card variant="bordered" class="p-6">
        <SectionHeading>Notes</SectionHeading>
        <div class="notes-grid">
          <Card variant="glass" class="p-6">
             <h3 class="font-bold mb-2">Template: Data → Delivery</h3>
             <p class="text-sm text-dim mb-4">A simple structure I use for analysis projects.</p>
             <a href="#" class="text-accent font-bold">Read note →</a>
          </Card>
        </div>
      </Card>
    </Section>

    <Section>
        <ContactCard />
    </Section>

  </main>
</Layout>
