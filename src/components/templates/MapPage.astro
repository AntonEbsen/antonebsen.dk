---
import Layout from '@layouts/Layout.astro';
import { getEntry } from 'astro:content';

interface Props {
  lang: 'da' | 'en';
}

const { lang } = Astro.props;
const entry = await getEntry('pages', `${lang}/map`);

if (!entry) {
  throw new Error(`Could not find content for ${lang}/map`);
}

const content = entry.data;
---

<Layout 
  title={content.title} 
  description={content.description}
  bodyClass={content.bodyClass}
>
  <!-- Page specific CSS and Logic -->
  <style>
    .map-wrap {
      max-width: 1200px;
      margin: 3rem auto;
      padding: 0 1.5rem;
    }
    
    .card {
      background: rgba(255, 255, 255, 0.03);
      border: 1px solid rgba(255, 255, 255, 0.1);
      border-radius: 16px;
      padding: 2.5rem;
      margin-bottom: 2rem;
      backdrop-filter: blur(10px);
    }
    
    .hero {
      display: grid;
      gap: 2rem;
    }
    
    @media (min-width: 768px) {
      .hero { grid-template-columns: 1.5fr 1fr; }
    }
    
    .eyebrow {
      text-transform: uppercase;
      letter-spacing: 0.05em;
      font-size: 0.85rem;
      color: var(--accent);
      margin-bottom: 1rem;
      font-weight: 700;
    }
    
    h1 {
      font-size: 3rem;
      font-weight: 800;
      margin-bottom: 1.5rem;
      line-height: 1.1;
    }
    
    .lead {
      font-size: 1.1rem;
      color: rgba(255, 255, 255, 0.8);
      line-height: 1.6;
      margin-bottom: 0;
    }

    .section-title {
      font-size: 1.2rem;
      font-weight: 700;
      margin-bottom: 1rem;
    }
    
    .muted {
      color: rgba(255, 255, 255, 0.6);
    }
    .small { font-size: 0.9rem; }
    
    /* Controls */
    .controls {
      display: flex;
      flex-wrap: wrap;
      align-items: center;
      justify-content: space-between;
      gap: 1rem;
      padding: 1.5rem 2.5rem; /* slimmer */
    }
    
    .filters {
      display: flex;
      gap: 0.5rem;
      flex-wrap: wrap;
    }
    
    .chip {
      background: transparent;
      border: 1px solid rgba(255, 255, 255, 0.15);
      color: rgba(255, 255, 255, 0.8);
      padding: 0.5rem 1rem;
      border-radius: 99px;
      cursor: pointer;
      font-size: 0.9rem;
      transition: all 0.2s;
    }
    
    .chip:hover, .chip.is-active {
      background: var(--accent);
      border-color: var(--accent);
      color: #000;
      font-weight: 600;
    }
    
    /* Layout: Map + List */
    .layout {
      display: grid;
      gap: 2rem;
      grid-template-columns: 1fr;
    }
    
    @media (min-width: 900px) {
      .layout { grid-template-columns: 2fr 1fr; }
    }
    
    .map-card {
      padding: 0; /* Map uses full card */
      overflow: hidden; 
      height: 500px;
    }
    
    .map {
      width: 100%;
      height: 100%;
    }
    
    .list-card {
      height: 500px;
      overflow-y: auto;
      display: flex;
      flex-direction: column;
    }
    
    .place-list {
      display: flex;
      flex-direction: column;
      gap: 0.5rem;
    }
    
    .place-row {
      display: flex;
      align-items: center;
      justify-content: space-between;
      background: rgba(255, 255, 255, 0.02);
      border: 1px solid rgba(255, 255, 255, 0.05);
      padding: 0.75rem 1rem;
      border-radius: 8px;
      cursor: pointer;
      text-align: left;
      width: 100%;
      transition: all 0.2s;
    }
    
    .place-row:hover {
      background: rgba(255, 255, 255, 0.05);
      border-color: var(--accent);
    }
    
    .row-title {
      font-weight: 600;
      font-size: 0.95rem;
      color: #fff;
    }
    .row-badge {
      font-size: 0.7rem;
      text-transform: uppercase;
      background: rgba(255, 255, 255, 0.1);
      padding: 2px 6px;
      border-radius: 4px;
    }

    /* Leaflet Popup Styling Override */
    :global(.leaflet-popup-content-wrapper) {
      background: #1a1a1a;
      color: #fff;
      border: 1px solid var(--accent);
      border-radius: 8px;
    }
    :global(.leaflet-popup-tip) {
      background: var(--accent);
    }
    :global(.leaflet-popup-content) {
      margin: 12px;
      line-height: 1.5;
    }
    .badge {
      background: var(--accent);
      color: #000;
      font-size: 0.7rem;
      padding: 1px 5px;
      border-radius: 3px;
      margin-left: 6px;
      text-transform: uppercase;
      font-weight: 700;
    }
    .popup-meta {
      font-size: 0.8rem;
      opacity: 0.7;
      margin-bottom: 4px;
    }
    .popup-link {
      color: var(--accent);
      font-size: 0.85rem;
      text-decoration: none;
      font-weight: 600;
    }
  </style>
  <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY=" crossorigin="" slot="head" />
  
  <script is:inline src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js" integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo=" crossorigin="" slot="head"></script>

  <main class="map-wrap" 
        data-msg-empty={content.list.empty}
        data-msg-error={content.list.error}
        data-ui-open={content.ui.openMap}
        data-lbl-home={content.filters.options.home}
        data-lbl-travel={content.filters.options.travel}
        data-lbl-study={content.filters.options.study}
        data-lbl-work={content.filters.options.work}
  >

    <!-- HERO -->
    <section class="card hero">
      <div>
        <p class="eyebrow">{content.hero.eyebrow}</p>
        <h1>{content.hero.title}</h1>
        <p class="lead">
          {content.hero.lead}
        </p>
      </div>

      <div class="hero-side">
        <div class="mini-card">
          <h2 class="section-title">{content.filters.title}</h2>
          <p class="muted small" style="margin:0;">
            {content.filters.text}
          </p>
        </div>
      </div>
    </section>

    <!-- CONTROLS -->
    <section class="card controls" aria-label={content.filters.title}>
      <div class="filters" role="tablist" aria-label="Categories">
        <button class="chip is-active" data-filter="all" role="tab" aria-selected="true">{content.filters.options.all}</button>
        <button class="chip" data-filter="hjem" role="tab" aria-selected="false">{content.filters.options.home}</button>
        <button class="chip" data-filter="rejser" role="tab" aria-selected="false">{content.filters.options.travel}</button>
        <button class="chip" data-filter="studier" role="tab" aria-selected="false">{content.filters.options.study}</button>
        <button class="chip" data-filter="arbejde" role="tab" aria-selected="false">{content.filters.options.work}</button>
      </div>

      <div class="hint muted small">
        {content.filters.hint}
      </div>
    </section>

    <!-- MAP + LIST -->
    <section class="layout">
      <section class="card map-card" aria-label="Map">
        <div id="map" class="map" role="application" aria-label="Interactive Map"></div>
      </section>

      <aside class="card list-card" aria-label={content.list.title}>
        <h2 class="section-title">{content.list.title}</h2>
        <div id="placeList" class="place-list"></div>
      </aside>
    </section>

  </main>

  <script is:inline>
    document.addEventListener("DOMContentLoaded", () => {
      // ===== 1) Data Fetching =====
      let places = [];
      const wrap = document.querySelector('.map-wrap');
      const MSG = {
          empty: wrap.dataset.msgEmpty || 'Map empty',
          error: wrap.dataset.msgError || 'Map error',
          open: wrap.dataset.uiOpen || 'Open',
          lbl: {
              home: wrap.dataset.lblHome || 'Home',
              travel: wrap.dataset.lblTravel || 'Travel',
              study: wrap.dataset.lblStudy || 'Study',
              work: wrap.dataset.lblWork || 'Work',
          }
      };

      async function loadPlaces() {
        try {
            const res = await fetch('/api/travel');
            const data = await res.json();
            
            // Transform DB data to Map format
            places = data.map(p => ({
                title: p.city,
                category: p.category || "rejser", // Use DB category or default to 'rejser'
                country: p.country,
                date: p.year ? p.year.toString() : "",
                lat: p.lat,
                lng: p.lng,
                note: p.notes || `Rejse til ${p.city}, ${p.country}`,
                link: `https://www.google.com/maps?q=${p.lat},${p.lng}`
            }));

            // Initial Render
            render("all");

        } catch (err) {
            console.error("Map Error:", err);
            document.getElementById("placeList").innerHTML = `<p class='muted small'>${MSG.error}</p>`;
        }
      }

      // ===== 2) Init map =====
      const map = L.map("map", { scrollWheelZoom: true }).setView([20, 0], 2); // World View

      // Dark Mode Tiles
      L.tileLayer("https://{s}.basemaps.cartocdn.com/dark_all/{z}/{x}/{y}{r}.png", {
        maxZoom: 19,
        attribution: '&copy; OpenStreetMap'
      }).addTo(map);

      // ===== 3) Markers + filtering =====
      const markersLayer = L.layerGroup().addTo(map);

      function badgeText(cat){
        const c = (cat || "").toLowerCase();
        if (c === "rejser") return MSG.lbl.travel;
        if (c === "hjem") return MSG.lbl.home;
        if (c === "studier") return MSG.lbl.study;
        if (c === "arbejde") return MSG.lbl.work;
        return c.charAt(0).toUpperCase() + c.slice(1);
      }

      function popupHTML(p){
        const safeTitle = p.title || "";
        const safeCountry = p.country || "";
        const safeNote  = p.note || "";
        const safeDate  = p.date || "";
        const safeLink  = p.link || "#";

        return `
          <div class="popup">
            <div class="popup-top">
              <strong>${safeTitle}, ${safeCountry}</strong>
              <span class="badge">${badgeText(p.category)}</span>
            </div>
            <div class="popup-meta">${safeDate}</div>
            <div class="popup-note">${safeNote}</div>
            <div style="margin-top:10px;">
              <a class="popup-link" href="${safeLink}" target="_blank" rel="noopener">${MSG.open}</a>
            </div>
          </div>
        `;
      }

      function render(filter){
        markersLayer.clearLayers();

        const list = document.getElementById("placeList");
        list.innerHTML = "";
        
        if (places.length === 0) {
            list.innerHTML = `<p class='muted small p-4'>${MSG.empty}</p>`;
            return;
        }

        const filtered = places.filter(p => filter === "all" ? true : p.category === filter);

        filtered.forEach((p) => {
          // Custom Icon could go here, using default for now
          const m = L.marker([p.lat, p.lng]).addTo(markersLayer);
          m.bindPopup(popupHTML(p));

          // List item
          const row = document.createElement("button");
          row.type = "button";
          row.className = "place-row";
          row.innerHTML = `
            <div class="row-left">
              <div class="row-title">${p.title}</div>
              <div class="row-meta muted small">${p.date || ""}</div>
            </div>
            <span class="row-badge">${badgeText(p.category)}</span>
          `;
          row.addEventListener("click", () => {
            map.setView([p.lat, p.lng], Math.max(map.getZoom(), 10), { animate: true });
            m.openPopup();
          });

          list.appendChild(row);
        });

        // Fit bounds if markers exist
        if (filtered.length > 1) {
          const bounds = L.latLngBounds(filtered.map(p => [p.lat, p.lng]));
          map.fitBounds(bounds, { padding: [30, 30] });
        } else if (filtered.length === 1) {
          map.setView([filtered[0].lat, filtered[0].lng], 8);
        }
      }

      // ===== 4) UI controls =====
      let activeFilter = "all";
      const chips = document.querySelectorAll(".chip");
      chips.forEach(btn => {
        btn.addEventListener("click", () => {
          chips.forEach(c => c.classList.remove("is-active"));
          btn.classList.add("is-active");

          activeFilter = btn.getAttribute("data-filter") || "all";
          render(activeFilter);
        });
      });

      // Start
      loadPlaces();
    });
  </script>
</Layout>
