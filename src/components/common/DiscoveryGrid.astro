---
interface Item {
  label: string;
  url: string;
  icon: string;
  description?: string;
}

interface Props {
  title: string;
  items: Item[];
}

const { title, items } = Astro.props;
import Card from '../ui/Card.astro';
import SectionHeading from '../ui/SectionHeading.astro';
---

<Card variant="glass" class="p-5 reveal reveal-fade">
  <SectionHeading>{title}</SectionHeading>
  <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-3">
    {items.map(item => (
      <a href={item.url} class="flex items-center gap-3 p-3.5 rounded-xl bg-white/5 hover:bg-white/10 border border-white/5 hover:border-accent/30 transition-all group no-underline relative overflow-hidden">
        <div class="w-10 h-10 rounded-lg bg-accent/10 flex items-center justify-center text-accent group-hover:scale-110 transition-transform flex-shrink-0">
          <i class={`fa-solid ${item.icon} text-base`}></i>
        </div>
        <div class="flex-1 min-w-0 pr-4">
          <span class="block text-[14px] font-bold text-white group-hover:text-accent transition-colors leading-tight mb-0.5">{item.label}</span>
          {item.description && <span class="block text-[10.5px] text-dim leading-snug opacity-80">{item.description}</span>}
        </div>
        <div class="absolute right-3 text-accent opacity-0 group-hover:opacity-100 translate-x-1 group-hover:translate-x-0 transition-all duration-300">
          <i class="fa-solid fa-chevron-right text-[10px]"></i>
        </div>
      </a>
    ))}
  </div>
</Card>
