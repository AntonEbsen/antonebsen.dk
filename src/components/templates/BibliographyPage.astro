---
import Layout from '@layouts/BaseLayout.astro';
import Section from '@components/ui/Section.astro';
import Card from '@components/ui/Card.astro';
import SectionHeading from '@components/ui/SectionHeading.astro';
import ContactCard from '@components/common/ContactCard.astro';

interface Props {
  lang: 'da' | 'en' | 'de';
  content: any;
}

const { lang, content } = Astro.props;
---

<Layout title={content.title} description={content.description} bodyClass="bibliography-page">
  <style>
    .biblio-wrap {
      max-width: 1000px;
      margin: 24px auto;
      padding: 0 16px 32px;
    }
    .hero-card {
        padding: 48px;
        margin-bottom: 32px;
    }
    .paper-card {
        margin-bottom: 16px;
        transition: transform 0.2s ease;
    }
    .paper-card:hover {
        transform: translateX(4px);
    }
    .paper-meta {
        font-size: 0.85rem;
        color: var(--accent);
        font-weight: 600;
        margin-bottom: 4px;
    }
    @media (max-width: 768px) {
      .hero-card { padding: 32px 24px; }
    }
  </style>

  <main class="biblio-wrap">
    <Section>
      <Card variant="glass" class="hero-card">
        <p class="text-xs font-bold uppercase tracking-widest text-dim mb-3">{content.hero.eyebrow}</p>
        <h1 class="text-4xl font-bold mb-4">{content.hero.title}</h1>
        <p class="text-lg text-dim">{content.hero.text}</p>
      </Card>
    </Section>

    <Section>
        {content.papers.map((paper: any) => (
            <Card variant="glass" class="paper-card p-6">
                <div class="flex flex-col md:flex-row md:items-start justify-between gap-4">
                    <div class="flex-1">
                        <div class="paper-meta">{paper.source} Â· {paper.author}</div>
                        <h2 class="text-xl font-bold mb-3">{paper.title}</h2>
                        <p class="text-dim text-sm italic mb-4">"{paper.notes}"</p>
                    </div>
                    <div>
                        <a href={paper.url} target="_blank" rel="noopener" class="text-sm border border-accent/30 rounded px-3 py-1 hover:bg-accent/10 transition-colors">
                            Read Paper <i class="fa-solid fa-arrow-right ml-1 text-xs"></i>
                        </a>
                    </div>
                </div>
            </Card>
        ))}
    </Section>

    <Section>
      <ContactCard />
    </Section>
  </main>
</Layout>
