---
import StudyGroupLayout from '../../layouts/study-group/StudyGroupLayout.astro';

export const prerender = false;
---

<StudyGroupLayout title="Protokollen" activePage="protocols">
    <div class="space-y-32">
        <div class="space-y-4">
            <h2 class="text-6xl font-black italic tracking-tighter text-white uppercase">Protokol- <br/> <span class="text-red-600">Arkivet</span></h2>
            <p class="text-white/40 text-lg max-w-lg leading-relaxed italic">
                De historiske optegnelser fra krigsrådets møder. Her fastholdes de store linjer og hvem der bringer kaffen.
            </p>
        </div>

        <div class="space-y-12">
            {[
                { 
                    date: "28. Januar 2026", 
                    location: "CSS Biblioteket", 
                    title: "Slaget om Metodeafsnittet",
                    decisions: ["Vi bruger 'Synthetic Control Method' til hovedanalysen.", "Deadline for udkast flyttes til mandag."],
                    actionPoints: [
                        { who: "Stalin", task: "Rense det store datasæt fra DST" },
                        { who: "Mao", task: "Skrive litteraturgennemgang for AI-delen" },
                        { who: "Che", task: "Finde kilder til institutionel teori" }
                    ],
                    img: "https://images.unsplash.com/photo-1517048676732-d65bc937f952?auto=format&fit=crop&q=80&w=600"
                },
                { 
                    date: "21. Januar 2026", 
                    location: "Grønjordskollegiet", 
                    title: "Teoretisk Mobilisering",
                    decisions: ["Seminaropgaven skal fokusere på vækstteori.", "Møder hver tirsdag kl. 10."],
                    actionPoints: [
                        { who: "Alle", task: "Læse Piketty kapitel 1-4" }
                    ],
                    img: "https://images.unsplash.com/photo-1522071820081-009f0129c71c?auto=format&fit=crop&q=80&w=600"
                }
            ].map(protocol => (
                <div class="bg-white/[0.02] border border-white/5 rounded-[48px] overflow-hidden group hover:border-red-600/20 transition-all shadow-xl">
                    <div class="grid grid-cols-1 lg:grid-cols-2">
                        <div class="p-12 space-y-10">
                            <div class="space-y-4">
                                <div class="flex items-center gap-4 text-red-600 text-[10px] font-black uppercase tracking-[0.2em]">
                                    <span>{protocol.date}</span>
                                    <span class="w-1 h-1 bg-white/10 rounded-full"></span>
                                    <span>{protocol.location}</span>
                                </div>
                                <h3 class="text-3xl font-black text-white uppercase tracking-tighter italic">{protocol.title}</h3>
                            </div>

                            <div class="space-y-8">
                                <div class="space-y-4">
                                    <h4 class="text-[10px] font-black uppercase tracking-widest text-white/20 italic">Centrale Beslutninger</h4>
                                    <ul class="space-y-3">
                                        {protocol.decisions.map(decision => (
                                            <li class="flex items-start gap-3 text-white/80 text-sm">
                                                <i class="fa-solid fa-check text-red-600 mt-1"></i>
                                                <span>{decision}</span>
                                            </li>
                                        ))}
                                    </ul>
                                </div>

                                <div class="space-y-4">
                                    <h4 class="text-[10px] font-black uppercase tracking-widest text-white/20 italic">Aktionspunkter</h4>
                                    <div class="grid grid-cols-1 gap-3">
                                        {protocol.actionPoints.map(ap => (
                                            <div class="flex items-center gap-4 p-4 bg-white/[0.03] border border-white/5 rounded-2xl">
                                                <span class="text-red-600 font-bold text-[10px] uppercase w-12">{ap.who}</span>
                                                <span class="text-white/60 text-xs italic">{ap.task}</span>
                                            </div>
                                        ))}
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="relative min-h-[400px]">
                            <img src={protocol.img} alt={protocol.title} class="absolute inset-0 w-full h-full object-cover grayscale group-hover:grayscale-0 transition-all duration-1000" />
                            <div class="absolute inset-0 bg-gradient-to-r from-[#0a0a0a] via-transparent to-transparent lg:block hidden"></div>
                            <div class="absolute bottom-8 right-8">
                                <span class="bg-red-600 text-white text-[10px] font-black px-4 py-2 rounded-full uppercase tracking-widest shadow-glow-red">Arkiveret</span>
                            </div>
                        </div>
                    </div>
                </div>
            ))}
            
            <button class="w-full py-20 border-2 border-dashed border-white/5 rounded-[48px] flex flex-col items-center justify-center gap-6 group hover:border-red-600/30 hover:bg-red-600/[0.02] transition-all">
                <div class="w-20 h-20 bg-white/5 rounded-full flex items-center justify-center text-white/10 group-hover:bg-red-600 group-hover:text-white transition-all">
                    <i class="fa-solid fa-pen-nib text-3xl"></i>
                </div>
                <div class="text-center">
                    <p class="text-xl font-black text-white/20 group-hover:text-white transition-all uppercase tracking-tighter italic">Skriv ny protokol</p>
                    <p class="text-[10px] text-white/5 uppercase mt-1 tracking-widest italic">Dokumentation af dagens fremskridt</p>
                </div>
            </button>
        </div>
    </div>
</StudyGroupLayout>
