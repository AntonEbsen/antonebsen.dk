---
import Layout from '../layouts/Layout.astro';
import Section from '../components/ui/Section.astro';
import Card from '../components/ui/Card.astro';
import Button from '../components/ui/Button.astro';
import ContactForm from '../components/contact/ContactForm.astro';
import contactData from '../data/contact.json';
---

<Layout 
  title="Anton Meier Ebsen Jørgensen – Kontakt" 
  description="Kontakt Anton Meier Ebsen Jørgensen – samarbejde, jobmuligheder, undervisning og spørgsmål."
  bodyClass="contact-page"
>

  <style>
    .contact-wrap {
      max-width: 1200px;
      margin: 24px auto;
      padding: 0 16px 32px;
    }

    .hero {
      display: grid;
      grid-template-columns: minmax(0, 1.6fr) minmax(0, 1fr);
      gap: 22px;
      align-items: start;
    }

    .contact-grid {
      display: grid;
      grid-template-columns: minmax(0, 1fr) minmax(0, 1fr);
      gap: 14px;
    }

    @media (max-width: 980px) {
      .hero, .contact-grid { 
        grid-template-columns: 1fr; 
      }
    }
  </style>

  <main class="contact-wrap">

    <!-- HERO -->
    <Section>
      <div class="hero">
        <Card variant="glass" class="p-8">
          <p class="text-xs font-extrabold uppercase tracking-widest text-[var(--text-dim)] mb-3">Kontakt</p>
          <h1 class="text-[clamp(28px,4vw,40px)] leading-[1.15] mb-5 font-bold">Kontakt mig</h1>
          <p class="text-[17px] leading-relaxed text-[var(--text-dim)] mb-6 opacity-90">
            Har du en mulighed, et samarbejde eller et spørgsmål? Skriv gerne — jeg svarer typisk inden for 24–48 timer på hverdage.
          </p>
  
          <div class="flex flex-wrap gap-3">
            <Button href={`mailto:${contactData.email}`}>Send mail</Button>
            <Button href="/cv" variant="ghost">Se CV</Button>
            <Button href="/portfolio" variant="ghost">Se portefølje</Button>
          </div>
        </Card>
  
        <div class="hidden md:block">
          <Card variant="glass" class="p-6">
            <h2 class="text-xs font-bold uppercase tracking-wider text-[var(--accent)] mb-4">Hurtigt overblik</h2>
            <ul class="list-none p-0 m-0 space-y-2 text-sm text-[var(--text-dim)] opacity-90">
              <li><strong>Lokation:</strong> København</li>
              <li><strong>Email:</strong> <a href={`mailto:${contactData.email}`} class="text-[var(--accent)] hover:text-white transition-colors">{contactData.email}</a></li>
              <li><strong>Telefon:</strong> <a href={`tel:${contactData.phone.replace(/ /g,'')}`} class="text-[var(--accent)] hover:text-white transition-colors">{contactData.phone}</a></li>
              <li><strong>LinkedIn:</strong> <a href={contactData.linkedin} target="_blank" rel="noopener" class="text-[var(--accent)] hover:text-white transition-colors">/in/antonebsen</a></li>
              <li><strong>GitHub:</strong> <a href={contactData.github} target="_blank" rel="noopener" class="text-[var(--accent)] hover:text-white transition-colors">AntonEbsen</a></li>
            </ul>
          </Card>
        </div>
      </div>
    </Section>

    <!-- GRID -->
    <Section>
      <div class="contact-grid" aria-label="Kontaktindhold">
  
        <!-- Left: details -->
        <Card variant="bordered" class="bg-[rgba(255,255,255,0.01)]!">
          <h2 class="text-xs font-bold uppercase tracking-wider text-[var(--accent)] mb-4">Kontaktoplysninger</h2>
  
          <div class="flex flex-col gap-3 mb-6">
            <div class="flex justify-between items-center gap-3 p-3 rounded-lg border border-[var(--glass-border)] bg-[rgba(255,255,255,0.02)]">
              <span class="font-bold text-sm text-[var(--text-dim)]">Email</span>
              <span class="text-sm"><a href={`mailto:${contactData.email}`} class="text-[var(--text)] hover:text-[var(--accent)] transition-colors decoration-none">{contactData.email}</a></span>
            </div>
  
            <div class="flex justify-between items-center gap-3 p-3 rounded-lg border border-[var(--glass-border)] bg-[rgba(255,255,255,0.02)]">
              <span class="font-bold text-sm text-[var(--text-dim)]">Telefon</span>
              <span class="text-sm"><a href={`tel:${contactData.phone.replace(/ /g,'')}`} class="text-[var(--text)] hover:text-[var(--accent)] transition-colors decoration-none">{contactData.phone}</a></span>
            </div>
  
            <div class="flex justify-between items-center gap-3 p-3 rounded-lg border border-[var(--glass-border)] bg-[rgba(255,255,255,0.02)]">
              <span class="font-bold text-sm text-[var(--text-dim)]">LinkedIn</span>
              <span class="text-sm">
                <a href={contactData.linkedin} target="_blank" rel="noopener" class="text-[var(--text)] hover:text-[var(--accent)] transition-colors decoration-none">linkedin.com/in/antonebsen</a>
              </span>
            </div>
  
            <div class="flex justify-between items-center gap-3 p-3 rounded-lg border border-[var(--glass-border)] bg-[rgba(255,255,255,0.02)]">
              <span class="font-bold text-sm text-[var(--text-dim)]">GitHub</span>
              <span class="text-sm">
                <a href={contactData.github} target="_blank" rel="noopener" class="text-[var(--text)] hover:text-[var(--accent)] transition-colors decoration-none">github.com/AntonEbsen</a>
              </span>
            </div>
          </div>
  
          <hr class="border-0 border-t border-[var(--glass-border)] my-6 w-full" />
  
          <h3 class="font-bold mb-3 text-[15px]">Hvad jeg typisk kan hjælpe med</h3>
          <ul class="list-none p-0 m-0 space-y-2 text-sm text-[var(--text-dim)] opacity-90 pl-3">
              {contactData.help.map(item => (
                  <li class="relative pl-4 before:content-['•'] before:absolute before:left-0 before:text-[var(--accent)]">{item}</li>
              ))}
          </ul>
        </Card>
  
        <!-- Right: form -->
        <Card variant="bordered" class="bg-[rgba(255,255,255,0.01)]!">
          <h2 class="text-xs font-bold uppercase tracking-wider text-[var(--accent)] mb-4">Send en besked</h2>
          <p class="text-[var(--text-dim)] text-sm opacity-70 mb-6">
            Udfyld formularen — eller send en mail direkte, hvis du foretrækker det.
          </p>
  
          <ContactForm />
        </Card>
  
      </div>
    </Section>

  </main>
</Layout>
