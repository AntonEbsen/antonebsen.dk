---
import Layout from '@layouts/Layout.astro';
import KPIGrid from '@components/stats/KPIGrid.astro';
import CourseStatTable from '@components/stats/CourseStatTable.astro';

const kpiData = [
  { title: "Tilfredshed", value: "8,75", subValue: "/10", progress: 8.75, max: 10, hint: "Vægtet efter antal svar." },
  { title: "Anbefaler", value: "97,3", subValue: "%", progress: 97.3, max: 100, hint: "Andel “Ja” (vægtet)." },
  { title: "Formidling", value: "4,48", subValue: "/5", progress: 4.48, max: 5, hint: "Gennemsnit (vægtet)." },
  { title: "Responsrate", value: "13,0", subValue: "%", progress: 13, max: 100, hint: "Beregnet på gange med tilmeldte-tal." },
];

const courseData = [
  { date: "18-10-2023", course: "Excel 3 - Udvidet databehandling", enrolled: 26, responses: 7, responseRate: "26,9%", satisfaction: 9.1, recommend: "100,0%", communication: 4.3 },
  { date: "02-11-2023", course: "Excel 1 - Få styr på regnearket", enrolled: 24, responses: 2, responseRate: "8,3%", satisfaction: 8.0, recommend: "100,0%", communication: 4.0 },
  { date: "13-02-2024", course: "Excel 2 - Smarte funktioner", enrolled: 75, responses: 5, responseRate: "6,7%", satisfaction: 8.4, recommend: "100,0%", communication: 4.4 },
  { date: "07-03-2024", course: "Excel 2 - Smarte funktioner", enrolled: 55, responses: 3, responseRate: "5,5%", satisfaction: 9.7, recommend: "100,0%", communication: 4.7 },
  { date: "02-04-2024", course: "Excel 2 - Smarte funktioner", enrolled: 36, responses: 4, responseRate: "11,1%", satisfaction: 9.5, recommend: "100,0%", communication: 4.8 },
  { date: "16-04-2024", course: "Excel 2 - Smart functions", enrolled: "—", responses: 3, responseRate: "—", satisfaction: 9.3, recommend: "100,0%", communication: 4.3 },
  { date: "17-04-2024", course: "Excel 1 - Få styr på regnearket", enrolled: 38, responses: 9, responseRate: "23,7%", satisfaction: 8.0, recommend: "90,0%", communication: 4.6 },
];
---

<Layout 
  title="Kursusstatistik – Anton Meier Ebsen Jørgensen" 
  description="Kursusstatistik baseret på anonyme kursusevalueringer: tilfredshed, anbefalinger, formidling og svarprocenter."
  bodyClass="stats-page"
>
<style>
/* Wrap */
.stats-wrap {
  max-width: 1200px;
  margin: 24px auto;
  padding: 0 16px 32px;
}

/* Card vibe */
.card {
  background: var(--glass);
  backdrop-filter: blur(16px);
  -webkit-backdrop-filter: blur(16px);
  border-radius: var(--radius);
  padding: 24px;
  border: 1px solid var(--glass-border);
  box-shadow: var(--shadow);
  transition: transform 0.3s cubic-bezier(0.34, 1.56, 0.64, 1), border-color 0.3s ease;
}
.card:hover {
  transform: translateY(-4px) scale(1.01);
  border-color: var(--accent-soft);
}

/* Hero */
.hero { 
  margin-bottom: 14px; 
}
.eyebrow {
  margin: 0 0 12px;
  color: var(--text-dim);
  font-weight: 800;
  text-transform: uppercase;
  letter-spacing: 0.15em;
  font-size: 12px;
}
.lead { 
  margin: 0 0 24px; 
  color: var(--text-dim); 
  font-size: 18px; 
  line-height: 1.6; 
}
.muted { 
  color: var(--text-dim); 
  opacity: 0.7; 
}

.notice {
  margin-top: 12px;
  padding: 12px 14px;
  border-radius: 14px;
  border: 1px solid var(--glass-border);
  background: rgba(255, 255, 255, 0.02);
}

/* Titles */
.section-title {
  margin: 0 0 24px;
  font-size: 13px;
  text-transform: uppercase;
  letter-spacing: 0.2em;
  font-weight: 800;
  color: var(--accent);
}
.section-head { 
  margin-bottom: 10px; 
}

/* Details */
.details {
  margin-top: 12px;
}
.details summary {
  cursor: pointer;
  font-weight: 800;
}

/* CTA buttons */
.cta {
  display: flex;
  flex-wrap: wrap;
  gap: 10px;
  margin-top: 10px;
}
.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 12px 24px;
  border-radius: 999px;
  background: var(--accent);
  color: #050506;
  text-decoration: none;
  font-weight: 700;
  font-size: 14.5px;
  transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
}
.btn:hover {
  transform: translateY(-2px);
  box-shadow: var(--glow);
}
.btn.ghost {
  background: transparent;
  border: 1.5px solid var(--accent);
  color: var(--accent);
}

/* Mobile */
@media (max-width: 980px) {
  .hero {
    padding-left: 14px;
    padding-right: 14px;
  }
}

.card + .card {
  margin-top: 14px;
}

.clean-list {
  margin: 10px 0 0;
  padding-left: 18px;
}
</style>

  <main class="stats-wrap">
    <!-- HERO -->
    <section class="card hero">
      <p class="eyebrow">Undervisning · Evalueringer · Overblik</p>
      <h1>Kursusstatistik</h1>
      <p class="lead">
        Nøgletal baseret på <strong>anonyme kursusevalueringer</strong>. Jeg viser kun aggregerede tal (ingen rå-data eller personoplysninger).
      </p>

      <div class="notice">
        <strong>Note:</strong> Tallene nedenfor er fra perioden <strong>18-10-2023 → 17-04-2024</strong> og bygger på <strong>N=33</strong> besvarelser.
      </div>
    </section>

    <!-- KPI CARDS -->
    <section aria-label="Nøgletal">
      <KPIGrid items={kpiData} />
    </section>

    <!-- TABLE -->
    <section class="card" aria-label="Kursusgange">
      <div class="section-head">
        <h2 class="section-title">Kursusgange (detaljer)</h2>
        <p class="muted">Dato · kursus · tilmeldte · svar · responsrate · tilfredshed · anbefaler · formidling</p>
      </div>

      <CourseStatTable stats={courseData} />

      <details class="details">
        <summary>Metode & forbehold (klik)</summary>
        <ul class="clean-list">
          <li>Nøgletal er beregnet som vægtede gennemsnit med <strong>Antal svar</strong> som vægt.</li>
          <li>Responsrate = Antal svar / Antal tilmeldte (når tilmeldte er kendt).</li>
          <li>Lav responsrate kan give støj — derfor viser jeg altid N.</li>
          <li>Kun aggregerede tal. Ingen persondata, ingen fritekst-svar.</li>
        </ul>
      </details>
    </section>

    <!-- CTA -->
    <section class="card">
      <h2 class="section-title">Kontakt</h2>
      <p class="muted">Vil du høre mere om undervisning, kursusindhold eller tilpasning til jeres behov?</p>
      <div class="cta">
        <a class="btn" href="/contact#kontakt">Kontakt mig</a>
        <a class="btn ghost" href="/services">Samarbejde/Services</a>
      </div>
    </section>
  </main>
</Layout>
