---
import Layout from '@layouts/Layout.astro';
import Section from '@components/ui/Section.astro';
import Card from '@components/ui/Card.astro';
import Button from '@components/ui/Button.astro';
import Pill from '@components/ui/Pill.astro';
import SectionHeading from '@components/ui/SectionHeading.astro';
import ContactCard from '@components/common/ContactCard.astro';
---

<Layout 
  title="Anton Meier Ebsen Jørgensen – Kurser" 
  description="Kurser: universitetsfag, online-kurser og certificeringsforløb."
  bodyClass="courses-page"
>
  <style>
    .courses-wrap {
      max-width: 1200px;
      margin: 24px auto;
      padding: 0 16px 32px;
    }

    .hero-grid {
      display: grid;
      grid-template-columns: minmax(0, 1.5fr) minmax(0, 1fr);
      gap: 22px;
      align-items: start;
    }

    .courses-grid {
      display: grid;
      grid-template-columns: repeat(3, minmax(0,1fr));
      gap: 14px;
      margin-top: 12px;
    }

    @media (max-width: 980px) {
      .hero-grid, .courses-grid { 
        grid-template-columns: 1fr; 
      }
    }
  </style>

  <main class="courses-wrap">

    <Section>
      <div class="hero-grid">
        <Card variant="glass" class="p-8">
          <p class="text-xs font-extrabold uppercase tracking-wider text-dim mb-3">Kurser</p>
          <h1 class="text-4xl font-bold leading-tight mb-4">Fag, forløb og kurser</h1>
          <p class="text-lg leading-relaxed text-dim mb-6">
            Her samler jeg alle de kurser, jeg har taget — både universitet og online. Fokus er på
            makro, økonometri, programmering og modeller.
          </p>
  
          <div class="flex flex-wrap gap-3">
            <Button href="#university">Universitet</Button>
            <Button href="#programming" variant="ghost">Programmering</Button>
          </div>
        </Card>
  
        <div class="hidden md:block">
          <Card variant="glass" class="p-6">
            <SectionHeading>Sådan bruger du siden</SectionHeading>
            <p class="text-[13px] text-dim mb-4 opacity-70 leading-relaxed">
              Brug søgning og filtre. Hver “card” kan have link til pensum, kursus-side og evt. certifikat.
            </p>
          </Card>
        </div>
      </div>
    </Section>

    <Section id="university">
       <Card variant="default" class="p-6">
         <SectionHeading>Universitetskurser (Københavns Universitet)</SectionHeading>
         <div class="courses-grid">
           <Card variant="glass" class="p-4">
             <h3 class="font-bold text-base mb-2">Advanced Macroeconomics: Business Cycles</h3>
             <p class="text-sm text-dim">Konjunkturer, DSGE/RBC intuition.</p>
           </Card>
           <Card variant="glass" class="p-4">
             <h3 class="font-bold text-base mb-2">Advanced Macroeconomics: SVAR Analysis</h3>
             <p class="text-sm text-dim">SVAR-identifikation, impulse responses.</p>
           </Card>
           <Card variant="glass" class="p-4">
             <h3 class="font-bold text-base mb-2">Practical Time Series Analysis (SAS)</h3>
             <p class="text-sm text-dim">Forecasting, decomposition, og SAS workflows.</p>
           </Card>
         </div>
       </Card>
    </Section>

    <Section id="programming">
       <Card variant="bordered" class="p-6">
         <SectionHeading>Programmering & Andre kurser</SectionHeading>
         <div class="courses-grid">
           <Card variant="glass" class="p-4">
             <h3 class="font-bold text-base mb-2">Python – Data Analysis Samling</h3>
             <p class="text-sm text-dim">Pandas, data cleaning, plotting, workflows.</p>
           </Card>
           <Card variant="glass" class="p-4">
             <h3 class="font-bold text-base mb-2">Politikens Skriveakademi</h3>
             <p class="text-sm text-dim">Formidling og struktur for økonomer.</p>
           </Card>
         </div>
       </Card>
    </Section>

    <Section>
      <ContactCard 
        variant="glass"
        title="Vil du se mere?"
        text="Kontakt mig eller gå tilbage til oversigten."
        action="contact"
      />
    </Section>

  </main>
</Layout>
