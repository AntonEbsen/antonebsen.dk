---
import Layout from '@layouts/BaseLayout.astro';
import Section from '@components/ui/Section.astro';
import Card from '@components/ui/Card.astro';
import Button from '@components/ui/Button.astro';
import Pill from '@components/ui/Pill.astro';
import SectionHeading from '@components/ui/SectionHeading.astro';
import ContactCard from '@components/common/ContactCard.astro';
import { getEntry } from 'astro:content';

interface Props {
  lang: 'da' | 'en';
}

const { lang } = Astro.props;
const entry = await getEntry('pages', `${lang}/services`);

if (!entry) {
  throw new Error(`Could not find content for ${lang}/services`);
}

const content = entry.data;

const contactLink = lang === 'en' ? '/en/contact' : '/contact';
const cvLink = lang === 'en' ? '/en/cv' : '/cv';
const portfolioLink = lang === 'en' ? '/en/portfolio' : '/portfolio';
---

<Layout 
  title={content.title}
  description={content.description}
  bodyClass={content.bodyClass}
>
  <style>
    .services-wrap {
      max-width: 1200px;
      margin: 24px auto;
      padding: 0 16px 32px;
    }

    .hero-grid {
      display: grid;
      grid-template-columns: minmax(0, 1.6fr) minmax(0, 1fr);
      gap: 22px;
      align-items: start;
    }

    .grid-2 {
      display: grid;
      grid-template-columns: repeat(2, minmax(0, 1fr));
      gap: 14px;
      margin-bottom: 14px;
    }

    .tool-grid {
        display: grid;
        grid-template-columns: repeat(2, minmax(0, 1fr));
        gap: 12px;
    }

    @media (max-width: 980px) {
      .hero-grid, .grid-2, .tool-grid {
        grid-template-columns: 1fr;
      }
    }
  </style>

  <main class="services-wrap">

    <!-- HERO -->
    <Section>
      <div class="hero-grid">
        <Card variant="glass" class="p-8">
          <p class="text-xs font-bold uppercase tracking-widest text-dim mb-3">{content.hero.eyebrow}</p>
          <h1 class="text-4xl font-bold leading-tight mb-4">{content.hero.title}</h1>
          <p class="text-lg text-dim mb-6">
            {content.hero.text}
          </p>

          <div class="flex flex-wrap gap-3 mb-6">
            <Button href={contactLink}>{content.hero.cta.contact}</Button>
            <Button href={cvLink} variant="ghost">{content.hero.cta.cv}</Button>
            <Button href={portfolioLink} variant="ghost">{content.hero.cta.portfolio}</Button>
          </div>

          <div class="flex flex-wrap gap-2" aria-label="Filters">
            {content.hero.pills.map((pill: string) => (
                <Pill variant="accent">{pill}</Pill>
            ))}
          </div>
        </Card>

        <div class="hidden md:block">
          <Card variant="glass" class="p-6">
            <SectionHeading>{content.quickInfo.title}</SectionHeading>
            <ul class="list-none p-0 m-0 space-y-2 text-sm text-dim opacity-90">
                {content.quickInfo.items.map((item: any) => (
                    <li><strong>{item.label}</strong> {item.value}</li>
                ))}
            </ul>
          </Card>
        </div>
      </div>
    </Section>

    <!-- MAIN GRID -->
    <Section class="grid-2" aria-label="Services content">

      <!-- SERVICES -->
      <Card variant="glass" class="p-6" id="services">
        <SectionHeading>{content.services.title}</SectionHeading>

        <div class="space-y-4">
            {content.services.items.map((item: any) => (
                <div class="border border-glass-border rounded-xl p-4 bg-glass">
                    <h3 class="font-bold mb-2">{item.title}</h3>
                    <p class="text-sm text-dim mb-2 opacity-80">{item.description}</p>
                    <ul class="list-none p-0 pl-4 space-y-1 text-sm text-dim opacity-80">
                        {item.points.map((pt: string) => (
                            <li>{pt}</li>
                        ))}
                    </ul>
                </div>
            ))}
        </div>
      </Card>

      <!-- HOW I WORK -->
      <Card variant="glass" class="p-6" id="process">
        <SectionHeading>{content.process.title}</SectionHeading>
        <ol class="list-decimal p-0 pl-4 space-y-2 text-sm text-dim mb-6">
            {content.process.steps.map((step: string) => (
                <li set:html={step} />
            ))}
        </ol>

        <hr class="border-0 h-px bg-glass-border my-4" />

        <h3 class="font-bold mb-2 text-base">{content.process.faq.title}</h3>
        <p class="text-sm text-dim opacity-80">
            {content.process.faq.text}
        </p>
      </Card>

      <!-- TOOLING -->
      <Card variant="glass" class="p-6" id="tools">
        <SectionHeading>{content.tools.title}</SectionHeading>

        <div class="tool-grid">
            {content.tools.items.map((tool: any) => (
                <div class="border border-glass-border rounded-xl p-4 bg-glass">
                    <h3 class="font-bold mb-1 text-sm">{tool.name}</h3>
                    <p class="text-xs text-dim opacity-70">{tool.level}</p>
                </div>
            ))}
        </div>
      </Card>

      <!-- BOUNDARIES -->
      <Card variant="glass" class="p-6" id="boundaries">
        <SectionHeading>{content.boundaries.title}</SectionHeading>
        <ul class="list-none p-0 pl-4 space-y-2 text-sm text-dim opacity-80 mb-6">
            {content.boundaries.points.map((pt: string) => (
                <li>{pt}</li>
            ))}
        </ul>

        <hr class="border-0 h-px bg-glass-border my-4" />

        <h3 class="font-bold mb-2 text-base">{content.boundaries.faq.title}</h3>
        <p class="text-sm text-dim opacity-80">{content.boundaries.faq.text}</p>
      </Card>

    </Section>

    <!-- CTA -->
    <Section>
        <ContactCard 
            title={content.contact.title}
            text={content.contact.text}
            action="email"
        />
    </Section>

  </main>
</Layout>


