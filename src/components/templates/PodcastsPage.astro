---
import Layout from '@layouts/BaseLayout.astro';
import Section from '@components/ui/Section.astro';
import ContactCard from '@components/common/ContactCard.astro';
import { supabase } from '@lib/supabase';

interface Props {
  lang: 'da' | 'en';
}

const { lang } = Astro.props;
const isDa = lang === 'da';

// UI Strings
const t = {
  da: {
    title: "Kulturloggen: Podcasts | Anton Ebsen",
    desc: "En kurateret liste over mine favoritpodcasts.",
    heroTitle: "Kulturloggen: Podcasts ðŸŽ§",
    heroText: "Min \"Media Diet\". Her er de podcasts, der gør mig klogere (eller bare gladere).<br>Opdateres løbende.",
    empty: "Ingen podcasts i databasen endnu.",
    listenBtn: "Lyt Nu",
    favorite: "Favorit",
    ctaTitle: "Har jeg glemt noget?",
    ctaText: "Send mig dine anbefalinger."
  },
  en: {
    title: "Culture Log: Podcasts | Anton Ebsen",
    desc: "A curated list of my favorite podcasts.",
    heroTitle: "Culture Log: Podcasts ðŸŽ§",
    heroText: "My \"Media Diet\". Here are the podcasts that make me smarter (or just happier).<br>Updated regularly.",
    empty: "No podcasts in the database yet.",
    listenBtn: "Listen Now",
    favorite: "Favorite",
    ctaTitle: "Did I miss something?",
    ctaText: "Send me your recommendations."
  }
};

const content = isDa ? t.da : t.en;

// Data Fetching
// Supabase client from @lib/supabase
let podcasts = [];
let error = null;

if (supabase) {
    const res = await supabase
      .from('podcasts')
      .select('*')
      .order('rating', { ascending: false });
    podcasts = res.data || [];
    error = res.error;
}

if (error) podcasts = [];

// Group by category
const categories: Record<string, any[]> = {};
podcasts?.forEach(pod => {
    if (!categories[pod.category]) categories[pod.category] = [];
    categories[pod.category].push(pod);
});
---

<Layout 
  title={content.title}
  description={content.desc}
  bodyClass="podcasts-page"
>

  <style>
    .podcasts-wrap {
      max-width: 1000px;
      margin: 24px auto;
      padding: 0 16px 32px;
    }
  </style>

  <main class="podcasts-wrap">

    <!-- HERO -->
    <Section>
        <div class="text-center mb-12">
            <h1 class="text-4xl font-bold mb-4 text-purple-400 drop-shadow-[0_0_15px_rgba(168,85,247,0.3)]">
                {content.heroTitle}
            </h1>
            <p class="text-dim text-lg max-w-2xl mx-auto" set:html={content.heroText} />
        </div>
    </Section>

    {Object.keys(categories).length === 0 && (
        <div class="text-center py-12 border border-gray-800 rounded bg-gray-900/30">
            <p class="text-dim">{content.empty}</p>
        </div>
    )}

    {Object.entries(categories).map(([category, items]: [string, any[]]) => (
        <Section class="mb-12">
            <h2 class="text-2xl font-bold mb-6 text-white border-b border-gray-800 pb-2 flex items-center gap-3">
                <span class="w-2 h-8 bg-purple-500 rounded-full inline-block"></span>
                {category}
            </h2>
            
            <div class="grid grid-cols-1 gap-4">
                {items.map(pod => (
                    <div class="bg-gray-900/40 p-5 rounded-lg border border-white/5 hover:border-purple-500/30 transition-all group flex flex-col md:flex-row gap-6 items-start">
                        
                        <div class="flex-1">
                            <h3 class="text-xl font-bold text-white mb-1 group-hover:text-purple-300 transition-colors">
                                {pod.title}
                                {pod.favorite && <i class="fa-solid fa-heart text-purple-500 ml-2 text-sm" title={content.favorite}></i>}
                            </h3>
                            <p class="text-xs text-purple-400/80 uppercase tracking-widest font-bold mb-2">{pod.host}</p>
                            <p class="text-gray-300 leading-relaxed text-sm mb-3">
                                {pod.description}
                            </p>
                            {pod.link && (
                                <a href={pod.link} target="_blank" rel="noopener" class="inline-flex items-center text-xs font-bold text-white bg-green-500/10 px-3 py-1.5 rounded hover:bg-green-500/20 text-green-400 border border-green-500/20 transition-colors">
                                    <i class="fa-brands fa-spotify mr-2"></i> {content.listenBtn}
                                </a>
                            )}
                        </div>

                        <div class="hidden md:flex flex-col items-center justify-center min-w-[80px]">
                            <span class="text-3xl font-bold text-gray-800 group-hover:text-purple-500/20 transition-colors">{pod.rating}/5</span>
                            <div class="flex text-xs text-purple-500 gap-0.5 mt-1">
                                {Array.from({length: pod.rating}).map(() => <i class="fa-solid fa-star"></i>)}
                            </div>
                        </div>

                    </div>
                ))}
            </div>
        </Section>
    ))}

    <Section>
      <ContactCard 
        variant="glass" 
        title={content.ctaTitle} 
        text={content.ctaText}
        action="contact"
      />
    </Section>

  </main>
</Layout>



