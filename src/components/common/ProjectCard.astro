---
interface Props {
  title: string;
  tags?: string[]; // Displayed as space separated tags or comma, based on design. Design says "Makro · Empiri" etc.
  tagString?: string; // Alternative to passing array if we want exact string control
  description: string;
  tools?: string;
  output?: string;
  links?: {
    label: string;
    url: string;
    disabled?: boolean;
  }[];
}

const { title, tagString, description, tools, output, links } = Astro.props;
---

<article class="card project">
  <div class="project-top">
    <h2 class="project-title">{title}</h2>
    {tagString && <span class="tag">{tagString}</span>}
  </div>
  <p class="muted">
    {description}
  </p>
  <div class="project-meta">
    {tools && <span><strong>Værktøjer:</strong> {tools}</span>}
    {output && <span><strong>Output:</strong> {output}</span>}
  </div>
  {links && (
    <div class="project-links">
      {links.map(link => (
        <a 
          class="btn ghost" 
          href={link.url} 
          aria-disabled={link.disabled}
        >
          {link.label}
        </a>
      ))}
    </div>
  )}
</article>
