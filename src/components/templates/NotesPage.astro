---
import Layout from '@layouts/BaseLayout.astro';
import Section from '@components/ui/Section.astro';
import Card from '@components/ui/Card.astro';
import SectionHeading from '@components/ui/SectionHeading.astro';
import ContactCard from '@components/common/ContactCard.astro';

interface Props {
  lang: 'da' | 'en';
}

const { lang } = Astro.props;
const isDa = lang === 'da';

const content = {
  da: {
    title: "Anton Meier Ebsen Jørgensen – Publikationer & Noter",
    metaDescription: "Publikationer, working notes og korte one-pagers om økonomi, data og modeller.",
    eyebrow: "Publikationer / Noter",
    heroTitle: "Korte writeups og materiale",
    heroText: "Her samler jeg ting, der er mere “arkiv og reference” end blog: one-pagers, slides og arbejdsnoter.",
    sectionNotes: "Noter",
    notes: [
      {
        title: "Template: Data → Leverance",
        desc: "En enkel struktur jeg bruger til analyseprojekter.",
        link: "#",
        linkText: "Læs note →"
      }
    ]
  },
  en: {
    title: "Anton Meier Ebsen Jørgensen – Publications & Notes",
    metaDescription: "Publications, working notes, and short one-pagers on economics, data, and models.",
    eyebrow: "Publications / Notes",
    heroTitle: "Short writeups & materials",
    heroText: "Here I collect things that are more \"archive and reference\" than blog posts: one-pagers, slides, and working notes.",
    sectionNotes: "Notes",
    notes: [
        {
          title: "Template: Data → Delivery",
          desc: "A simple structure I use for analysis projects.",
          link: "#",
          linkText: "Read note →"
        }
    ]
  }
};

const t = isDa ? content.da : content.en;
---

<Layout 
  title={t.title}
  description={t.metaDescription}
  bodyClass="notes-page"
>
  <style>
    .notes-wrap {
      max-width: 1200px;
      margin: 24px auto;
      padding: 0 16px 32px;
    }
    
    .hero-grid {
      display: grid;
      grid-template-columns: minmax(0, 1.6fr) minmax(0, 1fr);
      gap: 22px;
      align-items: start;
    }

    .notes-grid {
      display: grid;
      grid-template-columns: repeat(3, minmax(0, 1fr));
      gap: 14px;
      margin-top: 12px;
    }

    @media (max-width: 980px) {
      .hero-grid, .notes-grid { 
        grid-template-columns: 1fr; 
      }
    }
  </style>

  <main class="notes-wrap">

    <Section class="mb-12">
      <div class="hero-grid">
        <Card variant="glass" class="p-8">
          <p class="text-xs font-bold uppercase tracking-widest text-accent mb-3">{t.eyebrow}</p>
          <h1 class="text-4xl font-bold leading-tight mb-4">{t.heroTitle}</h1>
          <p class="text-lg text-dim">
            {t.heroText}
          </p>
        </Card>
      </div>
    </Section>

    <Section id="noter" class="mb-20">
      <Card variant="bordered" class="p-6">
        <SectionHeading>{t.sectionNotes}</SectionHeading>
        <div class="notes-grid">
          {t.notes.map(note => (
            <Card variant="glass" class="p-6">
                <h3 class="font-bold mb-2">{note.title}</h3>
                <p class="text-sm text-dim mb-4">{note.desc}</p>
                <a href={note.link} class="text-accent font-bold">{note.linkText}</a>
            </Card>
          ))}
        </div>
      </Card>
    </Section>

    <Section>
        <ContactCard />
    </Section>

  </main>
</Layout>


