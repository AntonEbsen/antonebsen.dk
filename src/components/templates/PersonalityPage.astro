---
import Layout from '@layouts/BaseLayout.astro';
import Section from '@components/ui/Section.astro';
import Card from '@components/ui/Card.astro';
import SectionHeading from '@components/ui/SectionHeading.astro';
import Pill from '@components/ui/Pill.astro';

interface Props {
  lang: 'da' | 'en';
}

const { lang } = Astro.props;
const isDa = lang === 'da';

const content = {
  da: {
    title: "Personlighedsprofil | Anton Meier Ebsen Jørgensen",
    description: "En dybdegående profil af min personlighedstype (INTJ-A) og hvordan jeg arbejder bedst i professionelle sammenhænge.",
    heroTitle: "Arkitekten",
    heroType: "INTJ-A",
    heroText: "Som en INTJ-type (The Architect) er jeg drevet af logik, strategi og en konstant stræben efter effektivitet og systemisk forbedring.",
    traits: [
      { label: "Introvert (I)", value: 85, desc: "Foretækker fokuseret individuelt arbejde, men trives i strategiske diskussioner." },
      { label: "Intuitiv (N)", value: 70, desc: "Fokuseret på det store billede, mønstre og fremtidige muligheder." },
      { label: "Tænkende (T)", value: 90, desc: "Beslutninger tages baseret på logik og objektiv analyse fremfor følelser." },
      { label: "Dømmende (J)", value: 75, desc: "Struktureret tilgang med fokus på deadlines, planer og orden." }
    ],
    strengths: [
      { title: "Strategisk Planlægning", desc: "Evnen til at se komplekse afhængigheder og planlægge flere skridt frem." },
      { title: "Logisk Problemløsning", desc: "Finder fejl i systemer og designer mere effektive løsninger." },
      { title: "Uafhængig & Beslutsom", desc: "Tager ejerskab over opgaver og leverer resultater uden konstant supervision." }
    ],
    workplace: {
      title: "Samarbejde & Workflow",
      text: "For at få det bedste ud af mit potentiale som INTJ i et team, fungerer følgende bedst:",
      items: [
        { label: "Direkte Kommunikation", icon: "fa-comments", desc: "Jeg værdsætter ærlighed og klarhed fremfor 'fluff'. Sig det som det er." },
        { label: "Autonomi", icon: "fa-user-gear", desc: "Jeg præsterer bedst, når jeg får et klart mål og friheden til at finde den bedste vej dertil." },
        { label: "Evidensbaseret", icon: "fa-chart-line", desc: "Argumenter vinder hos mig, hvis de er understøttet af data og logisk ræsonnement." }
      ]
    },
    energy: {
      title: "Energi-balancen",
      energizers: { title: "Hvad giver energi", items: ["Deep Work & Fordybelse", "Strategisk problemløsning", "Optimering af processer"] },
      drainers: { title: "Hvad dræner energi", items: ["Ustrukturerede møder", "Gentagende manuelt arbejde", "Overfladisk smalltalk"] }
    },
    growth: {
      title: "Vækst & Selvindsigt",
      text: "Som INTJ er jeg bevidst om mine blinde vinkler og arbejder aktivt på:",
      items: ["Bløde værdier & empati i ledelse", "Kommunikation af 'hvorfor' før 'hvordan'", "Tålmodighed med iterative processer"]
    },
    meta: {
      compatibility: { title: "Team Match", text: "Arbejder bedst med målorienterede eksekvere og kreative visionære." },
      learning: { title: "Læringsstil", text: "First Principles – jeg skal forstå fundamentet før jeg bygger ovenpå." }
    },
    tt38: {
      title: "TT38 Talentprofil",
      status: "Test afventer",
      desc: "TT38 er en dybdegående analyse af 38 fundamentale talenter. Jeg planlægger at tage testen for at få et præcist billede af mine top-drivere og naturlige arbejdsstile.",
      placeholder: "Resultater indlæses snart..."
    }
  },
  en: {
    title: "Personality Profile | Anton Meier Ebsen Jørgensen",
    description: "An in-depth profile of my personality type (INTJ-A) and how I work best in professional environments.",
    heroTitle: "The Architect",
    heroType: "INTJ-A",
    heroText: "As an INTJ (The Architect), I am driven by logic, strategy, and a constant pursuit of efficiency and systemic improvement.",
    traits: [
      { label: "Introverted (I)", value: 85, desc: "Prefer focused individual work but thrive in strategic discussions." },
      { label: "Intuitive (N)", value: 70, desc: "Focused on the big picture, patterns, and future possibilities." },
      { label: "Thinking (T)", value: 90, desc: "Decisions are based on logic and objective analysis rather than emotions." },
      { label: "Judging (J)", value: 75, desc: "Structured approach with a focus on deadlines, plans, and order." }
    ],
    strengths: [
      { title: "Strategic Planning", desc: "Ability to see complex dependencies and plan several steps ahead." },
      { title: "Logical Problem Solving", desc: "Identifying flaws in systems and designing more efficient solutions." },
      { title: "Independent & Decisive", desc: "Taking ownership of tasks and delivering results without constant supervision." }
    ],
    workplace: {
      title: "Collaboration & Workflow",
      text: "To get the most out of my potential as an INTJ in a team, the following works best:",
      items: [
        { label: "Direct Communication", icon: "fa-comments", desc: "I value honesty and clarity over 'fluff'. Tell it like it is." },
        { label: "Autonomy", icon: "fa-user-gear", desc: "I perform best when given a clear goal and the freedom to find the best way there." },
        { label: "Evidence-Based", icon: "fa-chart-line", desc: "Arguments win with me if they are supported by data and logical reasoning." }
      ]
    },
    energy: {
      title: "The Energy Battery",
      energizers: { title: "Energizers", items: ["Deep Work & Focus", "Strategic problem solving", "Process optimization"] },
      drainers: { title: "Drainers", items: ["Unstructured meetings", "Repetitive manual tasks", "Surface-level small talk"] }
    },
    growth: {
      title: "Growth & Self-Awareness",
      text: "As an INTJ, I am aware of my blind spots and actively work on:",
      items: ["Soft skills & empathy in leadership", "Communicating the 'Why' before the 'How'", "Patience with iterative processes"]
    },
    meta: {
      compatibility: { title: "Team Match", text: "Works best with goal-oriented executors and creative visionaries." },
      learning: { title: "Learning Style", text: "First Principles – I need to understand the foundation before building." }
    },
    tt38: {
      title: "TT38 Talent Profile",
      status: "Test Pending",
      desc: "TT38 is an in-depth analysis of 38 fundamental talents. I am planning on taking this test soon to provide a precise mapping of my top drivers and natural work styles.",
      placeholder: "Results loading soon..."
    }
  }
};

const t = isDa ? content.da : content.en;
---

<Layout title={t.title} description={t.description}>
  <main class="container mx-auto px-4 py-20">
    <!-- Hero Section -->
    <Section class="mb-24 animate-on-scroll">
      <div class="flex flex-col md:flex-row items-center gap-12">
        <div class="flex-1">
          <div class="inline-block px-4 py-1 bg-accent/20 border border-accent/30 rounded-full text-accent text-xs font-bold uppercase tracking-widest mb-6">
            Personality Profile
          </div>
          <h1 class="text-6xl md:text-8xl font-black mb-6 tracking-tighter">
            {t.heroTitle}<span class="text-accent">.</span>
          </h1>
          <div class="text-3xl font-mono text-white/40 mb-8">{t.heroType}</div>
          <p class="text-xl text-dim leading-relaxed max-w-xl">
             {t.heroText}
          </p>

          <!-- META BADGES (Section 4 & 5) -->
          <div class="mt-12 flex flex-wrap gap-4">
             <div class="flex items-center gap-3 p-4 bg-white/5 rounded-2xl border border-white/10 max-w-xs transition-transform hover:scale-105">
                <div class="w-10 h-10 rounded-full bg-accent/20 flex items-center justify-center text-accent">
                   <i class="fa-solid fa-users"></i>
                </div>
                <div>
                   <p class="text-[10px] uppercase font-bold text-accent">{t.meta.compatibility.title}</p>
                   <p class="text-xs text-dim">{t.meta.compatibility.text}</p>
                </div>
             </div>
             <div class="flex items-center gap-3 p-4 bg-white/5 rounded-2xl border border-white/10 max-w-xs transition-transform hover:scale-105">
                <div class="w-10 h-10 rounded-full bg-accent/20 flex items-center justify-center text-accent">
                   <i class="fa-solid fa-brain"></i>
                </div>
                <div>
                   <p class="text-[10px] uppercase font-bold text-accent">{t.meta.learning.title}</p>
                   <p class="text-xs text-dim">{t.meta.learning.text}</p>
                </div>
             </div>
          </div>
        </div>
        <div class="flex-1 w-full max-w-md">
           <!-- Traits Visual -->
           <Card variant="glass" class="p-8 border-accent/20 bg-accent/[0.02]">
              <div class="space-y-8">
                {t.traits.map((trait, idx) => (
                  <div class={`animate-on-scroll delay-${idx * 100}`}>
                    <div class="flex justify-between items-center mb-2">
                       <span class="text-xs font-bold uppercase tracking-wider">{trait.label}</span>
                       <span class="text-xs font-mono text-accent">{trait.value}%</span>
                    </div>
                    <div class="h-1.5 w-full bg-white/5 rounded-full overflow-hidden">
                       <div class="h-full bg-accent rounded-full transition-all duration-1000 ease-out" style={`width: ${trait.value}%`}></div>
                    </div>
                    <p class="text-[10px] text-dim mt-2 opacity-60 italic">{trait.desc}</p>
                  </div>
                ))}
              </div>
           </Card>
        </div>
      </div>
    </Section>

    <!-- TT38 Placeholder Section -->
    <Section class="mb-32 animate-on-scroll">
       <Card variant="bordered" class="p-12 border-accent/20 bg-accent/[0.01] relative overflow-hidden">
          <div class="absolute top-0 right-0 p-8 text-accent/5 pointer-events-none">
             <i class="fa-solid fa-microscope text-[160px] transform rotate-12"></i>
          </div>
          
          <div class="max-w-2xl">
             <div class="flex items-center gap-3 mb-6">
                <SectionHeading class="mb-0">{t.tt38.title}</SectionHeading>
                <Pill variant="default" class="bg-accent/10 border-accent/20 text-accent animate-pulse">
                   {t.tt38.status}
                </Pill>
             </div>
             
             <p class="text-xl text-white/80 leading-relaxed mb-12">
                {t.tt38.desc}
             </p>
             
             <div class="grid grid-cols-2 md:grid-cols-4 gap-4 opacity-30 grayscale hover:grayscale-0 transition-all duration-700">
                {[1,2,3,4].map(() => (
                  <div class="h-32 rounded-xl bg-white/5 border border-dashed border-white/20 flex flex-col items-center justify-center gap-3">
                     <div class="w-8 h-8 rounded-full bg-white/10 animate-pulse"></div>
                     <div class="w-16 h-2 bg-white/5 rounded-full"></div>
                  </div>
                ))}
             </div>
             
             <p class="mt-8 text-xs font-mono text-accent/50 uppercase tracking-widest">
                {t.tt38.placeholder}
             </p>
          </div>
       </Card>
    </Section>

    <!-- Strengths -->
    <Section class="mb-32 animate-on-scroll">
      <SectionHeading class="mb-12">{isDa ? 'Kerne-styrker' : 'Core Strengths'}</SectionHeading>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {t.strengths.map(s => (
          <Card variant="bordered" class="p-8 hover:bg-white/[0.02] transition-colors border-white/5">
             <i class="fa-solid fa-bolt text-accent mb-6 text-2xl"></i>
             <h3 class="text-xl font-bold mb-4">{s.title}</h3>
             <p class="text-dim text-sm leading-relaxed">{s.desc}</p>
          </Card>
        ))}
      </div>
    </Section>

    <!-- Energy & Growth (Section 1 & 2) -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 mb-32">
       <!-- Energy Battery -->
       <Section class="animate-on-scroll">
          <SectionHeading class="mb-8">{t.energy.title}</SectionHeading>
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
             <div class="p-6 bg-green-500/5 border border-green-500/10 rounded-2xl">
                <h4 class="text-green-400 text-xs font-bold uppercase mb-4 flex items-center gap-2">
                   <i class="fa-solid fa-battery-full"></i> {t.energy.energizers.title}
                </h4>
                <ul class="space-y-3">
                   {t.energy.energizers.items.map(item => (
                     <li class="text-sm text-dim flex items-center gap-2">
                        <i class="fa-solid fa-circle-check text-[10px] text-green-500/50"></i> {item}
                     </li>
                   ))}
                </ul>
             </div>
             <div class="p-6 bg-red-500/5 border border-red-500/10 rounded-2xl">
                <h4 class="text-red-400 text-xs font-bold uppercase mb-4 flex items-center gap-2">
                   <i class="fa-solid fa-battery-empty"></i> {t.energy.drainers.title}
                </h4>
                <ul class="space-y-3">
                   {t.energy.drainers.items.map(item => (
                     <li class="text-sm text-dim flex items-center gap-2">
                        <i class="fa-solid fa-circle-xmark text-[10px] text-red-500/50"></i> {item}
                     </li>
                   ))}
                </ul>
             </div>
          </div>
       </Section>

       <!-- Growth Areas -->
       <Section class="animate-on-scroll delay-100">
          <SectionHeading class="mb-8">{t.growth.title}</SectionHeading>
          <div class="p-8 bg-accent/5 border border-accent/10 rounded-3xl relative overflow-hidden group">
             <div class="absolute -right-8 -bottom-8 text-8xl text-accent/5 transform -rotate-12 group-hover:rotate-0 transition-transform duration-700">
                <i class="fa-solid fa-seedling"></i>
             </div>
             <p class="text-dim mb-6 leading-relaxed italic">
                "{t.growth.text}"
             </p>
             <ul class="space-y-4">
                {t.growth.items.map(item => (
                  <li class="flex items-start gap-3">
                     <span class="w-5 h-5 rounded-full bg-accent/20 flex items-center justify-center text-[10px] text-accent mt-0.5 shrink-0">
                        <i class="fa-solid fa-arrow-right"></i>
                     </span>
                     <span class="text-sm text-white/80">{item}</span>
                  </li>
                ))}
             </ul>
          </div>
       </Section>
    </div>

    <!-- Workplace -->
    <Section class="mb-32 animate-on-scroll">
       <div class="bg-glass-card rounded-[40px] border border-glass-border p-8 md:p-16 relative overflow-hidden">
          <div class="absolute -bottom-24 -left-24 w-80 h-80 bg-accent/10 blur-[100px] rounded-full"></div>
          
          <div class="relative z-10 max-w-4xl mx-auto">
             <SectionHeading class="mb-6">{t.workplace.title}</SectionHeading>
             <p class="text-xl text-dim mb-12 border-l-2 border-accent/30 pl-6 italic">
                "{t.workplace.text}"
             </p>
             
             <div class="grid grid-cols-1 md:grid-cols-3 gap-12">
                {t.workplace.items.map(item => (
                  <div class="flex flex-col items-center text-center">
                    <div class="w-16 h-16 rounded-2xl bg-white/5 border border-white/10 flex items-center justify-center text-accent mb-6">
                       <i class={`fa-solid ${item.icon} text-2xl`}></i>
                    </div>
                    <h4 class="text-lg font-bold mb-2">{item.label}</h4>
                    <p class="text-sm text-dim leading-relaxed">
                       {item.desc}
                    </p>
                  </div>
                ))}
             </div>
          </div>
       </div>
    </Section>

    <!-- Source Link -->
    <Section class="text-center animate-on-scroll">
       <p class="text-xs text-dim opacity-40">
          {isDa ? 'Inspireret af 16personalities.com profilen.' : 'Inspired by the 16personalities.com profile.'}
       </p>
    </Section>
  </main>
</Layout>
