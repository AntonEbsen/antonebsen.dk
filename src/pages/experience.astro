---
import Layout from '@layouts/Layout.astro';
import cv from '@data/cv.json';
import Card from '@components/ui/Card.astro';
import Button from '@components/ui/Button.astro';
import Pill from '@components/ui/Pill.astro';
import Section from '@components/ui/Section.astro';
---

<Layout 
  title="Anton Meier Ebsen Jørgensen – Erhvervserfaring" 
  description="Erhvervserfaring: undervisning, data og analyse. Rollen, ansvar, resultater og værktøjer."
  bodyClass="experience-page"
>
  <style>
    .experience-wrap {
      max-width: 1200px;
      margin: 24px auto;
      padding: 0 16px 32px;
    }
    
    .hero-grid {
      display: grid;
      grid-template-columns: minmax(0, 1.6fr) minmax(0, 1fr);
      gap: 22px;
      align-items: start;
    }

    .roles-grid {
      display: grid;
      grid-template-columns: repeat(3, minmax(0, 1fr));
      gap: 14px;
      margin-top: 12px;
    }

    .process-grid {
      display: grid;
      grid-template-columns: repeat(4, minmax(0, 1fr));
      gap: 14px;
      margin-top: 12px;
    }

    @media (max-width: 980px) {
      .hero-grid, .roles-grid, .process-grid { 
        grid-template-columns: 1fr; 
      }
    }
  </style>

  <main class="experience-wrap">

    <!-- HERO -->
    <Section>
      <div class="hero-grid">
        <Card variant="glass" class="p-6">
          <p class="text-xs font-extrabold uppercase tracking-wider text-dim mb-3">Erhvervserfaring</p>
          <h1 class="text-4xl leading-tight mb-4 font-bold">Undervisning, data og leverancer – i praksis</h1>
          <p class="text-lg leading-relaxed text-dim mb-6">
            Her er min erhvervserfaring samlet i et format, der er let at skimme:
            rolle → ansvar → resultater → værktøjer. (No fluff, kun signal.)
          </p>
  
          <div class="flex flex-wrap gap-2 mb-6" aria-label="Nøglekompetencer">
            <Pill variant="accent">Undervisning</Pill>
            <Pill variant="accent">Excel/VBA</Pill>
            <Pill variant="accent">Data & analyse</Pill>
            <Pill variant="accent">Formidling</Pill>
            <Pill variant="accent">Struktur & kvalitet</Pill>
          </div>
  
          <div class="flex flex-wrap gap-3">
            <Button href="#roles"><i class="fa-solid fa-briefcase mr-2"></i> Se roller</Button>
            <Button href="/kursusstatistik" variant="ghost"><i class="fa-solid fa-chart-column mr-2"></i> Kursusstatistik</Button>
            <Button href="/contact" variant="ghost"><i class="fa-solid fa-envelope mr-2"></i> Kontakt</Button>
          </div>
        </Card>
  
        <div class="hidden md:block">
          <Card variant="glass" class="p-4">
            <h2 class="text-xs font-bold uppercase tracking-wider text-accent mb-4">Kort version</h2>
            <ul class="list-none p-0 m-0 space-y-2 text-dim text-[14px]">
              <li>Excel/VBA-underviser med stærke evalueringer</li>
              <li>Bygger materialer og workflows, der kan genbruges</li>
              <li>Trives i deadlines og “delivery mode”</li>
            </ul>
          </Card>
        </div>
      </div>
    </Section>

    <!-- ROLLER -->
    <Section id="roles" aria-label="Roller">
      <Card variant="bordered" class="p-6">
        <h2 class="text-xs font-bold uppercase tracking-wider text-accent mb-2">Roller</h2>
        <div class="roles-grid">
          {cv.experience.map((role) => (
            <Card variant="bordered" class="flex flex-col h-full bg-glass">
              <div class="flex justify-between items-start mb-4 gap-3">
                <div>
                  <h3 class="text-base font-bold leading-tight m-0">{role.title} · {role.organization}</h3>
                  <p class="text-[13px] text-dim mt-1 m-0">{role.location} · {role.period}</p>
                </div>
                <Pill variant="accent">{role.type}</Pill>
              </div>

              <ul class="list-none p-0 m-0 pl-4 space-y-2 text-[14.5px] mb-6 flex-grow">
                {role.description.map((item) => (
                  <li class="relative before:content-['-'] before:absolute before:-left-4 before:text-accent">{item}</li>
                ))}
              </ul>

              <div class="grid grid-cols-1 gap-3 mb-6">
                {role.highlights && role.highlights.map((h) => (
                  <div class="rounded-xl p-3 bg-glass border border-glass-border">
                    <span class="block text-xs font-bold text-dim mb-1">{h.label}</span>
                    <span class="block text-sm text-text">{h.value}</span>
                  </div>
                ))}
              </div>

              {role.links && role.links.length > 0 && (
                <div class="flex flex-wrap gap-2 mt-auto">
                  {role.links.map((link) => (
                    <a href={link.href} class="text-xs font-bold border border-glass-border text-white px-3 py-2 rounded-full hover:bg-accent hover:text-white no-underline inline-flex items-center transition-all">
                      {link.icon && <i class:list={["fa-solid", link.icon, "mr-1.5"]}></i>}
                      {link.text}
                    </a>
                  ))}
                </div>
              )}
            </Card>
          ))}
        </div>
      </Card>
    </Section>

    <!-- HOW I WORK -->
    <Section>
      <Card variant="bordered" class="p-6">
        <h2 class="text-xs font-bold uppercase tracking-wider text-accent mb-6">Hvordan jeg typisk arbejder</h2>

        <div class="process-grid">
          {[
            { step: "1) Afklar mål", desc: "Hvad er outputtet? Hvem er modtageren? Hvad er “done”?" },
            { step: "2) Data & kontekst", desc: "Input, constraints, antagelser. Hellere klarhed end magi." },
            { step: "3) Metode", desc: "Vælg det simplest mulige, der stadig er korrekt." },
            { step: "4) Formidling & leverance", desc: "Tydeligt output: struktur, noter, og “hvad betyder det?”" }
          ].map((item) => (
            <Card variant="bordered" class="p-4 bg-glass">
              <h3 class="text-[15px] font-bold m-0 mb-2">{item.step}</h3>
              <p class="text-[13px] text-dim m-0 opacity-80 leading-relaxed">{item.desc}</p>
            </Card>
          ))}
        </div>
      </Card>
    </Section>

    <!-- CTA -->
    <Section>
      <Card variant="default" class="p-6">
        <h2 class="text-xs font-bold uppercase tracking-wider text-accent mb-3">Vil du samarbejde?</h2>
        <p class="text-dim opacity-70 mb-6">
          Hvis du har et konkret behov (undervisning, templates, dataarbejde), så skriv kort.
        </p>
        <div class="flex flex-wrap gap-3">
          <Button href="/contact"><i class="fa-solid fa-envelope mr-2"></i> Kontakt</Button>
          <Button href="/services" variant="ghost"><i class="fa-solid fa-handshake mr-2"></i> Samarbejde</Button>
        </div>
      </Card>
    </Section>

  </main>
</Layout>
