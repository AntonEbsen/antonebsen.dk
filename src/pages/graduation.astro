---
import Layout from '@layouts/Layout.astro';
import Section from '@components/ui/Section.astro';
import Button from '@components/ui/Button.astro';

// We use SSR to handle the password post without exposing it in a JS variable
export const prerender = false;

let error = "";
let authenticated = false;

if (Astro.request.method === "POST") {
  try {
    const data = await Astro.request.formData();
    const password = data.get("password");
    
    // The password is 'cand.polit' (case insensitive)
    if (password?.toString().toLowerCase() === "cand.polit") {
      authenticated = true;
    } else {
      error = "Forkert adgangskode. Pr√∏v igen.";
    }
  } catch (e) {
    error = "Der opstod en fejl. Pr√∏v igen.";
  }
}
---

<Layout title="Graduering | Anton Ebsen" description="Fejring af min Masters gradudation">
  <main class="min-h-[80vh] flex flex-col items-center justify-center px-4 py-20 relative overflow-hidden">
    
    {/* Background Glow */}
    <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] bg-accent/10 blur-[120px] rounded-full pointer-events-none -z-10"></div>

    {!authenticated ? (
      <div class="max-w-md w-full text-center space-y-8 animate-in fade-in slide-in-from-bottom-4 duration-700">
        <div class="space-y-3">
          <div class="w-16 h-16 bg-accent-soft rounded-2xl border border-accent/20 flex items-center justify-center mx-auto mb-6 shadow-glow">
             <i class="fa-solid fa-graduation-cap text-accent text-3xl"></i>
          </div>
          <h1 class="text-4xl font-bold tracking-tight text-white sm:text-5xl">Graduering</h1>
          <p class="text-dim text-lg">Indtast adgangskoden for at se invitationen til fejringen.</p>
        </div>

        <form method="POST" class="space-y-4">
          <div class="relative group">
            <input 
              type="password" 
              name="password" 
              placeholder="Adgangskode..." 
              required
              class="w-full px-5 py-4 bg-white/5 border border-glass-border rounded-2xl text-white outline-none focus:border-accent transition-all duration-300 placeholder:text-white/20"
            />
            <div class={`absolute -bottom-6 left-0 text-sm text-red-400 transition-opacity duration-300 ${error ? 'opacity-100' : 'opacity-0'}`}>
              {error}
            </div>
          </div>
          <button 
            type="submit" 
            class="w-full py-4 bg-accent hover:bg-accent-blue text-black font-bold rounded-2xl transition-all duration-300 transform active:scale-[0.98] shadow-lg shadow-white/5"
          >
            L√•s op
          </button>
        </form>

        <p class="text-xs text-dim/50 italic">Hint: Titlen p√• min uddannelse (cand.xxxx)</p>
      </div>
    ) : (
      <div class="max-w-2xl w-full text-center space-y-12 animate-in fade-in zoom-in-95 duration-1000">
        <div class="space-y-6">
          <div class="inline-block px-4 py-1.5 rounded-full bg-accent-soft border border-accent/20 text-accent font-bold text-sm tracking-widest uppercase mb-4 animate-bounce">
            Klar til fejring! üéâ
          </div>
          <h1 class="text-5xl font-extrabold tracking-tight text-white sm:text-7xl mb-4">
            Jeg er nu <span class="text-accent italic">Master.</span>
          </h1>
          <p class="text-xl text-dim leading-relaxed max-w-lg mx-auto">
            Efter 5 √•rs studier er jeg endelig cand.polit! Det skal fejres, og du er hermed inviteret til min graduationsfest.
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 text-left">
          <div class="p-6 rounded-3xl bg-white/[0.03] border border-glass-border space-y-4 hover:bg-white/[0.05] transition-colors">
            <div class="w-10 h-10 bg-accent-soft rounded-xl flex items-center justify-center text-accent">
              <i class="fa-solid fa-location-dot"></i>
            </div>
            <div>
              <h3 class="text-white font-bold text-lg">Lokation</h3>
              <p class="text-dim">Hatten Bar</p>
              <p class="text-dim/60 text-sm">K√∏benhavn</p>
            </div>
          </div>

          <div class="p-6 rounded-3xl bg-white/[0.03] border border-glass-border space-y-4 hover:bg-white/[0.05] transition-colors">
             <div class="w-10 h-10 bg-accent-soft rounded-xl flex items-center justify-center text-accent">
              <i class="fa-solid fa-calendar-days"></i>
            </div>
            <div>
              <h3 class="text-white font-bold text-lg">Dato & Tid</h3>
              <p class="text-dim">TBA (Placeholder)</p>
              <p class="text-dim/60 text-sm">Opdateres snarest</p>
            </div>
          </div>
        </div>

        <div class="p-10 rounded-[40px] bg-gradient-to-b from-accent/10 to-transparent border border-accent/20 space-y-6">
          <h2 class="text-2xl font-bold text-white italic">Invitation & RSVP</h2>
          <p class="text-dim">
            Gl√¶der mig til at se dig til en kold drink og god stemning!
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a 
              href="mailto:anton.ebsen@gmail.com?subject=Tilmeld: Graduationsfest" 
              class="px-8 py-4 bg-white text-black font-bold rounded-2xl hover:bg-gray-200 transition-all shadow-xl"
            >
              Tilmeld via mail
            </a>
             <a 
              href="/" 
              class="px-8 py-4 bg-transparent border border-white/20 text-white font-bold rounded-2xl hover:bg-white/5 transition-all text-sm flex items-center justify-center"
            >
              Tilbage til forsiden
            </a>
          </div>
        </div>
      </div>
    )}

  </main>
</Layout>

<style>
  /* Optional: Add some floating particles or confetti styles if needed */
  @keyframes scanBar {
    from { transform: translateX(-100%); }
    to { transform: translateX(100%); }
  }
</style>
