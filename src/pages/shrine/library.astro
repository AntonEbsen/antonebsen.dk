---
import { libraryBooks } from '../../utils/library';
import '@styles/styles.css';
---

<!DOCTYPE html>
<html lang="da">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Biblioteket | Ad Majorem Dei Gloriam</title>
    <meta name="robots" content="noindex, nofollow">
    
    <!-- Fonts -->
    <link rel="icon" type="image/svg+xml" href="/assets/favicon-cross.svg">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@400;700&family=Playfair+Display:ital,wght@0,400;0,700;1,400&family=Inter:wght@300;400&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    
    <style>
        body { font-family: 'Cinzel', serif; }
        .text-body { font-family: 'Playfair Display', serif; }
        .sans { font-family: 'Inter', sans-serif; }
    </style>
</head>
<body class="bg-[#08080a] text-gray-300 min-h-screen w-screen overflow-x-hidden m-0 p-0 selection:bg-gold-500/30">

    <!-- Background -->
    <div class="fixed inset-0 z-0 pointer-events-none bg-gradient-to-b from-[#15151a] via-[#050508] to-black">
         <div class="absolute inset-0 opacity-10" style="background-image: url('https://www.transparenttextures.com/patterns/wood-pattern.png');"></div>
    </div>

    <!-- Navigation -->
    <nav class="fixed top-8 left-8 z-50">
        <a href="/shrine" class="text-gold-500/60 hover:text-gold-400 transition-colors text-xl flex items-center gap-2">
            <i class="fa-solid fa-arrow-left"></i>
            <span class="text-xs uppercase tracking-widest hidden md:inline">Tilbage</span>
        </a>
    </nav>

    <!-- Main Content -->
    <main class="relative z-10 w-full min-h-screen flex flex-col items-center pt-24 pb-24 px-8 max-w-6xl mx-auto">
        
        <!-- Header -->
        <div class="text-center mb-16 animate-fade-in-up">
            <h1 class="text-3xl md:text-5xl text-gold-100 font-bold tracking-wide mb-4">Biblioteket</h1>
            <p class="text-xs text-gold-500/60 uppercase tracking-[0.3em] sans">Visdommens Kilde</p>
        </div>

        <!-- Bookshelf Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 w-full">
            {libraryBooks.map((book, index) => (
                <div class="group relative perspective-1000 animate-fade-in-up" style={`animation-delay: ${index * 0.1}s`}>
                    <!-- Book Spine/Cover -->
                    <div class={`relative h-64 md:h-80 w-full rounded-tr-md rounded-br-md shadow-[5px_5px_15px_rgba(0,0,0,0.5)] transition-transform duration-500 group-hover:-translate-y-2 group-hover:shadow-[10px_10px_30px_rgba(0,0,0,0.6)] overflow-hidden cursor-pointer book-card ${book.coverColor}`}>
                        
                        <!-- Texture -->
                        <div class="absolute inset-0 opacity-20 mix-blend-multiply bg-[url('https://www.transparenttextures.com/patterns/leather.png')]"></div>
                        
                        <!-- Spine Detail (Left side) -->
                        <div class="absolute left-0 top-0 bottom-0 w-8 bg-black/20 border-r border-white/5"></div>
                        
                        <!-- Title -->
                        <div class="absolute top-8 left-12 right-4">
                            <h3 class="text-gold-100 text-lg md:text-xl font-bold leading-tight drop-shadow-md border-b border-gold-500/30 pb-2">
                                {book.title}
                            </h3>
                            <p class="text-gold-500/80 text-xs uppercase tracking-widest mt-2 font-mono">
                                {book.author}
                            </p>
                        </div>

                         <!-- Year -->
                         <div class="absolute bottom-4 right-4 text-xs text-white/30 font-mono">
                            {book.year}
                         </div>

                    </div>

                    <!-- Description Reveal (Tooltip-ish or Expansion) -->
                    <div class="absolute inset-x-0 top-full mt-4 p-4 opacity-0 group-hover:opacity-100 transition-opacity duration-300 pointer-events-none md:pointer-events-auto bg-black/80 border border-gold-500/20 rounded text-center z-20">
                        <p class="text-sm text-gray-400 text-body italic leading-relaxed">
                            "{book.description}"
                        </p>
                    </div>
                </div>
            ))}
        </div>

    </main>
    
    <style>
        .animate-fade-in-up {
            animation: fadeInUp 1s ease-out forwards;
            opacity: 0;
        }

        @keyframes fadeInUp {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }
        
        .perspective-1000 {
            perspective: 1000px;
        }
    </style>
</body>
</html>
