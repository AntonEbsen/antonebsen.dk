---
import StudyGroupLayout from '../../layouts/study-group/StudyGroupBaseLayout.astro';
import { supabase } from '@lib/supabase';

export const prerender = false;

// Supabase Data Fetching
// Client imported from @lib/supabase

// Fetch Stats
let { data: liveLeaderboard } = await supabase
    .from('study_leaderboard')
    .select('*')
    .order('pomodoros', { ascending: false });

const leaderboardEntries = liveLeaderboard && liveLeaderboard.length > 0 ? liveLeaderboard : [
    { member_id: "stalin", pomodoros: 24, pages: 7.2, rank: 1 },
    { member_id: "mao", pomodoros: 18, pages: 8.5, rank: 2 },
    { member_id: "che", pomodoros: 15, pages: 5.8, rank: 3 }
];
---

<StudyGroupLayout title="Klassekampen" activePage="leaderboard">
    <div class="space-y-32">
        <div class="space-y-4">
            <h2 class="text-6xl font-black italic tracking-tighter text-white uppercase">Klassekampen <br/> <span class="text-red-600">& Udfordringer</span></h2>
            <p class="text-white/40 text-lg max-w-lg leading-relaxed italic">
                En venlig konkurrence for kollektivets bedste. PrÃ¦station hos den enkelte er sejr for alle.
            </p>
        </div>

        <section class="grid grid-cols-1 lg:grid-cols-2 gap-12">
            {/* Ugens Stakhanovit */}
            <div class="space-y-12">
                <div class="flex justify-between items-end">
                    <h3 class="text-3xl font-black uppercase tracking-tighter italic text-red-600">Ugens Stakhanovit</h3>
                    <button id="open-stats-modal" class="text-[10px] font-black uppercase tracking-widest text-white/20 hover:text-red-600 transition-colors">RapportÃ©r Arbejde +</button>
                </div>
                <p class="text-[10px] font-black uppercase tracking-widest text-white/20 -mt-8">Flest Pomodoro-sessions denne uge</p>
                
                <div class="space-y-6">
                    {leaderboardEntries.map((member, index) => (
                        <div class="p-8 bg-white/[0.03] border border-white/5 rounded-[40px] flex items-center justify-between group hover:border-red-600/30 transition-all">
                            <div class="flex items-center gap-6">
                                <div class={`w-12 h-12 rounded-2xl flex items-center justify-center font-black ${index === 0 ? 'bg-red-600 text-white shadow-glow-red' : 'bg-white/5 text-white/20'}`}>
                                    {index + 1}
                                </div>
                                <span class="text-xl font-bold text-white uppercase tracking-tight">{member.member_id.charAt(0).toUpperCase() + member.member_id.slice(1)}</span>
                            </div>
                            <div class="text-right">
                                <span class="text-2xl font-black tabular-nums text-red-600">{member.pomodoros}</span>
                                <span class="text-[10px] font-black uppercase text-white/10 ml-2">Sessions</span>
                            </div>
                        </div>
                    ))}
                </div>
            </div>

            {/* Sider-skabt */}
            <div class="space-y-12">
                <h3 class="text-3xl font-black uppercase tracking-tighter italic text-red-600">Sider-skabt</h3>
                <p class="text-[10px] font-black uppercase tracking-widest text-white/20 -mt-8">Nettobidrag til seminaropgaven</p>
                
                <div class="bg-white/[0.02] border border-white/5 rounded-[48px] p-12 space-y-12">
                    {leaderboardEntries.map(member => (
                        <div class="flex items-center gap-8">
                            <span class="w-16 text-[10px] font-black uppercase tracking-widest text-white/40">{member.member_id}</span>
                            <div class="flex-1 h-3 bg-white/5 rounded-full overflow-hidden">
                                <div class="h-full bg-red-600 shadow-glow-red" style={`width: ${member.pages * 10}%`}></div>
                            </div>
                            <span class="text-sm font-black text-white">{member.pages} s.</span>
                        </div>
                    ))}
                </div>
            </div>
        </section>

        {/* Stats Update Modal */}
        <div id="stats-modal" class="hidden fixed inset-0 z-50 flex items-center justify-center p-6 bg-black/80 backdrop-blur-sm">
            <div class="bg-[#0a0a0a] border border-white/10 rounded-[48px] p-12 max-w-md w-full space-y-8 shadow-2xl">
                 <div class="space-y-2">
                     <h4 class="text-2xl font-black uppercase italic text-white leading-none">Arbejds-Rapport</h4>
                     <p class="text-[10px] font-black uppercase tracking-widest text-red-600">Produktionsapparatets Indberetning</p>
                 </div>
                 <div class="space-y-6">
                     <div class="space-y-2">
                         <label class="text-[10px] font-black uppercase tracking-widest text-white/40">Pomodoro-sessions tilfÃ¸jet</label>
                         <input type="number" id="pomodoro-input" placeholder="Fx: 4" class="w-full bg-white/5 border border-white/10 rounded-xl px-4 py-3 text-white text-xs" />
                     </div>
                     <div class="space-y-2">
                         <label class="text-[10px] font-black uppercase tracking-widest text-white/40">Nye sider skrevet</label>
                         <input type="number" step="0.1" id="pages-input" placeholder="Fx: 1.5" class="w-full bg-white/5 border border-white/10 rounded-xl px-4 py-3 text-white text-xs" />
                     </div>
                     <div class="flex gap-4">
                         <button id="save-stats" class="flex-1 bg-red-600 hover:bg-red-700 text-white font-black uppercase tracking-widest py-4 rounded-2xl transition-all">Indsend Rapport</button>
                         <button id="close-stats-modal" class="px-8 bg-white/5 hover:bg-white/10 text-white/40 font-black uppercase tracking-widest rounded-2xl transition-all">Annuller</button>
                     </div>
                 </div>
            </div>
        </div>

        <script>
            const openBtn = document.getElementById('open-stats-modal');
            const closeBtn = document.getElementById('close-stats-modal');
            const modal = document.getElementById('stats-modal');
            const saveBtn = document.getElementById('save-stats');
            const pomodoroInp = document.getElementById('pomodoro-input');
            const pagesInp = document.getElementById('pages-input');
            const comradeId = document.cookie.split('; ').find(row => row.startsWith('study_comrade='))?.split('=')[1];

            openBtn?.addEventListener('click', () => modal?.classList.remove('hidden'));
            closeBtn?.addEventListener('click', () => modal?.classList.add('hidden'));

            saveBtn?.addEventListener('click', async () => {
                if (!comradeId) return;
                
                // Get current stats via API gateway (polling mock) or just optimist update
                // For simplicity, we just send the NEW totals if possible, but we need current.
                // Or we can fetch current via Gateway first.
                
                try {
                    const res = await fetch(`/api/study_gateway?table=study_leaderboard&limit=100`);
                    const allData = await res.json();
                    const current = allData.find(d => d.member_id === comradeId);

                    const newPomodoros = (current?.pomodoros || 0) + parseInt(pomodoroInp.value || 0);
                    const newPages = (current?.pages || 0) + parseFloat(pagesInp.value || 0);

                    const updateRes = await fetch('/api/study_gateway', {
                        method: 'POST',
                        headers: {'Content-Type': 'application/json'},
                        body: JSON.stringify({
                            table: 'study_leaderboard',
                            action: 'upsert',
                            match: 'member_id',
                            data: {
                                member_id: comradeId,
                                pomodoros: newPomodoros,
                                pages: newPages,
                                updated_at: new Date().toISOString()
                            }
                        })
                    });

                    if (updateRes.ok) window.location.reload();
                    else alert('Fejl ved opdatering');
                } catch (e) {
                    console.error('Update failed', e);
                    alert('Kunne ikke opdatere stats');
                }
            });
        </script>

        {/* MÃ¦rkesager (Badges) */}
        <section class="space-y-16">
            <div class="flex items-center gap-6">
                <h3 class="text-3xl font-black uppercase tracking-tighter italic">MÃ¦rkesager <span class="text-red-600 text-sm ml-4">(Missions & Badges)</span></h3>
                <div class="h-px flex-1 bg-white/5"></div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
                {[
                    { title: "Natuglen", desc: "Arbejde efter midnat", icon: "fa-owl", status: "Stalin", active: true },
                    { title: "Korrektur-K.", desc: "FÃ¦rrest stavefejl", icon: "fa-spell-check", status: "Che", active: true },
                    { title: "Kaffe-K.", desc: "Mest kaffe brygget", icon: "fa-mug-hot", status: "Ingen", active: false },
                    { title: "Excel-Ekspert", desc: "Mest komplekse model", icon: "fa-table", status: "Mao", active: true }
                ].map(badge => (
                    <div class={`p-10 rounded-[48px] border text-center space-y-6 transition-all group ${badge.active ? 'bg-red-600/5 border-red-600/20 hover:bg-red-600/10' : 'bg-white/[0.01] border-white/5 opacity-40'}`}>
                        <div class={`w-20 h-20 rounded-full flex items-center justify-center mx-auto text-3xl border ${badge.active ? 'bg-red-600 text-white border-red-600 shadow-glow-red' : 'bg-white/5 text-white/10 border-white/10'}`}>
                            <i class={`fa-solid ${badge.icon}`}></i>
                        </div>
                        <div class="space-y-2">
                            <h4 class="font-black text-white uppercase tracking-tight italic">{badge.title}</h4>
                            <p class="text-[10px] text-white/40 font-medium uppercase tracking-widest leading-tight">{badge.desc}</p>
                        </div>
                        {badge.active && (
                            <div class="pt-4 border-t border-red-600/10">
                                <span class="text-[9px] font-black uppercase tracking-widest text-red-600">BÃ¦res af {badge.status}</span>
                            </div>
                        )}
                    </div>
                ))}
            </div>
        </section>
    </div>
</StudyGroupLayout>



