---
import Layout from '@layouts/Layout.astro';
import Pill from '@components/ui/Pill.astro';
import Section from '@components/ui/Section.astro';
import Card from '@components/ui/Card.astro';
import Button from '@components/ui/Button.astro';
import ProjectCard from '@components/portfolio/ProjectCard.astro';
import SectionHeading from '@components/ui/SectionHeading.astro';
import ContactCard from '@components/common/ContactCard.astro';
import { createClient } from '@supabase/supabase-js';

const supabase = createClient(import.meta.env.SUPABASE_URL, import.meta.env.SUPABASE_ANON_KEY);
let { data: projects, error } = await supabase.from('projects').select('*').order('created_at', { ascending: false });

if (error) projects = [];

---

<Layout 
  title="Anton Meier Ebsen Jørgensen – Portefølje" 
  description="Portefølje med udvalgte projekter inden for makroøkonomi, økonometri og økonomiske modeller. Python, SAS, GAMS og Excel/VBA."
  bodyClass="portfolio-page"
>

  <style>
    .portfolio-wrap {
      max-width: 1200px;
      margin: 24px auto;
      padding: 0 16px 32px;
    }

    .hero-grid {
      display: grid;
      grid-template-columns: minmax(0, 1.6fr) minmax(0, 1fr);
      gap: 22px;
      align-items: start;
    }

    .projects-grid {
      display: grid;
      grid-template-columns: repeat(2, minmax(0, 1fr));
      gap: 14px;
      margin-bottom: 14px;
    }

    @media (max-width: 980px) {
      .hero-grid, .projects-grid {
        grid-template-columns: 1fr;
      }
    }
  </style>

  <main class="portfolio-wrap">
    <!-- HERO -->
      <Section>
        <div class="hero-grid">
          <Card variant="glass" class="p-8">
            <p class="text-xs font-extrabold uppercase tracking-widest text-dim mb-3">Portefølje</p>
            <h1 class="text-4xl leading-[1.15] mb-5 font-bold">Udvalgte projekter</h1>
            <p class="text-[17px] leading-relaxed text-dim mb-6 opacity-90">
              Her finder du projekter inden for makroøkonomi, økonometri, tidsrækker og modellering.
              Jeg lægger især vægt på reproducerbar analyse, klare resultater og pæn formidling.
            </p>
    
            <div class="flex flex-wrap gap-3 mb-6">
              <Button href="/cv">Se CV</Button>
              <Button href="https://github.com/AntonEbsen" target="_blank" rel="noopener" variant="ghost"><i class="fa-brands fa-github mr-2"></i> GitHub</Button>
              <Button href="https://www.linkedin.com/in/antonebsen/" target="_blank" rel="noopener" variant="ghost"><i class="fa-brands fa-linkedin mr-2"></i> LinkedIn</Button>
            </div>
    
            <div class="flex flex-wrap gap-2">
               {["Makro & pengepolitik", "Tidsrækker", "CGE/RBC", "Python", "SAS", "GAMS", "Excel/VBA"].map(pill => (
                 <Pill variant="accent">{pill}</Pill>
               ))}
            </div>
          </Card>
    
          <div class="hidden md:block">
            <Card variant="glass" class="p-6">
              <SectionHeading>Sådan er projekterne bygget</SectionHeading>
              <ul class="list-none p-0 m-0 space-y-2 text-sm text-dim opacity-90">
                <li class="relative pl-4 before:content-['-'] before:absolute before:left-0 before:text-accent">Kort problemformulering</li>
                <li class="relative pl-4 before:content-['-'] before:absolute before:left-0 before:text-accent">Metode (model/økonometri)</li>
                <li class="relative pl-4 before:content-['-'] before:absolute before:left-0 before:text-accent">Data & kode (hvis muligt)</li>
                <li class="relative pl-4 before:content-['-'] before:absolute before:left-0 before:text-accent">Resultater og læring</li>
              </ul>
            </Card>
          </div>
        </div>
      </Section>
  
      <!-- PROJECT GRID -->
      <Section>
        <div class="projects-grid">
          {projects?.map(p => (
            <ProjectCard
              title={p.title}
              tagString={p.tags ? p.tags.join(' · ') : ''}
              description={p.description}
              tools={[]}
              output={p.featured ? "Featured" : "Project"}
              links={p.url ? [{ text: 'Se Projekt', url: p.url, icon: 'arrow-right' }] : []}
            />
          ))}
        </div>
      </Section>
  
      <!-- Footer card -->
      <Section>
        <ContactCard />
      </Section>
  
  </main>
</Layout>
