<script>
  import confetti from 'canvas-confetti';

  // Trigger Confetti if authenticated (element exists)
  const celebration = document.getElementById('celebration-content');
  if (celebration) {
    // 1. Initial Confetti
    const duration = 5 * 1000;
    const animationEnd = Date.now() + duration;
    const defaults = { startVelocity: 30, spread: 360, ticks: 60, zIndex: 1000, colors: ['#d4af37', '#ffffff', '#b8860b'] };

    function randomInRange(min: number, max: number) {
      return Math.random() * (max - min) + min;
    }

    const interval: any = setInterval(function() {
      const timeLeft = animationEnd - Date.now();

      if (timeLeft <= 0) {
        return clearInterval(interval);
      }

      const particleCount = 50 * (timeLeft / duration);
      confetti({ ...defaults, particleCount, origin: { x: randomInRange(0.1, 0.3), y: Math.random() - 0.2 } });
      confetti({ ...defaults, particleCount, origin: { x: randomInRange(0.7, 0.9), y: Math.random() - 0.2 } });
    }, 250);

    // 2. Champagne Pop (Phase 3)
    const popBtn = document.getElementById('champagne-pop');
    if (popBtn) {
        popBtn.addEventListener('click', () => {
            // Audio Synthesis (Champagne Pop)
            const audioCtx = new (window.AudioContext || (window as any).webkitAudioContext)();
            const oscillator = audioCtx.createOscillator();
            const gainNode = audioCtx.createGain();

            oscillator.type = 'sine';
            oscillator.frequency.setValueAtTime(150, audioCtx.currentTime);
            oscillator.frequency.exponentialRampToValueAtTime(10, audioCtx.currentTime + 0.1);

            gainNode.gain.setValueAtTime(0.5, audioCtx.currentTime);
            gainNode.gain.exponentialRampToValueAtTime(0.01, audioCtx.currentTime + 0.1);

            oscillator.connect(gainNode);
            gainNode.connect(audioCtx.destination);

            oscillator.start();
            oscillator.stop(audioCtx.currentTime + 0.1);

            // Confetti Burst
            confetti({
                particleCount: 200,
                spread: 120,
                origin: { y: 0.6 },
                colors: ['#d4af37', '#ffffff', '#ff0000', '#00ff00']
            });
            
            // Visual pulse on button
            popBtn.classList.add('scale-95');
            setTimeout(() => popBtn.classList.remove('scale-95'), 100);
        });
    }

    // 3. Mouse Trail Particles (Phase 3)
    const canvas = document.getElementById('particle-canvas') as HTMLCanvasElement;
    if (canvas) {
        const ctx = canvas.getContext('2d')!;
        let particles: any[] = [];
        
        const resize = () => {
            canvas.width = window.innerWidth;
            canvas.height = window.innerHeight;
        };
        window.addEventListener('resize', resize);
        resize();

        class Particle {
            x: number; y: number; size: number; speedX: number; speedY: number; life: number;
            constructor(x: number, y: number) {
                this.x = x; this.y = y;
                this.size = Math.random() * 3 + 1;
                this.speedX = (Math.random() - 0.5) * 2;
                this.speedY = (Math.random() - 0.5) * 2;
                this.life = 1;
            }
            update() {
                this.x += this.speedX;
                this.y += this.speedY;
                this.life -= 0.02;
            }
            draw() {
                ctx.fillStyle = `rgba(212, 175, 55, ${this.life})`;
                ctx.beginPath();
                ctx.arc(this.x, this.y, this.size, 0, Math.PI * 2);
                ctx.fill();
            }
        }

        window.addEventListener('mousemove', (e) => {
            for (let i = 0; i < 2; i++) {
                particles.push(new Particle(e.clientX, e.clientY));
            }
        });

        const animate = () => {
            ctx.clearRect(0, 0, canvas.width, canvas.height);
            particles = particles.filter(p => p.life > 0);
            particles.forEach(p => { p.update(); p.draw(); });
            requestAnimationFrame(animate);
        };
        animate();
    }

    // Countdown Logic
    const eventDateStr = celebration.getAttribute('data-event-date');
    if (eventDateStr) {
        const targetDate = new Date(eventDateStr).getTime();
        const updateCountdown = () => {
            const now = new Date().getTime();
            const distance = targetDate - now;
            if (distance < 0) return;
            const days = Math.floor(distance / (1000 * 60 * 60 * 24));
            const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
            const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
            const seconds = Math.floor((distance % (1000 * 60)) / 1000);
            const dEl = document.getElementById('days');
            const hEl = document.getElementById('hours');
            const mEl = document.getElementById('minutes');
            const sEl = document.getElementById('seconds');
            if (dEl) dEl.innerText = String(days).padStart(2, '0');
            if (hEl) hEl.innerText = String(hours).padStart(2, '0');
            if (mEl) mEl.innerText = String(minutes).padStart(2, '0');
            if (sEl) sEl.innerText = String(seconds).padStart(2, '0');
        };
        updateCountdown();
        setInterval(updateCountdown, 1000);
    }

    // Form Submissions (existing logic)
    const gbForm = document.getElementById('guestbook-form') as HTMLFormElement;
    const gbStatus = document.getElementById('form-status');
    if (gbForm && gbStatus) {
        gbForm.addEventListener('submit', async (e) => {
            e.preventDefault();
            const formData = new FormData(gbForm);
            gbStatus.classList.remove('hidden', 'text-red-400', 'text-green-400');
            gbStatus.innerText = "Sender hilsen...";
            try {
                const res = await fetch('/api/guestbook', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(Object.fromEntries(formData))
                });
                if (res.ok) {
                    gbStatus.innerText = "Tak! Din hilsen er modtaget. üéâ";
                    gbStatus.classList.add('text-green-400');
                    gbForm.reset();
                } else throw new Error();
            } catch {
                gbStatus.innerText = "Fejl. Pr√∏v igen.";
                gbStatus.classList.add('text-red-400');
            }
        });
    }

    const rsvpForm = document.getElementById('rsvp-form') as HTMLFormElement;
    const rsvpStatus = document.getElementById('rsvp-status');
    if (rsvpForm && rsvpStatus) {
        rsvpForm.addEventListener('submit', async (e) => {
            e.preventDefault();
            const formData = new FormData(rsvpForm);
            rsvpStatus.classList.remove('hidden', 'text-red-400', 'text-green-400');
            rsvpStatus.innerText = "Sender RSVP...";
            try {
                const res = await fetch('/api/rsvp', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(Object.fromEntries(formData))
                });
                if (res.ok) {
                    rsvpStatus.innerText = "Tilmelding modtaget! Ses til fest! üç∫";
                    rsvpStatus.classList.add('text-green-400');
                    rsvpForm.reset();
                    confetti({ particleCount: 150, spread: 70, origin: { y: 0.8 } });
                } else throw new Error();
            } catch {
                rsvpStatus.innerText = "Fejl ved tilmelding.";
                rsvpStatus.classList.add('text-red-400');
            }
        });
    }
  }
</script>

