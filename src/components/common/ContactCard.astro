---
import Card from '@components/ui/Card.astro';
import Button from '@components/ui/Button.astro';

interface Props {
  title?: string;
  text?: string;
  variant?: "default" | "glass" | "bordered";
  action?: "contact" | "socials" | "email" ; // Simple toggle for now, can be expanded
  lang?: "da" | "en";
}

const { 
  title = "Mere", 
  text = "Jeg opdaterer løbende porteføljen. Du kan også finde mere på GitHub og LinkedIn.",
  variant = "glass",
  action = "socials",
  lang = "da"
} = Astro.props;

const isEn = lang === 'en';
---

<Card variant={variant} class="p-6">
  <h2 class="text-xs font-bold uppercase tracking-wider text-accent mb-4">{title}</h2>
  
  {action === "socials" ? (
      <p class="text-dim opacity-80 m-0">
        {text} 
        <br class="hidden md:block"/>
        <span class="inline-flex gap-4 mt-2">
            <a href="https://github.com/AntonEbsen" target="_blank" rel="noopener" class="text-accent font-bold no-underline hover:text-white transition-colors">GitHub</a>
            <a href="https://www.linkedin.com/in/antonebsen/" target="_blank" rel="noopener" class="text-accent font-bold no-underline hover:text-white transition-colors">LinkedIn</a>
        </span>
      </p>
  ) : action === "email" ? (
      <p class="text-dim opacity-70 mb-6">{text}</p>
      <div class="flex flex-wrap gap-3">
          <Button href={`mailto:anton.ebsen@gmail.com`}>Email</Button>
          <Button href={isEn ? "/en/contact" : "/contact"} variant="ghost">{isEn ? "Contact" : "Kontakt"}</Button>
      </div>
  ) : (
     <>
        <p class="text-dim opacity-70 mb-6">{text}</p>
        <div class="flex flex-wrap gap-3">
          <Button href={isEn ? "/en/contact" : "/contact"}><i class="fa-solid fa-envelope mr-2"></i> {isEn ? "Contact" : "Kontakt"}</Button>
          <Button href={isEn ? "/en/services" : "/services"} variant="ghost"><i class="fa-solid fa-handshake mr-2"></i> {isEn ? "Services" : "Samarbejde"}</Button>
        </div>
     </>
  )}
</Card>

