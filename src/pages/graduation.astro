import Layout from '@layouts/Layout.astro';
import Section from '@components/ui/Section.astro';
import Button from '@components/ui/Button.astro';
import { createClient } from '@supabase/supabase-js';

// We use SSR to handle the password post without exposing it in a JS variable
export const prerender = false;

let error = "";
let authenticated = false;

// Supabase Init
const supabaseUrl = import.meta.env.SUPABASE_URL;
const supabaseKey = import.meta.env.SUPABASE_ANON_KEY;
const supabase = createClient(supabaseUrl, supabaseKey);

if (Astro.request.method === "POST") {
  try {
    const data = await Astro.request.formData();
    
    // Handle Login
    if (data.has("password")) {
        const password = data.get("password");
        if (password?.toString().toLowerCase() === "cand.polit") {
            authenticated = true;
        } else {
            error = "Forkert adgangskode. Pr√∏v igen.";
        }
    }
  } catch (e) {
    error = "Der opstod en fejl. Pr√∏v igen.";
  }
}

// Fetch Guestbook Messages
const { data: messages } = await supabase
    .from('guestbook')
    .select('*')
    .eq('approved', true)
    .order('created_at', { ascending: false });

// Fetch RSVPs
const { data: rsvps } = await supabase
    .from('rsvp')
    .select('name, created_at, plus_one, song_request')
    .order('created_at', { ascending: false });

// Fetch Toasts
const { data: toastData } = await supabase
    .from('toasts')
    .select('count')
    .eq('id', 1)
    .single();
const initialToasts = toastData?.count || 0;

// Combine for Activity Feed (Ticker)
const activityFeed = [
    ...(messages || []).map(m => ({ type: 'guestbook', name: m.name, time: new Date(m.created_at) })),
    ...(rsvps || []).map(r => ({ type: 'rsvp', name: r.name, time: new Date(r.created_at) }))
].sort((a, b) => b.time.getTime() - a.time.getTime()).slice(0, 10);

// Analytics Logic
const totalGuests = (rsvps || []).reduce((acc, r) => acc + (r.plus_one ? 2 : 1), 0);
const guestTypeSplit = (rsvps || []).reduce((acc, r) => {
    acc[r.plus_one ? 'Plus One' : 'Single'] = (acc[r.plus_one ? 'Plus One' : 'Single'] || 0) + 1;
    return acc;
}, {} as Record<string, number>);

// Song Requests Logic
const requestedSongs = (rsvps || [])
    .filter(r => r.song_request && r.song_request.trim() !== '')
    .slice(0, 5);

// Placeholder for the event date
const eventDate = "2026-06-01T18:00:00"; 
const eventEndDate = "2026-06-02T02:00:00";
const eventTitle = "Dimissionsfest: Anton Ebsen";
const eventDetails = "Fejring af cand.polit graduering p√• Hatten Bar!";
const eventLocation = "Hatten Bar, Prinsensgade 12, 1305 K√∏benhavn K";

// Calendar Links
const googleCalendarUrl = `https://www.google.com/calendar/render?action=TEMPLATE&text=${encodeURIComponent(eventTitle)}&dates=${eventDate.replace(/[-:]/g, '')}/${eventEndDate.replace(/[-:]/g, '')}&details=${encodeURIComponent(eventDetails)}&location=${encodeURIComponent(eventLocation)}`;
