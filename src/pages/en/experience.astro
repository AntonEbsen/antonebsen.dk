---
import Layout from '@layouts/Layout.astro';
import Card from '@components/ui/Card.astro';
import Button from '@components/ui/Button.astro';
import Pill from '@components/ui/Pill.astro';
import SectionHeading from '@components/ui/SectionHeading.astro';
import Section from '@components/ui/Section.astro';
import ExperienceCard from '@components/experience/ExperienceCard.astro';
import ContactCard from '@components/common/ContactCard.astro';
import cv from '@data/cv_en.json';

// Use data from cv_en.json instead of database to ensure English content
const experience = cv.experience;

---

<Layout 
  title="Anton Meier Ebsen Jørgensen – Professional Experience" 
  description="Professional experience: teaching, data, and analysis. Roles, responsibilities, results, and tools."
  bodyClass="experience-page"
>
  <style>
    .experience-wrap {
      max-width: 1200px;
      margin: 24px auto;
      padding: 0 16px 32px;
    }
    
    .hero-grid {
      display: grid;
      grid-template-columns: minmax(0, 1.6fr) minmax(0, 1fr);
      gap: 22px;
      align-items: start;
    }

    .roles-grid {
      display: grid;
      grid-template-columns: repeat(3, minmax(0, 1fr));
      gap: 14px;
      margin-top: 12px;
    }

    .process-grid {
      display: grid;
      grid-template-columns: repeat(4, minmax(0, 1fr));
      gap: 14px;
      margin-top: 12px;
    }

    @media (max-width: 980px) {
      .hero-grid, .roles-grid, .process-grid { 
        grid-template-columns: 1fr; 
      }
    }
  </style>

  <main class="experience-wrap">

    <!-- HERO -->
    <Section>
      <div class="hero-grid">
        <Card variant="glass" class="p-6">
          <SectionHeading class="text-dim mb-3">Experience</SectionHeading>
          <h1 class="text-4xl leading-tight mb-4 font-bold">Teaching, Data, and Deliverables – in Practice</h1>
          <p class="text-lg leading-relaxed text-dim mb-6">
            Here is my professional experience gathered in a format that's easy to skim:
            role → responsibility → results → tools. (No fluff, just signal.)
          </p>
  
          <div class="flex flex-wrap gap-2 mb-6" aria-label="Key Competencies">
            <Pill variant="accent">Teaching</Pill>
            <Pill variant="accent">Excel/VBA</Pill>
            <Pill variant="accent">Data & Analysis</Pill>
            <Pill variant="accent">Communication</Pill>
            <Pill variant="accent">Structure & Quality</Pill>
          </div>
  
          <div class="flex flex-wrap gap-3">
            <Button href="#roles"><i class="fa-solid fa-briefcase mr-2"></i> View Roles</Button>
            <Button href="/en/kursusstatistik" variant="ghost"><i class="fa-solid fa-chart-column mr-2"></i> Course Stats</Button>
            <Button href="/en/contact" variant="ghost"><i class="fa-solid fa-envelope mr-2"></i> Contact</Button>
          </div>
        </Card>
  
        <div class="hidden md:block">
          <Card variant="glass" class="p-4">
            <SectionHeading>Short Version</SectionHeading>
            <ul class="list-none p-0 m-0 space-y-2 text-dim text-[14px]">
              <li>Excel/VBA instructor with strong evaluations</li>
              <li>Builds reusable materials and workflows</li>
              <li>Thrives on deadlines and "delivery mode"</li>
            </ul>
          </Card>
        </div>
      </div>
    </Section>

    <!-- ROLLER -->
    <Section id="roles" aria-label="Roles">
      <Card variant="bordered" class="p-6">
        <SectionHeading>Roles</SectionHeading>
        <div class="roles-grid">
          {experience.map((role) => (
            <ExperienceCard 
              title={role.title}
              organization={role.organization}
              location={role.location}
              period={role.period}
              type={role.type}
              description={role.description}
              highlights={role.highlights}
              links={role.links}
            />
          ))}
        </div>
      </Card>
    </Section>

    <!-- HOW I WORK -->
    <Section>
      <Card variant="bordered" class="p-6">
        <SectionHeading>How I Typically Work</SectionHeading>

        <div class="process-grid">
          {[
            { step: "1) Clarify Goals", desc: "What is the output? Who is the audience? What defines 'done'?" },
            { step: "2) Data & Context", desc: "Inputs, constraints, assumptions. Clarity over magic." },
            { step: "3) Methodology", desc: "Choose the simplest possible approach that remains correct." },
            { step: "4) Delivery", desc: "Clear output: structure, notes, and the 'so what?' factor." }
          ].map((item) => (
            <Card variant="bordered" class="p-4 bg-glass">
              <h3 class="text-[15px] font-bold m-0 mb-2">{item.step}</h3>
              <p class="text-[13px] text-dim m-0 opacity-80 leading-relaxed">{item.desc}</p>
            </Card>
          ))}
        </div>
      </Card>
    </Section>

    <!-- CTA -->
    <Section>
      <ContactCard 
        variant="default" 
        title="Want to collaborate?" 
        text="If you have a concrete need (teaching, templates, data work), please reach out."
        action="contact"
      />
    </Section>

  </main>
</Layout>
