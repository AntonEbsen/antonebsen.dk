---
import Layout from '../layouts/Layout.astro';
---

<Layout 
  title="Gæstebog | Anton Ebsen" 
  description="Læg en hilsen i den digitale logbog."
  bodyClass="guestbook-page"
>
    <main class="max-w-4xl mx-auto p-6 md:p-12 min-h-screen font-mono text-gold-50 bg-black">
        
        <!-- HEADER -->
        <header class="mb-12 text-center">
            <h1 class="text-4xl md:text-6xl font-bold mb-4 text-gold-400">
                Gæstebog
            </h1>
            <div class="h-1 w-24 bg-gold-500 mx-auto mb-6"></div>
            <p class="text-gray-400 max-w-lg mx-auto">
                En digital tidskapsel. Skriv en besked, en tanke eller bare "Hej". 
                <br><span class="text-xs opacity-50">(Alle beskeder godkendes før de vises).</span>
            </p>
        </header>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
            
            <!-- SIGN FORM -->
            <section>
                <div class="border border-gray-800 bg-gray-900/50 p-6 rounded-lg backdrop-blur-sm shadow-[0_0_20px_rgba(0,0,0,0.5)] sticky top-24">
                    <h2 class="text-xl font-bold text-gold-400 mb-6 flex items-center">
                        <i class="fa-solid fa-pen-nib mr-3"></i> Skriv i bogen
                    </h2>
                    
                    <form id="sign-form" class="space-y-4">
                        <div>
                            <label class="block text-xs uppercase text-gray-500 mb-1">Navn / Alias</label>
                            <input type="text" id="g-name" required class="w-full bg-black border border-gray-700 p-3 rounded text-gold-100 focus:border-gold-500 focus:outline-none transition-colors" placeholder="f.eks. CyberPunk2077" />
                        </div>
                        
                        <div>
                            <label class="block text-xs uppercase text-gray-500 mb-1">Besked</label>
                            <textarea id="g-message" required rows="4" class="w-full bg-black border border-gray-700 p-3 rounded text-gold-100 focus:border-gold-500 focus:outline-none transition-colors" placeholder="Din hilsen her..."></textarea>
                        </div>

                        <button type="submit" class="w-full bg-gradient-to-r from-gold-600 to-amber-600 text-black font-bold py-3 rounded hover:from-gold-500 hover:to-amber-500 transform hover:scale-[1.02] transition-all shadow-lg">
                            Underskriv
                        </button>
                        <p id="form-feedback" class="text-center text-xs text-green-400 hidden mt-2">
                            Tak! Din beskedventer nu på godkendelse.
                        </p>
                    </form>
                </div>
            </section>

            <!-- MESSAGES FEED -->
            <section>
                <h2 class="text-xl font-bold text-gray-400 mb-6 flex items-center border-b border-gray-800 pb-2">
                    <i class="fa-solid fa-clock-rotate-left mr-3"></i> Seneste Hilsner
                </h2>
                
                <div id="messages-feed" class="space-y-6">
                    <!-- LOADING STATE -->
                    <div class="animate-pulse flex space-x-4">
                        <div class="flex-1 space-y-4 py-1">
                            <div class="h-4 bg-gray-800 rounded w-3/4"></div>
                            <div class="space-y-2">
                                <div class="h-4 bg-gray-800 rounded"></div>
                                <div class="h-4 bg-gray-800 rounded w-5/6"></div>
                            </div>
                        </div>
                    </div>
                </div>

                <div id="empty-state" class="hidden text-center py-12 text-gray-600">
                    <p>Ingen hilsner endnu. Vær den første!</p>
                </div>
            </section>

        </div>

        <div class="mt-24 text-center">
            <a href="/" class="text-gray-500 hover:text-gold-400 text-sm transition-colors">← Tilbage til forsiden</a>
        </div>

    </main>
</Layout>

<script>
    async function loadGuestbook() {
        const feed = document.getElementById('messages-feed')!;
        try {
            const res = await fetch('/api/guestbook');
            const data = await res.json();
            
            feed.innerHTML = '';
            
            if (data.length === 0) {
                document.getElementById('empty-state')?.classList.remove('hidden');
                return;
            } else {
                 document.getElementById('empty-state')?.classList.add('hidden');
            }

            data.forEach((msg: any) => {
                const date = new Date(msg.created_at).toLocaleDateString('da-DK', { year: 'numeric', month: 'short', day: 'numeric' });
                
                const card = document.createElement('div');
                card.className = "group relative border-l-2 border-gray-800 pl-6 pb-2 hover:border-gold-500/50 transition-colors";
                card.innerHTML = `
                    <div class="absolute -left-[9px] top-0 w-4 h-4 rounded-full bg-black border-2 border-gray-800 group-hover:border-gold-500 transition-colors"></div>
                    <div class="mb-2">
                        <span class="font-bold text-gold-200 text-lg">${msg.name}</span>
                        <span class="text-xs text-gray-600 ml-2 font-mono">${date}</span>
                    </div>
                    <p class="text-gray-400 leading-relaxed font-serif italic">"${msg.message}"</p>
                `;
                feed.appendChild(card);
            });

        } catch (err) {
            console.error(err);
            feed.innerHTML = '<p class="text-red-500 text-sm">Kunne ikke hente gæstebogen.</p>';
        }
    }

    document.getElementById('sign-form')?.addEventListener('submit', async (e) => {
        e.preventDefault();
        const btn = (e.currentTarget as HTMLFormElement).querySelector('button')!;
        const originalText = btn.innerText;
        btn.disabled = true;
        btn.innerText = "Sender...";

        const name = (document.getElementById('g-name') as HTMLInputElement).value;
        const message = (document.getElementById('g-message') as HTMLTextAreaElement).value;

        try {
            await fetch('/api/guestbook', {
                method: 'POST',
                body: JSON.stringify({ name, message })
            });
            
            (e.target as HTMLFormElement).reset();
            const feedback = document.getElementById('form-feedback')!;
            feedback.classList.remove('hidden');
            setTimeout(() => feedback.classList.add('hidden'), 5000);

        } catch (err) {
            alert("Fejl ved afsendelse. Prøv igen.");
        } finally {
            btn.disabled = false;
            btn.innerText = originalText;
        }
    });

    // Init
    loadGuestbook();
</script>
