---
import Layout from '@layouts/BaseLayout.astro';
import Section from '@components/ui/Section.astro';
import Card from '@components/ui/Card.astro';
import Pill from '@components/ui/Pill.astro';
import SectionHeading from '@components/ui/SectionHeading.astro';
import KnowledgeGraph from '@components/common/KnowledgeGraph.astro';
import SlideDeck from '@components/common/SlideDeck.astro';
import GlobalAssistant from '@components/common/GlobalAssistant';
import DataPlayground from '@components/project/DataPlayground';
import CodeVault from '@components/project/CodeVault';

interface Props {
  lang: 'da' | 'en';
  project: {
    title: string;
    subtitle: string;
    executiveSummary: string;
    researchQuestions: string[];
    methodology: {
        model: string;
        strategy: string;
        data: string;
        estimation: string;
    };
    keyFindings: string[];
    policyRelevance: string[];
    dataTools: {
        sources: string;
        software: string;
    };
    citation: {
        text: string;
        pdfUrl: string;
    };
    limitations?: string[];
    highlights?: { label: string; value: string }[];
    secondaryAnalysis?: {
        title: string;
        description: string;
        items: string[];
    };
    contextNote?: string;
    continuityNote?: {
        title: string;
        text: string;
    };
    visualAnalysis?: {
        title: string;
        charts: {
            title: string;
            description: string;
            interactive?: boolean;
        }[];
    };
    launchLabUrl?: string;
    codeSnippet?: {
        lang: string;
        title: string;
        code: string;
    };
    gallery?: {
        src: string;
        caption: string;
        alt: string;
    }[];
    videoUrl?: string;
    techStack?: {
        name: string;
        icon: string;
        version?: string;
    }[];
    timeline?: {
        date: string;
        title: string;
        description: string;
    }[];
    dataLinks?: {
        label: string;
        url: string;
        icon: string;
    }[];
    interactiveChart?: {
        title: string;
        description: string;
        type: 'line' | 'bar' | 'scatter';
        labels: string[];
        datasets: {
            label: string;
            data: number[];
            borderColor?: string;
            backgroundColor?: string;
        }[];
    };
    knowledgeGraph?: {
        nodes: { id: string; group: number; radius?: number }[];
        links: { source: string; target: string; value: number }[];
    };
    slides?: string[];
    glossary?: { term: string; definition: string }[];
    ui: {
        methodology: string;
        findings: string;
        relevance: string;
        dataTools: string;
        download: string;
        citation: string;
        execSummary?: string;
        researchQuestions?: string;
        limitations?: string;
        secondaryAnalysis?: string;
        gallery?: string;
        codeVault?: string;
        videoAbstract?: string;
        techStack?: string;
        timeline?: string;
        liveData?: string;
        openScience?: string;
        continuityTitle?: string;
    }
    };
};

const { lang, project } = Astro.props;
---

<Layout title={project.title} description={project.executiveSummary} showChatWidget={false}>
  <main class="bg-white min-h-screen text-slate-900 pb-20 selection:bg-accent/20">
    <!-- Header -->
    <header class="border-b border-slate-100 py-20 px-4 relative overflow-hidden">
      <!-- Background Abstract -->
      <div class="absolute inset-0 bg-slate-50 opacity-50 -z-10"></div>
      
      <div class="container mx-auto max-w-4xl text-center relative z-10">
        <Pill variant="accent" class="mb-6 uppercase tracking-[0.2em] font-bold text-[10px]">Research Brief</Pill>
        
        <h1 class="text-4xl md:text-6xl font-serif text-slate-900 leading-tight mb-6 font-medium">
          {project.title}
        </h1>
        <p class="text-xl text-slate-500 font-serif italic max-w-2xl mx-auto mb-10">
          {project.subtitle}
        </p>

        {/* Phase 9: The Impact Hero */}
        {project.highlights && (
           <div class="flex flex-wrap justify-center gap-4 md:gap-8">
               {project.highlights.map(h => (
                   <div class="bg-white border border-slate-200 px-6 py-3 rounded-xl shadow-sm">
                       <p class="text-[10px] uppercase font-bold text-slate-400 tracking-wider mb-1">{h.label}</p>
                       <p class="text-lg md:text-xl font-bold text-slate-900">{h.value}</p>
                   </div>
               ))}
           </div>
        )}
      </div>
    </header>
        <p class="text-xl text-slate-500 font-serif italic max-w-2xl mx-auto">
          {project.subtitle}
        </p>
      </div>
    </header>

    <div class="container mx-auto max-w-4xl px-4 py-16">
      
      <!-- Context Note (Optional) -->
      {project.contextNote && (
        <section class="mb-12">
          <div class="bg-amber-50/50 border border-amber-100 p-6 rounded-2xl flex items-start gap-4">
            <i class="fa-solid fa-circle-info text-amber-400 mt-1"></i>
            <p class="text-amber-800/80 text-sm leading-relaxed italic font-serif">
              {project.contextNote}
            </p>
          </div>
        </section>
      )}

      <!-- Executive Summary -->
      <section class="mb-20">
        <h2 class="text-xs uppercase tracking-widest font-bold text-accent mb-6 flex items-center gap-4">
           {project.ui.execSummary}
           <div class="h-[1px] flex-grow bg-slate-100"></div>
        </h2>
        <div class="bg-slate-50 border-l-4 border-accent p-8 rounded-r-2xl">
           <p class="text-slate-700 leading-relaxed text-lg font-serif">
             {project.executiveSummary}
           </p>
        </div>
      </section>

      <!-- Research Questions -->
      <section class="mb-20">
         <h2 class="text-xs uppercase tracking-widest font-bold text-slate-400 mb-8">{project.ui.researchQuestions}</h2>
         <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            {project.researchQuestions.map(q => (
               <div class="border border-slate-100 p-6 rounded-2xl bg-white shadow-sm flex items-start gap-4">
                  <div class="w-2 h-2 rounded-full bg-accent mt-2 shrink-0"></div>
                  <p class="font-medium text-slate-800">{q}</p>
               </div>
            ))}
         </div>
      </section>

      <!-- Methodology -->
      <section class="mb-20">
         <h2 class="text-xs uppercase tracking-widest font-bold text-slate-400 mb-8">{project.ui.methodology}</h2>
         <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <div class="space-y-6">
               <div>
                  <h4 class="text-sm font-bold text-slate-900 mb-1">Model Framework</h4>
                  <p class="text-slate-600 text-[15px] leading-relaxed">{project.methodology.model}</p>
               </div>
               <div>
                  <h4 class="text-sm font-bold text-slate-900 mb-1">Identification Strategy</h4>
                  <p class="text-slate-600 text-[15px] leading-relaxed">{project.methodology.strategy}</p>
               </div>
            </div>
            <div class="space-y-6">
               <div>
                  <h4 class="text-sm font-bold text-slate-900 mb-1">Data & Frequency</h4>
                  <p class="text-slate-600 text-[15px] leading-relaxed">{project.methodology.data}</p>
               </div>
               <div>
                  <h4 class="text-sm font-bold text-slate-900 mb-1">Estimation Approach</h4>
                  <p class="text-slate-600 text-[15px] leading-relaxed">{project.methodology.estimation}</p>
               </div>
            </div>
         </div>
         
         <!-- Visual Placeholder Suggestion: Transmission Pathway Diagram -->
         <div class="mt-12 p-12 border-2 border-dashed border-slate-100 rounded-[32px] flex items-center justify-center text-slate-300 text-sm italic bg-slate-50/50">
            [ Suggested: Transmission Pathway Diagram: US Fed Funds Rate → VIX → European Bank Leverage → Global Credit ]
         </div>
      </section>

      <!-- Key Findings -->
      <section class="mb-20">
         <h2 class="text-xs uppercase tracking-widest font-bold text-slate-400 mb-8">{project.ui.findings}</h2>
         <ul class="space-y-6">
            {project.keyFindings.map(finding => (
               <li class="flex items-start gap-6 group">
                  <div class="w-10 h-10 rounded-xl bg-slate-50 flex items-center justify-center text-accent font-bold text-sm shrink-0 border border-slate-100">
                     <i class="fa-solid fa-check"></i>
                  </div>
                  <p class="text-slate-700 leading-relaxed pt-1">{finding}</p>
               </li>
            ))}
         </ul>

         <!-- Visual Placeholder Suggestion: IRF Plot -->
         <div class="mt-12 p-12 border-2 border-dashed border-slate-100 rounded-[32px] flex items-center justify-center text-slate-300 text-sm italic bg-slate-50/50">
            [ Suggested: Main Empirical Plot / Regression Results ]
         </div>
      </section>

      <!-- Secondary Analysis (Optional) -->
      {project.secondaryAnalysis && (
        <section class="mb-20">
           <h2 class="text-xs uppercase tracking-widest font-bold text-slate-400 mb-8">{project.ui.secondaryAnalysis || project.secondaryAnalysis.title}</h2>
           <p class="text-slate-600 mb-8 leading-relaxed italic">{project.secondaryAnalysis.description}</p>
           <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              {project.secondaryAnalysis.items.map(item => (
                 <div class="p-6 rounded-2xl bg-slate-50 border border-slate-100">
                    <p class="text-slate-700 text-sm leading-relaxed">{item}</p>
                 </div>
              ))}
           </div>
        </section>
      )}


      <!-- Phase 9: The Video Abstract -->
      {project.videoUrl && (
          <section class="mb-20">
              <h2 class="text-xs uppercase tracking-widest font-bold text-slate-400 mb-8">{project.ui.videoAbstract || 'Video Abstract'}</h2>
              <div class="aspect-video bg-slate-900 rounded-[32px] overflow-hidden shadow-2xl">
                 <iframe 
                    src={project.videoUrl} 
                    title="Video Abstract" 
                    class="w-full h-full" 
                    frameborder="0" 
                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
                    allowfullscreen
                 ></iframe>
              </div>
          </section>
      )}

      <!-- Phase 9: The Code Vault -->
      {project.codeSnippet && (
          <section class="mb-20">
              <div class="bg-slate-900 rounded-[32px] overflow-hidden shadow-2xl text-white">
                  <div class="bg-white/5 p-4 flex items-center justify-between border-b border-white/10">
                      <div class="flex items-center gap-3">
                          <div class="flex gap-1.5">
                              <div class="w-2.5 h-2.5 rounded-full bg-red-500"></div>
                              <div class="w-2.5 h-2.5 rounded-full bg-yellow-500"></div>
                              <div class="w-2.5 h-2.5 rounded-full bg-green-500"></div>
                          </div>
                          <span class="text-xs font-mono text-slate-400 ml-2">{project.codeSnippet.title}</span>
                      </div>
                      <span class="text-[10px] bg-accent/20 text-accent px-2 py-0.5 rounded uppercase font-bold tracking-wider">{project.codeSnippet.lang}</span>
                  </div>
                  <div class="h-auto">
                       <CodeVault 
                           client:only="react" 
                           title={project.codeSnippet.title} 
                           lang={project.codeSnippet.lang} 
                           code={project.codeSnippet.code} 
                       />
                  </div>
              </div>
          </section>
      )}

      <!-- Phase 9: The Gallery -->
      {project.gallery && (
          <section class="mb-20">
             <h2 class="text-xs uppercase tracking-widest font-bold text-slate-400 mb-8">{project.ui.gallery || 'Gallery'}</h2>
             <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                {project.gallery.map(img => (
                    <div class="group">
                        <div class="rounded-2xl overflow-hidden border border-slate-200 shadow-sm mb-3">
                            <img src={img.src} alt={img.alt} class="w-full h-auto transform group-hover:scale-105 transition-transform duration-500" />
                        </div>
                        <p class="text-xs text-slate-500 italic text-center">{img.caption}</p>
                    </div>
                ))}
             </div>
          </section>
      )}

      <!-- Visual Analysis (Legacy/Optional) -->
      {project.visualAnalysis && !project.gallery && (
        <section class="mb-20">
           <h2 class="text-xs uppercase tracking-widest font-bold text-slate-400 mb-8">{project.ui.visualAnalysis || project.visualAnalysis.title}</h2>
           <div class="grid grid-cols-1 gap-12">
              {project.visualAnalysis.charts.map(chart => (
                 <div class="space-y-4">
                    <div class="flex items-center justify-between">
                       <h3 class="text-lg font-bold text-slate-800">{chart.title}</h3>
                       {chart.interactive && (
                          <span class="text-[10px] uppercase font-bold text-accent bg-accent/5 px-2 py-1 rounded-full border border-accent/10">
                             <i class="fa-solid fa-mouse-pointer mr-1"></i> Interactive
                          </span>
                       )}
                    </div>
                    <div class="aspect-video bg-slate-50 border-2 border-dashed border-slate-200 rounded-[32px] flex flex-col items-center justify-center text-slate-300 gap-2 p-8 text-center">
                       <i class="fa-solid fa-chart-line text-3xl mb-2"></i>
                       <p class="text-sm italic font-serif max-w-md">{chart.description}</p>
                    </div>
                 </div>
              ))}
           </div>
        </section>
      )}

      <!-- Policy Relevance -->
      <section class="mb-20 bg-slate-900 text-white p-12 rounded-[40px] shadow-2xl">
         <h2 class="text-xs uppercase tracking-widest font-bold text-accent mb-8">{project.ui.relevance}</h2>
         <div class="space-y-6">
            {project.policyRelevance.map(item => (
               <p class="text-slate-300 leading-relaxed font-serif text-lg italic border-l-2 border-accent/30 pl-8">
                  {item}
               </p>
            ))}
         </div>
      </section>

      <!-- Continuity Note (Optional) -->
      {project.continuityNote && (
        <section class="mb-20">
           <h2 class="text-xs uppercase tracking-widest font-bold text-slate-400 mb-8">{project.ui.continuityTitle || 'Conceptual Continuity'}</h2>
           <div class="border-t-2 border-slate-100 pt-8">
              <h3 class="text-xl font-serif text-slate-800 mb-4">{project.continuityNote.title}</h3>
              <p class="text-slate-600 leading-relaxed">{project.continuityNote.text}</p>
           </div>
        </section>
      )}

      <!-- Limitations (Optional) -->
      {project.limitations && (
        <section class="mb-20">
           <h2 class="text-xs uppercase tracking-widest font-bold text-slate-400 mb-8">{project.ui.limitations || 'Limitations'}</h2>
           <ul class="space-y-4">
              {project.limitations.map(limit => (
                 <li class="text-slate-500 text-sm leading-relaxed flex items-start gap-3">
                    <span class="text-slate-300">•</span>
                    {limit}
                 </li>
              ))}
           </ul>
        </section>
      )}


      <!-- Phase 10: The Live Data -->
      {project.interactiveChart && (
          <section class="mb-20">
              <h2 class="text-xs uppercase tracking-widest font-bold text-slate-400 mb-8">{project.ui.liveData || 'Live Data'}</h2>
              <div class="bg-white border border-slate-100 p-8 rounded-[32px] shadow-sm">
                  <div class="mb-6">
                      <h3 class="text-lg font-bold text-slate-800 mb-2">{project.interactiveChart.title}</h3>
                      <p class="text-sm text-slate-500 italic">{project.interactiveChart.description}</p>
                  </div>
                  <div class="relative h-[400px] w-full">
                      <canvas id="projectChart"></canvas>
                  </div>
              </div>
          </section>
      )}

      <!-- Phase 10: The Tech Stack -->
      {project.techStack && (
          <section class="mb-20">
              <h2 class="text-xs uppercase tracking-widest font-bold text-slate-400 mb-8">{project.ui.techStack || 'Tech Stack'}</h2>
              <div class="flex flex-wrap gap-4">
                  {project.techStack.map(tech => (
                      <div class="flex items-center gap-3 bg-slate-50 border border-slate-200 px-5 py-3 rounded-xl">
                          <i class={`${tech.icon} text-xl text-slate-700`}></i>
                          <div class="flex flex-col">
                              <span class="text-sm font-bold text-slate-900 leading-none">{tech.name}</span>
                              {tech.version && <span class="text-[10px] text-slate-500 mt-1">v{tech.version}</span>}
                          </div>
                      </div>
                  ))}
              </div>
          </section>
      )}

      <!-- Phase 10: The Timeline -->
      {project.timeline && (
          <section class="mb-20">
              <h2 class="text-xs uppercase tracking-widest font-bold text-slate-400 mb-8">{project.ui.timeline || 'Project Timeline'}</h2>
              <div class="space-y-8 pl-4 border-l-2 border-slate-100">
                  {project.timeline.map((step, index) => (
                      <div class="relative pl-8">
                          <div class="absolute -left-[9px] top-1.5 w-4 h-4 rounded-full bg-white border-4 border-accent"></div>
                          <span class="text-xs font-bold text-accent uppercase tracking-wider mb-1 block">{step.date}</span>
                          <h4 class="text-base font-bold text-slate-900 mb-1">{step.title}</h4>
                          <p class="text-sm text-slate-500 leading-relaxed">{step.description}</p>
                      </div>
                  ))}
              </div>
          </section>
      )}

      <!-- Data & Tools (Enhanced with Open Science) -->
      <section class="mb-20 border-t border-slate-100 pt-16">
         <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
            <div>
               <h2 class="text-xs uppercase tracking-widest font-bold text-slate-400 mb-6">{project.ui.dataTools}</h2>
               <div class="space-y-4">
                  <div>
                     <span class="text-[10px] uppercase font-bold text-slate-300 tracking-wider">Sources</span>
                     <p class="text-slate-600 text-sm">{project.dataTools.sources}</p>
                  </div>
                  <div>
                     <span class="text-[10px] uppercase font-bold text-slate-300 tracking-wider">Software</span>
                     <p class="text-slate-600 text-sm">{project.dataTools.software}</p>
                  </div>
               </div>
            </div>
            <div class="bg-slate-50 p-8 rounded-3xl border border-slate-100">
               <h2 class="text-xs uppercase tracking-widest font-bold text-slate-900 mb-4">{project.ui.download}</h2>
               <div class="space-y-3 mb-6">
                   <a href={project.citation.pdfUrl} class="flex items-center gap-3 text-slate-700 font-bold hover:text-accent transition-colors p-3 bg-white rounded-xl border border-slate-200">
                      <div class="w-8 h-8 rounded-lg bg-red-50 text-red-500 flex items-center justify-center"><i class="fa-solid fa-file-pdf"></i></div>
                      <span class="text-sm">Download Thesis (PDF)</span>
                   </a>
                   {/* Phase 10: Open Science Links */}
                   {project.dataLinks?.map(link => (
                       <a href={link.url} class="flex items-center gap-3 text-slate-700 font-bold hover:text-accent transition-colors p-3 bg-white rounded-xl border border-slate-200">
                          <div class="w-8 h-8 rounded-lg bg-blue-50 text-blue-500 flex items-center justify-center"><i class={link.icon}></i></div>
                          <span class="text-sm">{link.label}</span>
                       </a>
                   ))}
               </div>
               
               {/* Phase 11: The Defense Deck */}
               {project.slides && (
                  <div class="mb-8">
                     <span class="text-[10px] uppercase font-bold text-slate-400 tracking-wider block mb-2">{project.ui.citation?.replace('Citering', 'Slides') || 'Presentation Slides'}</span>
                     <SlideDeck slides={project.slides} />
                  </div>
               )}

               <div class="pt-6 border-t border-slate-200">
                  <span class="text-[10px] uppercase font-bold text-slate-400 tracking-wider block mb-2">{project.ui.citation}</span>
                  <code class="text-[11px] text-slate-500 block bg-white p-4 rounded-xl border border-slate-200 leading-relaxed font-mono">
                    {project.citation.text}
                  </code>
               </div>
            </div>
         </div>
      </section>

      {/* Phase 11: The Knowledge Graph */}
      {project.knowledgeGraph && (
         <section class="mb-20">
             <h2 class="text-xs uppercase tracking-widest font-bold text-slate-400 mb-8">{project.ui.continuityTitle || 'Knowledge Graph'}</h2>
             <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 items-center">
                 <div class="lg:col-span-2 h-[400px]">
                     <KnowledgeGraph nodes={project.knowledgeGraph.nodes} links={project.knowledgeGraph.links} height={400} />
                 </div>
                 <div class="space-y-4">
                     <h3 class="text-xl font-bold text-slate-800">Intellectual Lineage</h3>
                     <p class="text-sm text-slate-600 leading-relaxed">
                        This project builds upon key literature in monetary economics. The graph visualizes the direct citation network, with the central node representing this thesis.
                     </p>
                     <div class="flex gap-2 flex-wrap">
                        <span class="text-[10px] px-2 py-1 bg-blue-50 text-blue-600 rounded-full font-bold">● Core Theory</span>
                        <span class="text-[10px] px-2 py-1 bg-red-50 text-red-600 rounded-full font-bold">● Methodology</span>
                        <span class="text-[10px] px-2 py-1 bg-green-50 text-green-600 rounded-full font-bold">● Recent Evidence</span>
                     </div>
                 </div>
             </div>
         </section>
      )}

      {/* Phase 11: The Interactive Glossary (Floating Helper) */}
      {project.glossary && (
        <div class="fixed bottom-8 left-8 z-50 hidden md:block group">
            <div class="bg-white/90 backdrop-blur border border-slate-200 shadow-xl rounded-2xl p-4 w-64 translate-y-full opacity-0 group-hover:translate-y-0 group-hover:opacity-100 transition-all duration-300">
                <h4 class="text-xs font-bold uppercase text-slate-400 mb-2 border-b border-slate-100 pb-1">Key Terms</h4>
                <ul class="space-y-2">
                    {project.glossary.map(term => (
                        <li class="text-xs">
                            <span class="font-bold text-slate-700 block">{term.term}</span>
                            <span class="text-slate-500">{term.definition}</span>
                        </li>
                    ))}
                </ul>
            </div>
            <button class="bg-accent text-white w-10 h-10 rounded-full shadow-lg flex items-center justify-center text-sm font-bold absolute bottom-0 left-0 hover:scale-110 transition-transform">
                <i class="fa-solid fa-book"></i>
            </button>
        </div>
      )}

    </div>
  </main>
  
  {/* Phase 12: The Simulation Layer - Moved to root level for visibility */}
  <div style="position: fixed; bottom: 10px; left: 10px; width: 40px; height: 40px; background: red; z-index: 10000; pointer-events: none; opacity: 0.5;" title="Debug Marker: Layout Root"></div>
  <GlobalAssistant 
      client:only="react" 
      initialContext={{
        type: 'project',
        data: {
            title: project.title,
            codeSnippet: project.codeSnippet
        }
      }}
      lang={lang}
  />

</Layout>
      
      {/* Data Playground Section (Only if data link exists) */}
      {project.dataLinks?.some(l => l.label.includes('csv')) && (
          <section class="max-w-4xl mx-auto px-4 mb-20 scroll-mt-20" id="data-playground">
               <h2 class="text-xs uppercase tracking-widest font-bold text-slate-400 mb-8 flex items-center gap-2">
                   <i class="fa-solid fa-flask text-accent"></i> 
                   The Simulation Layer
               </h2>
               <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                   <div class="space-y-4">
                       <h3 class="text-2xl font-serif font-bold text-slate-900">Live Data Lab</h3>
                       <p class="text-sm text-slate-600 leading-relaxed">
                           Don't just take my word for it. Access the raw project tokens directly in your browser.
                           This playground uses <strong>DuckDB-WASM</strong> to run SQL queries against the actual dataset used in this paper.
                       </p>
                       <div class="bg-blue-50 border border-blue-100 rounded-xl p-4 text-xs text-blue-800">
                           <strong>try:</strong><br/>
                           <code class="font-mono mt-1 block">SELECT * FROM main_data LIMIT 5;</code>
                       </div>
