---
import StudyGroupLayout from '../../layouts/study-group/StudyGroupLayout.astro';

export const prerender = false;
---

<StudyGroupLayout title="Klassekampen" activePage="leaderboard">
    <div class="space-y-32">
        <div class="space-y-4">
            <h2 class="text-6xl font-black italic tracking-tighter text-white uppercase">Klassekampen <br/> <span class="text-red-600">& Udfordringer</span></h2>
            <p class="text-white/40 text-lg max-w-lg leading-relaxed italic">
                En venlig konkurrence for kollektivets bedste. Præstation hos den enkelte er sejr for alle.
            </p>
        </div>

        <section class="grid grid-cols-1 lg:grid-cols-2 gap-12">
            {/* Ugens Stakhanovit */}
            <div class="space-y-12">
                <h3 class="text-3xl font-black uppercase tracking-tighter italic text-red-600">Ugens Stakhanovit</h3>
                <p class="text-[10px] font-black uppercase tracking-widest text-white/20 -mt-8">Flest Pomodoro-sessions denne uge</p>
                
                <div class="space-y-6">
                    {[
                        { name: "Stalin", val: 24, max: 30, rank: 1 },
                        { name: "Mao", val: 18, max: 30, rank: 2 },
                        { name: "Che", val: 15, max: 30, rank: 3 }
                    ].map(member => (
                        <div class="p-8 bg-white/[0.03] border border-white/5 rounded-[40px] flex items-center justify-between group hover:border-red-600/30 transition-all">
                            <div class="flex items-center gap-6">
                                <div class={`w-12 h-12 rounded-2xl flex items-center justify-center font-black ${member.rank === 1 ? 'bg-red-600 text-white shadow-glow-red' : 'bg-white/5 text-white/20'}`}>
                                    {member.rank}
                                </div>
                                <span class="text-xl font-bold text-white uppercase tracking-tight">{member.name}</span>
                            </div>
                            <div class="text-right">
                                <span class="text-2xl font-black tabular-nums text-red-600">{member.val}</span>
                                <span class="text-[10px] font-black uppercase text-white/10 ml-2">Sessions</span>
                            </div>
                        </div>
                    ))}
                </div>
            </div>

            {/* Sider-skabt */}
            <div class="space-y-12">
                <h3 class="text-3xl font-black uppercase tracking-tighter italic text-red-600">Sider-skabt</h3>
                <p class="text-[10px] font-black uppercase tracking-widest text-white/20 -mt-8">Nettobidrag til seminaropgaven</p>
                
                <div class="bg-white/[0.02] border border-white/5 rounded-[48px] p-12 space-y-12">
                    {[
                        { name: "Mao", pages: 8.5 },
                        { name: "Stalin", pages: 7.2 },
                        { name: "Che", pages: 5.8 }
                    ].map(member => (
                        <div class="flex items-center gap-8">
                            <span class="w-16 text-[10px] font-black uppercase tracking-widest text-white/40">{member.name}</span>
                            <div class="flex-1 h-3 bg-white/5 rounded-full overflow-hidden">
                                <div class="h-full bg-red-600 shadow-glow-red" style={`width: ${member.pages * 10}%`}></div>
                            </div>
                            <span class="text-sm font-black text-white">{member.pages} s.</span>
                        </div>
                    ))}
                </div>
            </div>
        </section>

        {/* Mærkesager (Badges) */}
        <section class="space-y-16">
            <div class="flex items-center gap-6">
                <h3 class="text-3xl font-black uppercase tracking-tighter italic">Mærkesager <span class="text-red-600 text-sm ml-4">(Missions & Badges)</span></h3>
                <div class="h-px flex-1 bg-white/5"></div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
                {[
                    { title: "Natuglen", desc: "Arbejde efter midnat", icon: "fa-owl", status: "Stalin", active: true },
                    { title: "Korrektur-K.", desc: "Færrest stavefejl", icon: "fa-spell-check", status: "Che", active: true },
                    { title: "Kaffe-K.", desc: "Mest kaffe brygget", icon: "fa-mug-hot", status: "Ingen", active: false },
                    { title: "Excel-Ekspert", desc: "Mest komplekse model", icon: "fa-table", status: "Mao", active: true }
                ].map(badge => (
                    <div class={`p-10 rounded-[48px] border text-center space-y-6 transition-all group ${badge.active ? 'bg-red-600/5 border-red-600/20 hover:bg-red-600/10' : 'bg-white/[0.01] border-white/5 opacity-40'}`}>
                        <div class={`w-20 h-20 rounded-full flex items-center justify-center mx-auto text-3xl border ${badge.active ? 'bg-red-600 text-white border-red-600 shadow-glow-red' : 'bg-white/5 text-white/10 border-white/10'}`}>
                            <i class={`fa-solid ${badge.icon}`}></i>
                        </div>
                        <div class="space-y-2">
                            <h4 class="font-black text-white uppercase tracking-tight italic">{badge.title}</h4>
                            <p class="text-[10px] text-white/40 font-medium uppercase tracking-widest leading-tight">{badge.desc}</p>
                        </div>
                        {badge.active && (
                            <div class="pt-4 border-t border-red-600/10">
                                <span class="text-[9px] font-black uppercase tracking-widest text-red-600">Bæres af {badge.status}</span>
                            </div>
                        )}
                    </div>
                ))}
            </div>
        </section>
    </div>
</StudyGroupLayout>
