---
import ProjectDetailPage from '@components/templates/ProjectDetailPage.astro';
import ThesisDashboard from '@components/project/ThesisDashboard.astro';
export const prerender = true;

const dashboardData = {
    deadline: "2027-01-04",
    pageCount: 12,
    targetPages: 120,
    coffeeCount: 42
};

import LiteratureStream from '@components/project/LiteratureStream.astro';
const literatureData = {
    currentRead: { title: "Monetary Policy", author: "Schnabel", type: "Paper", progress: 65 },
    stack: [ { title: "Fiscal Theory", author: "Cochrane", status: "To Read" as const } ]
};

import AudioAbstract from '@components/project/AudioAbstract.astro';

const projectContent = {
    title: "Monetary Policy & Economic Relations",
    subtitle: "Master's Thesis in Economics (Cand.polit)",
    executiveSummary: "Dette speciale undersøger transmissionsmekanismen for pengepolitik i en post-COVID verden. Ved at anvende højfrekvente finansielle data og lokal-projektion metoder, isolerer vi effekten af pengepolitiske chok på inflationsforventninger.",
    researchQuestions: [
        "Hvordan reagerer inflationsforventninger på pengepolitiske chok?",
        "Er der asymmetri mellem udbuds- og efterspørgselsdrevet inflation?",
        "Hvilken rolle spiller kommunikation (Forward Guidance)?"
    ],
    methodology: {
        model: "Local Projections (Jorda, 2005)",
        strategy: "Højfrekvent Identifikation (HFI)",
        data: "Euro Area Yield Curves & Swaps",
        estimation: "OLS med Newey-West Standardfejl"
    },
    keyFindings: [
        "Rentehævelser reducerer langsigtede inflationsforventninger.",
        "Effekten er stærkere når inflationen er efterspørgselsdrevet.",
        "ECB's kommunikation har signifikant effekt på de korte renter."
    ],
    policyRelevance: [
        "Resultaterne bidrager til forståelsen af 'State-Dependent' pengepolitik.",
        "Relevant for kalibrering af DSGE modeller.",
        "Belyser samspillet mellem finanspolitik og pengepolitik."
    ],
    dataTools: {
        sources: "ECB Statistical Data Warehouse, Bloomberg",
        software: "Python (Pandas, Statsmodels), Stata"
    },
    citation: {
        text: "Jørgensen, Anton Meier Ebsen, Chen, Sheng Ye Michael & Nielsen, Jonas Amasa Skov (Coming 2027). Monetary Policy Transmission in a Fragmented Euro Area.",
        pdfUrl: "#"
    },
    ui: {
        methodology: "Forventet Metodologi",
        findings: "Hypoteser & Forventninger",
        relevance: "Politisk Perspektiv",
        dataTools: "Værktøjskasse",
        download: "Dokumentation",
        citation: "Fremtidig Citering",
        execSummary: "Projektoversigt (Pre-Analysis Plan)",
        researchQuestions: "Foreløbige Forskningsspørgsmål",
        limitations: "Begrænsninger",
        secondaryAnalysis: "Sekundær Analyse",
        gallery: "Koncept-Galleri",
        codeVault: "Kode-Vault (TBD)",
        videoAbstract: "Video Logbog",
        techStack: "Teknologistak",
        timeline: "Projekt-tidslinje",
        liveData: "Data Monitor",
        continuityTitle: "Continuity"
    },
    timeline: [
        { date: "Sept 2026", title: "Projektstart", description: "Officiel startdato. Definition af endelig problemformulering." },
        { date: "Okt 2026", title: "Data-indsamling", description: "Opbygning af datasæt og rensning af variable." },
        { date: "Nov 2026", title: "Model-estimering", description: "Gennemførelse af de primære økonometriske analyser." },
        { date: "Jan 2027", title: "Aflevering", description: "Indlevering af det endelige speciale (ca. 120 sider)." }
    ],
    techStack: [
        { name: "Python", icon: "fa-brands fa-python" },
        { name: "Stata", icon: "fa-solid fa-table-cells" },
        { name: "LaTeX", icon: "fa-solid fa-file-tex" },
        { name: "GitHub", icon: "fa-brands fa-github" }
    ],
    highlights: [
        { label: "Mål", value: "120 Sider" },
        { label: "Type", value: "Empirisk" },
        { label: "ECTS", value: "30" }
    ],
    collaborators: [
     {
        name: "Sheng Ye Michael Chen",
        role: "Medforfatter & Data Scientist",
        image: "/assets/collaborators/sheng.jpg",
        links: { linkedin: "https://www.linkedin.com/in/sheng-ye-michael-chen-a52595275/", github: "https://github.com/nsr708" }
     },
     {
        name: "Jonas Amasa Skov Nielsen",
        role: "Medforfatter & Teoretiker",
        image: "/assets/collaborators/jonas.jpg",
        links: { linkedin: "https://www.linkedin.com/in/jonas-amasa-skov-nielsen-aa0431357/", github: "https://github.com/JonasASNielsen" }
     }
  ],
  codeSnippet: {
        lang: "latex",
        title: "Project Template (LaTeX)",
        code: `\\documentclass[11pt, a4paper]{report}
\\usepackage[utf8]{inputenc}
\\usepackage{amsmath, amssymb, amsthm}
\\usepackage{graphicx}
\\usepackage{natbib}
\\usepackage{hyperref}

% --- Custom Macros for Local Projections ---
