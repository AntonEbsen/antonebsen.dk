---
import Layout from '@layouts/Layout.astro';
import Section from '@components/ui/Section.astro';
import Card from '@components/ui/Card.astro';
import Button from '@components/ui/Button.astro';
import Pill from '@components/ui/Pill.astro';
import SectionHeading from '@components/ui/SectionHeading.astro';
import ContactCard from '@components/common/ContactCard.astro';
import cv from '@data/cv.json';

const ku = cv.education.find(e => e.degree.includes("cand.polit"));
const hhx = cv.education.find(e => e.degree.includes("HHX"));
---

<Layout 
  title="Anton Meier Ebsen Jørgensen – Uddannelse" 
  description="Uddannelsesprofil: cand.polit./ba.polit., relevante kurser, projekter og fokusområder."
  bodyClass="edu-page"
>

  <style>
    .edu-wrap {
      max-width: 1200px;
      margin: 24px auto;
      padding: 0 16px 32px;
    }
    
    .hero-grid {
      display: grid;
      grid-template-columns: minmax(0, 1.6fr) minmax(0, 1fr);
      gap: 22px;
      align-items: start;
    }

    .two-col {
      display: grid;
      grid-template-columns: repeat(2, minmax(0,1fr));
      gap: 14px;
      margin-top: 12px;
    }

    .courses-grid {
      display: grid;
      grid-template-columns: repeat(3, minmax(0,1fr));
      gap: 14px;
      margin-top: 12px;
    }

    @media (max-width: 980px) {
      .hero-grid, .two-col, .courses-grid { 
        grid-template-columns: 1fr; 
      }
    }
  </style>

  <main class="edu-wrap">

    <!-- HERO -->
    <Section>
      <div class="hero-grid">
        <Card variant="glass" class="p-6">
          <p class="text-xs font-extrabold uppercase tracking-wider text-dim mb-3">Uddannelse</p>
          <h1 class="text-4xl leading-tight mb-4 font-bold">Kurser, projekter og faglig profil</h1>
          <p class="text-lg leading-relaxed text-dim mb-6">
            Her samler jeg det, der ellers bliver for langt til CV’et: udvalgte kurser, projektarbejde
            og hvad jeg konkret har lært (metoder, værktøjer, modeller).
          </p>
  
          <div class="flex flex-wrap gap-3 mb-6">
            <Button href="#ku">Københavns Universitet</Button>
            <Button href="#hhx" variant="ghost">HHX</Button>
            <Button href="#courses" variant="ghost">Kursusoversigt</Button>
            <Button href="#projects" variant="ghost">Projektarbejde</Button>
          </div>
  
          <div class="flex flex-wrap gap-2">
            <Pill variant="accent">Makro</Pill>
            <Pill variant="accent">Økonometri</Pill>
            <Pill variant="accent">Modeller</Pill>
            <Pill variant="accent">Tidsrækker</Pill>
            <Pill variant="accent">Python/SAS/GAMS</Pill>
          </div>
        </Card>
  
        <div class="hidden md:block">
          <Card variant="glass" class="p-4">
            <SectionHeading>Kort version?</SectionHeading>
            <p class="text-[13px] text-dim mb-4 opacity-70">
              CV-siden har den “HR-venlige” oversigt. Denne side er til dem, der faktisk læser.
            </p>
            <Button href="/cv#education" variant="ghost" class="w-full">Til CV-oversigt</Button>
          </Card>
        </div>
      </div>
    </Section>

    <!-- KU -->
    {ku && (
      <Section id="ku">
        <Card variant="default" class="p-6">
          <SectionHeading>{ku.institution} ({ku.degree})</SectionHeading>

          <div class="two-col">
            <Card variant="glass" class="p-4">
              <h3 class="text-base font-bold mb-2">Program & fokus</h3>
              <p class="text-dim text-[14px] leading-relaxed mb-4">
                {ku.description}
              </p>
              <ul class="list-none p-0 m-0 space-y-2 text-[13px] text-dim">
                {ku.bullets.map(item => (
                  <li class="relative pl-3 before:content-['-'] before:absolute before:left-0 before:text-accent">{item}</li>
                ))}
              </ul>
            </Card>

            <Card variant="glass" class="p-4">
              <h3 class="text-base font-bold mb-2">Nøgleværktøjer</h3>
              <div class="flex flex-wrap gap-2 mb-4">
                {ku.technologies && ku.technologies.map(tech => (
                  <Pill variant="default">{tech}</Pill>
                ))}
              </div>
              <p class="text-[13px] text-dim opacity-70">
                (Tjek også porteføljen for konkrete eksempler på brug af værktøjerne.)
              </p>
            </Card>
          </div>
        </Card>
      </Section>
    )}

    <!-- COURSES -->
    <Section id="courses">
      <Card variant="bordered" class="p-6">
        <SectionHeading>Kursusoversigt (udvalg)</SectionHeading>
        <p class="text-dim opacity-70 mb-6">
          Tip: Disse kurser repræsenterer min faglige kerne og specialisering.
        </p>

        <div class="courses-grid">
          {cv.courses.map(course => (
            <Card variant="bordered" class="flex flex-col h-full bg-glass">
              <div class="flex justify-between items-start mb-3 gap-2">
                <h3 class="text-[16px] font-bold leading-tight m-0">{course.title}</h3>
                <Pill variant="accent" class="shrink-0">{course.tag}</Pill>
              </div>
              <p class="text-[13px] text-dim mb-3">{course.institution}</p>
              <p class="text-[14px] text-dim opacity-80 leading-relaxed mb-4 flex-grow">
                {course.description}
              </p>
              <div class="flex flex-wrap gap-2 mt-auto">
                {course.links && course.links.map(link => (
                  <a href={link.href} class="text-xs font-bold text-accent no-underline hover:text-white transition-colors">{link.text} →</a>
                ))}
              </div>
            </Card>
          ))}
        </div>
      </Card>
    </Section>

    <!-- PROJECTS -->
    <Section id="projects">
      <Card variant="bordered" class="p-6">
        <SectionHeading>Projektarbejde (udvalg)</SectionHeading>

        <div class="courses-grid">
          {cv.projects.map(proj => (
            <Card variant="bordered" class="flex flex-col h-full bg-glass">
              <div class="flex justify-between items-start mb-3 gap-2">
                <h3 class="text-[16px] font-bold leading-tight m-0">{proj.title}</h3>
                <Pill variant="accent" class="shrink-0">{proj.tag}</Pill>
              </div>
              {proj.meta && <p class="text-[13px] text-dim mb-3">{proj.meta}</p>}
              <p class="text-[14px] text-dim opacity-80 leading-relaxed mb-4 flex-grow">
                {proj.description}
              </p>
              <div class="flex flex-wrap gap-2 mt-auto">
                 {proj.links && proj.links.map(link => (
                  <a href={link.href} class="text-xs font-bold text-accent no-underline hover:text-white transition-colors">{link.text} →</a>
                ))}
              </div>
            </Card>
          ))}
        </div>
      </Card>
    </Section>

    <!-- HHX -->
    {hhx && (
      <Section id="hhx">
        <Card variant="glass" class="p-6">
          <SectionHeading>{hhx.degree} ({hhx.institution})</SectionHeading>
          <p class="text-dim mb-4 leading-relaxed">
            {hhx.description}
          </p>
          <ul class="list-none p-0 m-0 space-y-2 text-[14px] text-dim">
            {hhx.bullets.map(item => (
              <li class="relative pl-3 before:content-['-'] before:absolute before:left-0 before:text-accent">{item}</li>
            ))}
          </ul>
        </Card>
      </Section>
    )}

    <!-- CTA -->
    <Section>
      <Card variant="default" class="p-6">
        <SectionHeading>Vil du se certificeringer også?</SectionHeading>
        <p class="text-dim opacity-70 mb-6">Certificeringer er “beviser”. Uddannelse er “forløb”. Begge styrker troværdigheden.</p>
        <div class="flex flex-wrap gap-3">
          <Button href="/certifications">Til certificeringer</Button>
          <Button href="/contact" variant="ghost">Kontakt</Button>
        </div>
      </Card>
    </Section>

  </main>
</Layout>
