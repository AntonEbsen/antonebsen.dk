---
import '@styles/styles.css';
---

<!DOCTYPE html>
<html lang="da">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Rosenkransen | Ad Majorem Dei Gloriam</title>
    <meta name="robots" content="noindex, nofollow">
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400&family=Cinzel:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    
    <style>
        body { font-family: 'Cinzel', serif; }
        .sans { font-family: 'Inter', sans-serif; }
    </style>
</head>
<body class="bg-[#050508] text-gray-300 overflow-hidden h-screen w-screen m-0 p-0 selection:bg-gold-500/30">

    <!-- Background -->
    <div class="fixed inset-0 z-0 pointer-events-none bg-gradient-to-b from-[#020205] via-[#0a0a1a] to-black">
         <div class="absolute inset-0 opacity-10" style="background-image: url('https://www.transparenttextures.com/patterns/stardust.png');"></div>
         <!-- Glow -->
         <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[500px] h-[500px] bg-gold-500/5 rounded-full blur-[100px] animate-pulse-slow"></div>
    </div>

    <!-- Navigation -->
    <nav class="fixed top-8 left-8 z-50">
        <a href="/shrine" class="text-gold-500/60 hover:text-gold-400 transition-colors text-xl flex items-center gap-2 sans">
            <i class="fa-solid fa-arrow-left"></i>
            <span class="text-xs uppercase tracking-widest hidden md:inline">Tilbage</span>
        </a>
    </nav>

    <!-- Main Content -->
    <main class="relative z-10 w-full h-full flex flex-col items-center justify-center">
        
        <!-- Prayer Text Display -->
        <div class="text-center mb-16 h-48 flex flex-col items-center justify-center p-4">
            <h2 id="prayer-title" class="text-gold-400 text-xl tracking-[0.2em] uppercase mb-4 animate-fade-in">In Nomine Patris</h2>
            <p id="prayer-text" class="text-lg md:text-2xl text-gray-300 max-w-2xl leading-relaxed italic animate-fade-in delay-100">
                In nomine Patris, et Filii, et Spiritus Sancti. Amen.
            </p>
        </div>

        <!-- The Rosary Beads (Visual Representation) -->
        <div class="relative w-64 h-64 md:w-80 md:h-80 border-2 border-gold-500/20 rounded-full flex items-center justify-center mb-12">
            
            <!-- Center Cross -->
            <div class="absolute bottom-[-40px] text-gold-500 text-3xl drop-shadow-[0_0_10px_rgba(255,215,0,0.5)]">
                <i class="fa-solid fa-cross"></i>
            </div>

            <!-- Interactive Bead Area -->
            <button id="next-bead" class="group relative px-8 py-4 bg-gold-900/10 hover:bg-gold-500/10 border border-gold-500/30 rounded-full transition-all active:scale-95">
                <span class="text-sm sans uppercase tracking-widest text-gold-400 group-hover:text-gold-200">
                    Næste Bøn <i class="fa-solid fa-chevron-right ml-2 text-xs"></i>
                </span>
                <!-- Ripple effect on click handled by JS/CSS active -->
            </button>
            
            <!-- Progress Indicator -->
            <div class="absolute -bottom-16 text-xs sans text-gray-500 uppercase tracking-widest">
                <span id="counter">0</span> / 53
            </div>

        </div>

        <!-- Mystery Selector -->
        <div class="flex gap-4 opacity-50 hover:opacity-100 transition-opacity">
            <button class="mystery-btn text-xs sans uppercase tracking-widest text-gold-500 border-b border-transparent hover:border-gold-500" data-mystery="joyful">Glædens</button>
            <button class="mystery-btn text-xs sans uppercase tracking-widest text-gray-500 hover:text-gold-500 border-b border-transparent hover:border-gold-500" data-mystery="sorrowful">Smertens</button>
            <button class="mystery-btn text-xs sans uppercase tracking-widest text-gray-500 hover:text-gold-500 border-b border-transparent hover:border-gold-500" data-mystery="glorious">Herlighedens</button>
        </div>

    </main>

    <style>
        .animate-fade-in {
            animation: fadeIn 1s ease-out forwards;
            opacity: 0;
        }
        @keyframes fadeIn {
            to { opacity: 1; }
        }
        .delay-100 { animation-delay: 0.1s; }
        
        .animate-pulse-slow {
            animation: pulse 8s infinite ease-in-out;
        }
    </style>

    <script>
        // Data: Prayers
        const prayers = [
            { title: "Signum Crucis", text: "In nomine Patris, et Filii, et Spiritus Sancti. Amen." },
            { title: "Symbolum Apostolorum", text: "Credo in Deum Patrem omnipotentem, Creatorem caeli et terrae..." },
            { title: "Pater Noster", text: "Pater noster, qui es in caelis, sanctificetur nomen tuum..." },
            { title: "Ave Maria", text: "Ave Maria, gratia plena, Dominus tecum..." },
            { title: "Ave Maria", text: "Ave Maria, gratia plena, Dominus tecum..." },
            { title: "Ave Maria", text: "Ave Maria, gratia plena, Dominus tecum..." },
            { title: "Gloria Patri", text: "Gloria Patri, et Filio, et Spiritui Sancto..." },
            // Simplified loop for demo
        ];

        let currentIndex = 0;
        const titleEl = document.getElementById('prayer-title');
        const textEl = document.getElementById('prayer-text');
        const counterEl = document.getElementById('counter');
        const btn = document.getElementById('next-bead');

        btn?.addEventListener('click', () => {
            currentIndex = (currentIndex + 1) % prayers.length;
            updateDisplay();
        });

        function updateDisplay() {
            if(!titleEl || !textEl || !counterEl) return;
            
            // Fade out
            titleEl.style.opacity = '0';
            textEl.style.opacity = '0';

            setTimeout(() => {
                titleEl.innerText = prayers[currentIndex].title;
                textEl.innerText = prayers[currentIndex].text;
                counterEl.innerText = currentIndex.toString();
                
                // Fade in
                titleEl.classList.remove('animate-fade-in');
                void titleEl.offsetWidth; // trigger reflow
                titleEl.classList.add('animate-fade-in');
                titleEl.style.opacity = '1';

                textEl.classList.remove('animate-fade-in');
                void textEl.offsetWidth; 
                textEl.classList.add('animate-fade-in');
                textEl.style.opacity = '1';
            }, 300);
        }
    </script>
</body>
</html>
