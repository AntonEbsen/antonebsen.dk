    datasets: [
        {
            label: "Germany (Core)",
            data: [-0.5, -1.2, -1.5, -1.0, -0.2, 0.5, 2.0],
            backgroundColor: "rgba(59, 130, 246, 0.6)" // Blue-500
        },
        {
            label: "Italy (Periphery)",
            data: [2.5, 3.0, 2.8, 1.5, 0.5, -1.0, -2.5],
            backgroundColor: "rgba(239, 68, 68, 0.6)" // Red-500
        }
    ]
  },
  citation: {
    text: "Jørgensen, A. M. E. (2024). One Rule to Rule Them All? Asymmetric Effects of ECB Policy. Seminar Paper, Københavns Universitet. JEL: E52, E58, F45.",
    pdfUrl: "/assets/docs/Jorgensen_2024_ECB_Rules.pdf"
  },
  ui: {
    methodology: "Metodologi",
    findings: "Empiriske Resultater",
    relevance: "Politiske Implikationer",
    dataTools: "Data & Værktøjer",
    download: "Dokumentation",
    citation: "Foreslået Citering",
    execSummary: "Executive Summary",
    researchQuestions: "Forskningsspørgsmål",
    limitations: "Begrænsninger",
    secondaryAnalysis: "Asymmetri-analyse",
    gallery: "Galleri",
    codeVault: "The Code Vault",
    videoAbstract: "Video Abstract",
    techStack: "Teknologistak",
    timeline: "Projekt-tidslinje",
    liveData: "Interaktiv Analyse (GMM)",
    openScience: "Open Science"
  }
};
