---
import Layout from '../layouts/Layout.astro';
import Pill from '../components/ui/Pill.astro';
import Section from '../components/ui/Section.astro';
import Card from '../components/ui/Card.astro';
import Button from '../components/ui/Button.astro';
import ProjectCard from '../components/portfolio/ProjectCard.astro';
import portfolioData from '../data/portfolio.json';
---

<Layout 
  title="Anton Meier Ebsen Jørgensen – Portefølje" 
  description="Portefølje med udvalgte projekter inden for makroøkonomi, økonometri, tidsrækker og økonomiske modeller. Python, SAS, GAMS og Excel/VBA."
  bodyClass="portfolio-page"
>

  <style>
    .portfolio-wrap {
      max-width: 1200px;
      margin: 24px auto;
      padding: 0 16px 32px;
    }

    .hero {
      display: grid;
      grid-template-columns: minmax(0, 1.6fr) minmax(0, 1fr);
      gap: 22px;
      align-items: start;
    }

    .grid {
      display: grid;
      grid-template-columns: repeat(2, minmax(0, 1fr));
      gap: 14px;
      margin-bottom: 14px;
    }

    @media (max-width: 980px) {
      .hero, .grid {
        grid-template-columns: 1fr;
      }
    }
  </style>

  <main class="portfolio-wrap">
    <!-- HERO -->
      <Section>
        <div class="hero">
          <Card variant="glass" class="p-8">
            <p class="text-xs font-extrabold uppercase tracking-widest text-[var(--text-dim)] mb-3">Portefølje</p>
            <h1 class="text-[clamp(28px,4vw,40px)] leading-[1.15] mb-5 font-bold">Udvalgte projekter</h1>
            <p class="text-[17px] leading-relaxed text-[var(--text-dim)] mb-6 opacity-90">
              Her finder du projekter inden for makroøkonomi, økonometri, tidsrækker og modellering.
              Jeg lægger især vægt på reproducerbar analyse, klare resultater og pæn formidling.
            </p>
    
            <div class="flex flex-wrap gap-3 mb-6">
              <Button href="/cv">Se CV</Button>
              <Button href="https://github.com/AntonEbsen" target="_blank" rel="noopener" variant="ghost"><i class="fa-brands fa-github mr-2"></i> GitHub</Button>
              <Button href="https://www.linkedin.com/in/antonebsen/" target="_blank" rel="noopener" variant="ghost"><i class="fa-brands fa-linkedin mr-2"></i> LinkedIn</Button>
            </div>
    
            <div class="flex flex-wrap gap-2">
               {["Makro & pengepolitik", "Tidsrækker", "CGE/RBC", "Python", "SAS", "GAMS", "Excel/VBA"].map(pill => (
                 <Pill variant="accent">{pill}</Pill>
               ))}
            </div>
          </Card>
    
          <div class="hidden md:block">
            <Card variant="glass" class="p-6">
              <h2 class="text-xs font-bold uppercase tracking-wider text-[var(--accent)] mb-4">Sådan er projekterne bygget</h2>
              <ul class="list-none p-0 m-0 space-y-2 text-sm text-[var(--text-dim)] opacity-90">
                <li class="relative pl-4 before:content-['•'] before:absolute before:left-0 before:text-[var(--accent)]">Kort problemformulering</li>
                <li class="relative pl-4 before:content-['•'] before:absolute before:left-0 before:text-[var(--accent)]">Metode (model/økonometri)</li>
                <li class="relative pl-4 before:content-['•'] before:absolute before:left-0 before:text-[var(--accent)]">Data & kode (hvis muligt)</li>
                <li class="relative pl-4 before:content-['•'] before:absolute before:left-0 before:text-[var(--accent)]">Resultater og læring</li>
              </ul>
            </Card>
          </div>
        </div>
      </Section>
  
      <!-- PROJECT GRID -->
      <Section>
        <div class="grid">
          {portfolioData.map(project => (
            <ProjectCard
              title={project.title}
              tagString={project.tagString}
              description={project.description}
              tools={project.tools}
              output={project.output}
              links={project.links}
            />
          ))}
        </div>
      </Section>
  
      <!-- Footer card -->
      <Section>
        <Card variant="glass" class="p-6">
          <h2 class="text-xs font-bold uppercase tracking-wider text-[var(--accent)] mb-4">Mere</h2>
          <p class="text-[var(--text-dim)] opacity-80 m-0">
            Jeg opdaterer løbende porteføljen. Du kan også finde mere på
            <a href="https://github.com/AntonEbsen" target="_blank" rel="noopener" class="text-[var(--accent)] font-bold decoration-none hover:text-white transition-colors">GitHub</a>
            og
            <a href="https://www.linkedin.com/in/antonebsen/" target="_blank" rel="noopener" class="text-[var(--accent)] font-bold decoration-none hover:text-white transition-colors">LinkedIn</a>.
          </p>
        </Card>
      </Section>
  
  </main>
</Layout>
