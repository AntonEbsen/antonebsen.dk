---
import Layout from '../../layouts/Layout.astro';
import { getLangFromUrl } from '../../i18n/utils';

const lang = "en"; // Hardcoded for this page since it's in the /en/ folder

const t = {
  en: {
    title: "About Anton's AI",
    subtitle: "An experimental AI Economist built with RAG and Gemini",
    hero: {
      tag: "Project Showcase",
      heading: "Meet Anton's AI Assistant",
      text: "This isn't just a chatbot. It's an advanced AI agent designed to analyze economic data, read documents, and understand my full professional profile. Built to demonstrate the potential of modern AI."
    },
    features: {
      rag: {
        icon: "fa-file-pdf",
        title: "Document Analysis (RAG)",
        desc: "The AI can read and understand uploaded PDFs (e.g., research papers or job descriptions) and use them as context in the conversation."
      },
      match: {
        icon: "fa-briefcase",
        title: "Job Matchmaker",
        desc: "Paste a job description, and the AI acts as a recruiter. It analyzes the match, finds skill gaps, and writes a targeted pitch."
      },
      charts: {
        icon: "fa-chart-pie",
        title: "Interactive Charts",
        desc: "Ask specifically for a visualization, and the AI generates live Chart.js graphs of skills, experience, or economic data."
      },
      sim: {
        icon: "fa-chart-line",
        title: "Economy Simulator",
        desc: "Ask the AI to simulate scenarios (e.g., 'Simulate a recession'), and it generates hypothetical data and charts to visualize the impact."
      },
      concierge: {
        icon: "fa-bell-concierge",
        title: "Context-Aware Concierge",
        desc: "The AI knows which page you're viewing. If you're on the CV page, it asks about experience. On the Portfolio page, it offers technical deep-dives."
      },
      memory: {
        icon: "fa-clock-rotate-left",
        title: "Persistent Memory",
        desc: "The conversation is saved locally. Switch pages, close the tab, or return later â€“ the AI remembers the full history and context."
      },
      citations: {
        icon: "fa-book-bookmark",
        title: "Transparent Citations",
        desc: "No hallucinations. When the AI uses knowledge from my uploads (thesis, notes, articles), it inserts a visible citation badge directly in the text."
      },
      vision: {
        icon: "fa-eye",
        title: "Multi-Modal Vision",
        desc: "Upload an image (e.g., a job posting or graph), and the AI will analyze the content pixels and discuss it with you."
      },
      voice: {
        icon: "fa-microphone",
        title: "Voice Activation",
        desc: "Speak directly to the assistant via the browser's built-in speech recognition for a more natural interaction."
      },
      personas: {
        icon: "fa-masks-theater",
        title: "Adaptive Personas",
        desc: "Toggle between specific modes: Recruiter (biz focus), Tech Lead (deep dive), or ELI5 (simple terms)."
      }
    },
    tech: {
      title: "The Technology",
      stack: [
        { name: "Google Gemini 2.0 Flash", desc: "The underlying LLM with a 1M+ token context window." },
        { name: "Astro & TypeScript", desc: "Blazing fast frontend framework with type-safe logic." },
        { name: "RAG / PDF.js", desc: "Client-side document parsing for maximum privacy and speed." },
        { name: "Vercel Edge", desc: "Serverless functions ensuring fast response times." }
      ]
    },
    cta: "Try the AI Now"
  }
}[lang];
---

<Layout title={t.title} description={t.subtitle}>
    
  <style>
    /* Background Animation */
    .tech-bg {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -1;
        overflow: hidden;
        pointer-events: none;
    }
    
    .tech-grid {
        position: absolute;
        width: 200%;
        height: 200%;
        top: -50%;
        left: -50%;
        background-image: 
            linear-gradient(rgba(255, 255, 255, 0.03) 1px, transparent 1px),
            linear-gradient(90deg, rgba(255, 255, 255, 0.03) 1px, transparent 1px);
        background-size: 50px 50px;
        transform: perspective(500px) rotateX(60deg);
        animation: grid-move 20s linear infinite;
    }

    @keyframes grid-move {
        0% { transform: perspective(500px) rotateX(60deg) translateY(0); }
        100% { transform: perspective(500px) rotateX(60deg) translateY(50px); }
    }

    .ambient-glow {
        position: absolute;
        width: 600px;
        height: 600px;
        background: radial-gradient(circle, rgba(var(--accent), 0.15) 0%, transparent 70%);
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        pointer-events: none;
        z-index: -1;
    }
  </style>

  <div class="tech-bg">
    <div class="tech-grid"></div>
  </div>
  <div class="ambient-glow"></div>

  <div class="relative min-h-screen overflow-hidden">

    <main class="relative z-10 max-w-6xl mx-auto px-6 py-24">
      
      <!-- Hero -->
      <div class="text-center max-w-3xl mx-auto mb-24 animate-fade-in-up">
        <span class="inline-block py-1 px-3 rounded-full bg-accent/10 border border-accent/20 text-accent text-xs font-mono mb-6 tracking-widest uppercase">
          {t.hero.tag}
        </span>
        <h1 class="text-5xl md:text-7xl font-bold mb-8 bg-clip-text text-transparent bg-gradient-to-r from-white via-dim to-dim/50">
          {t.hero.heading}
        </h1>
        <p class="text-xl text-dim leading-relaxed">
          {t.hero.text}
        </p>
        <div class="mt-10">
           <a href="/en/chat" class="inline-flex items-center gap-3 bg-accent text-bg px-8 py-4 rounded-full font-bold text-lg hover:scale-105 transition-transform shadow-lg shadow-accent/20">
             <i class="fa-solid fa-robot"></i> {t.cta}
           </a>
        </div>
      </div>

      <!-- Features Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-24">
        {Object.values(t.features).map((feature, i) => (
          <div class="p-8 rounded-2xl bg-white/5 border border-white/10 hover:border-accent/30 transition-colors group">
            <div class="w-12 h-12 rounded-xl bg-accent/10 text-accent flex items-center justify-center text-2xl mb-6 group-hover:scale-110 transition-transform">
              <i class={`fa-solid ${feature.icon}`}></i>
            </div>
            <h3 class="text-2xl font-bold mb-3">{feature.title}</h3>
            <p class="text-dim leading-relaxed">{feature.desc}</p>
          </div>
        ))}
      </div>

      <!-- Tech Stack -->
      <div class="max-w-4xl mx-auto bg-glass border border-glass-border rounded-3xl p-10 md:p-16 relative overflow-hidden">
        <div class="absolute top-0 right-0 p-32 bg-accent/5 blur-[80px] rounded-full pointer-events-none"></div>
        
        <h2 class="text-3xl font-bold mb-10 text-center"><i class="fa-solid fa-code text-accent mr-3"></i> {t.tech.title}</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
           {t.tech.stack.map(item => (
             <div class="flex gap-4">
               <div class="w-1 h-full bg-accent/30 rounded-full flex-shrink-0"></div>
               <div>
                 <h4 class="font-bold text-lg text-white mb-1">{item.name}</h4>
                 <p class="text-sm text-dim">{item.desc}</p>
               </div>
             </div>
           ))}
        </div>
      </div>

    </main>
  </div>
</Layout>

<style>
  .animate-fade-in-up {
    animation: fadeInUp 0.8s ease-out forwards;
    opacity: 0;
    transform: translateY(20px);
  }

  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
