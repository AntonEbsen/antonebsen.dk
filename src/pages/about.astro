---
import Layout from '@layouts/Layout.astro';
import Pill from '@components/ui/Pill.astro';
import Section from '@components/ui/Section.astro';
import Card from '@components/ui/Card.astro';
import Button from '@components/ui/Button.astro';
import aboutData from '@data/about.json';
---

<Layout 
  title="Anton Meier Jørgensen – Profil / Om mig" 
  description="Profil / Om mig: makroøkonomi, økonometri, modeller og formidling. Arbejdsstil, fokusområder og hvad jeg kan hjælpe med."
  bodyClass="about-page"
>

  <style>
    .about-wrap {
      max-width: 1200px;
      margin: 24px auto;
      padding: 0 16px 32px;
    }

    .hero {
      display: grid;
      grid-template-columns: minmax(0, 1.6fr) minmax(0, 1fr);
      gap: 22px;
      align-items: start;
    }

    .grid-2 {
      display: grid;
      grid-template-columns: repeat(2, minmax(0,1fr));
      gap: 14px;
      margin-top: 14px;
    }

    @media (max-width: 980px) {
      .hero, .grid-2 { 
        grid-template-columns: 1fr; 
      }
    }
  </style>

  <main class="about-wrap">
    
    <!-- HERO -->
    <Section>
      <div class="hero">
        <Card variant="glass" class="p-8">
          <p class="text-xs font-extrabold uppercase tracking-widest text-[var(--text-dim)] mb-3">Profil / Om mig</p>
          <h1 class="text-[clamp(28px,4vw,40px)] leading-[1.15] mb-5 font-bold">Makro, økonometri og modeller — med fokus på at gøre det brugbart</h1>
          <div class="text-[17px] leading-bold text-[var(--text-dim)] mb-6 opacity-90" set:html={aboutData.hero.lead}></div>

          <div class="flex flex-wrap gap-2 mb-8" aria-label="Nøgleområder">
             {aboutData.hero.pills.map(pill => (
                <Pill variant="accent">{pill}</Pill>
             ))}
          </div>

          <div class="flex flex-wrap gap-3">
            <Button href="#arbejdsstil"><i class="fa-solid fa-compass mr-2"></i> Arbejdsstil</Button>
            <Button href="#fokus" variant="ghost"><i class="fa-solid fa-bullseye mr-2"></i> Fokusområder</Button>
            <Button href="#contact" variant="ghost"><i class="fa-solid fa-envelope mr-2"></i> Kontakt</Button>
          </div>
        </Card>

        <div class="flex flex-col gap-3">
          <Card variant="glass" class="p-5">
            <h2 class="text-xs font-bold uppercase tracking-wider text-[var(--accent)] mb-4">Hurtige facts</h2>
            <div class="grid gap-3">
              {aboutData.quickfacts.map(fact => (
                 <div class="flex gap-3 text-sm items-start">
                   <i class:list={[fact.icon, "mt-1 text-[var(--text-dim)] opacity-80 shrink-0 w-4"]}></i>
                   <span class="opacity-90">{fact.text}</span>
                 </div>
              ))}
            </div>
          </Card>

          <Card variant="glass" class="p-5">
            <h2 class="text-xs font-bold uppercase tracking-wider text-[var(--accent)] mb-4">På siden</h2>
            <nav class="flex flex-col gap-2" aria-label="Undermenu">
              {[
                { label: 'Fokusområder', href: '#fokus' },
                { label: 'Hvordan jeg arbejder', href: '#arbejdsstil' },
                { label: 'Undervisning & formidling', href: '#formidling' },
                { label: 'Uden for studiet', href: '#udenfor' },
                { label: 'Kontakt', href: '#contact' }
              ].map(link => (
                <a href={link.href} class="text-sm font-medium text-[var(--text)] hover:text-[var(--accent)] transition-colors py-1 block">
                  {link.label}
                </a>
              ))}
            </nav>
          </Card>
        </div>
      </div>
    </Section>

    <!-- FOKUS -->
    <Section id="fokus">
      <Card variant="bordered" class="bg-[rgba(255,255,255,0.01)]!">
        <h2 class="text-xs font-bold uppercase tracking-wider text-[var(--accent)] mb-4">Fokusområder</h2>
        <div class="grid-2">
            {aboutData.focus.map(focus => (
                <Card variant="bordered" class="bg-[rgba(17,24,39,0.02)]! h-full border-[rgba(255,255,255,0.05)]!">
                  <h3 class="font-bold mb-2 text-[15px]">{focus.title}</h3>
                  <p class="text-[14px] text-[var(--text-dim)] leading-relaxed m-0 opacity-80">{focus.description}</p>
                </Card>
            ))}
        </div>
      </Card>
    </Section>

    <!-- ARBEJDSSTIL -->
    <Section id="arbejdsstil">
      <Card variant="bordered" class="bg-[rgba(255,255,255,0.01)]!">
        <h2 class="text-xs font-bold uppercase tracking-wider text-[var(--accent)] mb-4">Hvordan jeg arbejder</h2>
        <p class="text-[var(--text-dim)] opacity-70 mb-6">
          Min standard-arbejdsgang (lidt kedelig — men det er præcis derfor den virker):
        </p>

        <div class="space-y-4 mb-8">
          {aboutData.timeline.map((item, index) => (
             <div class="flex gap-4">
               <div class="flex flex-col items-center">
                 <div class="w-8 h-8 rounded-full bg-[var(--accent-soft)] border border-[var(--accent)] flex items-center justify-center text-xs font-bold text-[var(--accent)] shrink-0">
                   {index + 1}
                 </div>
                 {index < aboutData.timeline.length - 1 && <div class="w-[1px] bg-[var(--glass-border)] h-full min-h-[20px] my-1"></div>}
               </div>
               <div class="pb-2 pt-1 text-sm leading-relaxed opacity-90" set:html={item}></div>
             </div>
          ))}
        </div>

        <div class="flex flex-wrap gap-3">
          <Button href="/portfolio" variant="ghost"><i class="fa-solid fa-folder-open mr-2"></i> Se portefølje</Button>
          <Button href="/resources"><i class="fa-solid fa-download mr-2"></i> Se ressourcer</Button>
        </div>
      </Card>
    </Section>

    <!-- FORMIDLING -->
    <Section id="formidling">
      <Card variant="bordered" class="bg-[rgba(255,255,255,0.01)]!">
        <h2 class="text-xs font-bold uppercase tracking-wider text-[var(--accent)] mb-4">Undervisning & formidling</h2>
        <p class="text-[var(--text-dim)] opacity-70 mb-6 max-w-2xl">
          Jeg har erfaring med at undervise i Excel/VBA og kan lide at gøre ting konkrete: cases, øvelser,
          “hvorfor” bag funktioner og små genveje der gør en stor forskel.
        </p>

        <div class="grid-2">
          <Card variant="bordered" class="bg-[rgba(255,255,255,0.02)]! border-[rgba(255,255,255,0.06)]!">
            <h3 class="font-bold mb-3 text-[15px]">Min undervisningsstil</h3>
            <ul class="list-disc pl-5 m-0 space-y-1 text-sm text-[var(--text-dim)]">
               {aboutData.teaching.style.map(item => (
                   <li class="pl-1">{item}</li>
               ))}
            </ul>
          </Card>

          <Card variant="bordered" class="bg-[rgba(255,255,255,0.02)]! border-[rgba(255,255,255,0.06)]!">
            <h3 class="font-bold mb-3 text-[15px]">Hvad jeg typisk hjælper med</h3>
            <ul class="list-disc pl-5 m-0 space-y-1 text-sm text-[var(--text-dim)]">
                {aboutData.teaching.help.map(item => (
                   <li class="pl-1">{item}</li>
               ))}
            </ul>
          </Card>
        </div>
      </Card>
    </Section>

    <!-- UDENFOR -->
    <Section id="udenfor">
      <Card variant="bordered" class="bg-[rgba(255,255,255,0.01)]!">
        <h2 class="text-xs font-bold uppercase tracking-wider text-[var(--accent)] mb-4">Uden for studiet</h2>
        <p class="text-[var(--text-dim)] opacity-80 mb-6 leading-relaxed">
          Jeg holder af rutiner og progression — både i træning og i projekter. Det lyder måske lidt “kontor-nørdet”,
          met det er ærligt talt ret tilfredsstillende at se kurver gå den rigtige vej.
        </p>

        <div class="flex flex-wrap gap-3">
          <Button href="/blog#cat-traening" variant="ghost"><i class="fa-solid fa-dumbbell mr-2"></i> Træningsindlæg</Button>
          <Button href="/blog#cat-rejser" variant="ghost"><i class="fa-solid fa-person-hiking mr-2"></i> Rejser</Button>
        </div>
      </Card>
    </Section>

    <!-- KONTAKT -->
    <Section id="contact">
      <Card variant="glass" class="p-6">
        <h2 class="text-xs font-bold uppercase tracking-wider text-[var(--accent)] mb-4">Kontakt</h2>
        <p class="text-[var(--text-dim)] opacity-80 mb-6">
          Hvis du vil sparre om et projekt, en case eller et samarbejde, så skriv endelig.
        </p>
        <div class="flex flex-wrap gap-3">
          <Button href="mailto:anton.ebsen@gmail.com"><i class="fa-solid fa-envelope mr-2"></i> Send mail</Button>
          <Button href="/contact" variant="ghost"><i class="fa-solid fa-message mr-2"></i> Kontakt-side</Button>
          <Button href="/cv" variant="ghost"><i class="fa-solid fa-file-lines mr-2"></i> Tilbage til CV</Button>
        </div>
      </Card>
    </Section>

  </main>
</Layout>
