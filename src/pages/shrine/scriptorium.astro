
---
import '@styles/styles.css';
---

<!DOCTYPE html>
<html lang="da">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Scriptorium | Skrivestuen</title>
    <meta name="robots" content="noindex, nofollow">
    
    <!-- Fonts -->
    <link rel="icon" type="image/svg+xml" href="/assets/favicon-cross.svg">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@400;700&family=Playfair+Display:ital,wght@0,400;0,700;1,400&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    
    <style>
        body { font-family: 'Cinzel', serif; }
        .text-script { font-family: 'Playfair Display', serif; }

        .caret {
            border-right: 2px solid #D4AF37;
            animation: blink 1s step-end infinite;
        }

        @keyframes blink { 50% { border-color: transparent; } }

        .glow-text {
            text-shadow: 0 0 10px rgba(212, 175, 55, 0.5), 0 0 20px rgba(212, 175, 55, 0.2);
            color: #FFD700;
        }

        .dim-text {
            color: rgba(255, 255, 255, 0.1);
        }

        .shake {
            animation: shake 0.5s cubic-bezier(.36,.07,.19,.97) both;
        }

        @keyframes shake {
            10%, 90% { transform: translate3d(-1px, 0, 0); }
            20%, 80% { transform: translate3d(2px, 0, 0); }
            30%, 50%, 70% { transform: translate3d(-4px, 0, 0); }
            40%, 60% { transform: translate3d(4px, 0, 0); }
        }
    </style>
</head>
<body class="bg-[#050505] text-gray-400 min-h-screen flex flex-col items-center py-20 px-4 selection:bg-gold-500/30">

    <!-- Nav -->
    <nav class="fixed top-8 left-8 z-50">
        <a href="/shrine" class="text-gray-600 hover:text-gold-500 transition-colors text-xl flex items-center gap-2">
            <i class="fa-solid fa-arrow-left"></i>
            <span class="text-xs uppercase tracking-widest hidden md:inline">Forlad Skrivestuen</span>
        </a>
    </nav>
    
    <!-- Instructions -->
    <div id="instructions" class="fixed top-8 right-8 text-right hidden md:block opacity-50">
        <p class="text-[10px] uppercase tracking-widest text-gold-500">Skriv teksten nøjagtigt</p>
    </div>

    <!-- Main Container -->
    <main class="w-full max-w-3xl flex-grow flex flex-col items-center justify-center relative">
        
        <!-- Text Container -->
        <div id="text-display" class="text-2xl md:text-4xl text-script leading-relaxed text-center relative outline-none focus:outline-none cursor-text" tabindex="0">
            <!-- Dynamically populated -->
        </div>

        <!-- Completion Message -->
        <div id="completion" class="fixed inset-0 flex items-center justify-center bg-black/90 pointer-events-none opacity-0 transition-opacity duration-2000 z-50">
            <div class="text-center transform scale-95 transition-transform duration-2000" id="completion-content">
                <i class="fa-solid fa-pen-nib text-4xl text-gold-500 mb-6"></i>
                <h2 class="text-3xl text-gold-100 font-serif mb-4">Scriptum Est.</h2>
                <button onclick="location.reload()" class="mt-8 text-xs uppercase tracking-widest text-gray-500 hover:text-white border-b border-gray-800 pb-1 pointer-events-auto">
                    Skriv et nyt stykke
                </button>
            </div>
        </div>

    </main>

    <!-- Hidden Input for Mobile -->
    <input type="text" id="mobile-input" class="absolute opacity-0 top-0 left-0 h-0 w-0" autocomplete="off" autocorrect="off" autocapitalize="off" spellcheck="false">

    <script>
        const texts = [
            { latin: "Dominus regit me, et nihil mihi deerit.", danish: "Herren er min hyrde, jeg lider ingen nød." },
            { latin: "In principio erat Verbum, et Verbum erat apud Deum.", danish: "I begyndelsen var Ordet, og Ordet var hos Gud." },
            { latin: "Ego sum via et veritas et vita.", danish: "Jeg er vejen og sandheden og livet." },
            { latin: "Pater noster, qui es in caelis, sanctificetur nomen tuum.", danish: "Fader vor, du som er i himlene! Helliget vorde dit navn." }
        ];

        // Select Random Text
        const selection = texts[Math.floor(Math.random() * texts.length)];
        const targetText = selection.latin + " " + selection.danish; // Combine or just pick one? Let's do Latin then Danish line break.
        // Let's stick to just the Latin for the "Monk" feel, or maybe Latin line then Danish line.
        // Let's do: Latin Line.
        const displayText = selection.latin; 
        
        const displayEl = document.getElementById('text-display');
        const mobileInput = document.getElementById('mobile-input');
        const completion = document.getElementById('completion');
        const completionContent = document.getElementById('completion-content');

        let currentIndex = 0;

        // Init Text
        function renderText() {
            if(!displayEl) return;
            displayEl.innerHTML = '';
            
            for(let i=0; i < displayText.length; i++) {
                const span = document.createElement('span');
                span.innerText = displayText[i];
                if(i < currentIndex) {
                    span.className = "glow-text transition-all duration-300";
                } else if (i === currentIndex) {
                    span.className = "dim-text caret transition-all duration-300";
                } else {
                    span.className = "dim-text transition-all duration-300";
                }
                displayEl.appendChild(span);
            }
            
            // Subtitle (translated)
            const sub = document.createElement('div');
            sub.className = "mt-12 text-sm text-gray-600 font-serif italic opacity-50";
            sub.innerText = selection.danish;
            displayEl.appendChild(sub);
        }

        renderText();

        // Input Logic
        function handleInput(char: string) {
            const targetChar = displayText[currentIndex];
            
            // Case insensitive? Monks were precise. Let's enforce case for discipline.
            // Actually, for usability, maybe case-insensitive is okay? No, Scriptorium demands precision.
            
            if(char === targetChar) {
                currentIndex++;
                renderText();
                
                // Success
                if(currentIndex >= displayText.length) {
                    finish();
                }
            } else {
                // Error visual
                if(displayEl) {
                    displayEl.classList.add('shake');
                    setTimeout(() => displayEl.classList.remove('shake'), 500);
                }
            }
        }

        function finish() {
            completion?.classList.remove('opacity-0', 'pointer-events-none');
            completionContent?.classList.remove('scale-95');
            completionContent?.classList.add('scale-100');
        }

        // Event Listeners
        document.addEventListener('keydown', (e) => {
            if(e.key.length === 1 && !e.metaKey && !e.ctrlKey && !e.altKey) {
                handleInput(e.key);
                e.preventDefault();
            } else if (e.key === 'Backspace') {
                if(currentIndex > 0) {
                     currentIndex--;
                     renderText();
                }
            }
            
            // Focus mobile input just in case
            mobileInput?.focus();
        });

        // Click to focus (for mobile mostly)
        document.addEventListener('click', () => {
             mobileInput?.focus();
        });
        
        // Mobile Input Handler
        mobileInput?.addEventListener('input', (e) => {
            const val = (e.target as HTMLInputElement).value;
            if(val) {
                const char = val.slice(-1); // get last char
                handleInput(char);
                (e.target as HTMLInputElement).value = ''; // clear
            }
        });

    </script>
</body>
</html>
