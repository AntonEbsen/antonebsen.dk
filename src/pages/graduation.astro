<script>
  import confetti from 'canvas-confetti';

  // Trigger Confetti if authenticated (element exists)
  const celebration = document.getElementById('celebration-content');
  if (celebration) {
    const duration = 5 * 1000;
    const animationEnd = Date.now() + duration;
    const defaults = { startVelocity: 30, spread: 360, ticks: 60, zIndex: 1000, colors: ['#d4af37', '#ffffff', '#b8860b'] };

    function randomInRange(min: number, max: number) {
      return Math.random() * (max - min) + min;
    }

    const interval: any = setInterval(function() {
      const timeLeft = animationEnd - Date.now();

      if (timeLeft <= 0) {
        return clearInterval(interval);
      }

      const particleCount = 50 * (timeLeft / duration);
      // since particles fall down, start a bit higher than random
      confetti({ ...defaults, particleCount, origin: { x: randomInRange(0.1, 0.3), y: Math.random() - 0.2 } });
      confetti({ ...defaults, particleCount, origin: { x: randomInRange(0.7, 0.9), y: Math.random() - 0.2 } });
    }, 250);

    // Countdown Logic
    const eventDateStr = celebration.getAttribute('data-event-date');
    if (eventDateStr) {
        const targetDate = new Date(eventDateStr).getTime();
        
        const updateCountdown = () => {
            const now = new Date().getTime();
            const distance = targetDate - now;
            
            if (distance < 0) return;

            const days = Math.floor(distance / (1000 * 60 * 60 * 24));
            const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
            const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
            const seconds = Math.floor((distance % (1000 * 60)) / 1000);

            const dEl = document.getElementById('days');
            const hEl = document.getElementById('hours');
            const mEl = document.getElementById('minutes');
            const sEl = document.getElementById('seconds');

            if (dEl) dEl.innerText = String(days).padStart(2, '0');
            if (hEl) hEl.innerText = String(hours).padStart(2, '0');
            if (mEl) mEl.innerText = String(minutes).padStart(2, '0');
            if (sEl) sEl.innerText = String(seconds).padStart(2, '0');
        };

        updateCountdown();
        setInterval(updateCountdown, 1000);
    }

    // Guestbook Submission Logic
    const gbForm = document.getElementById('guestbook-form') as HTMLFormElement;
    const gbStatus = document.getElementById('form-status');
    
    if (gbForm && gbStatus) {
        gbForm.addEventListener('submit', async (e) => {
            e.preventDefault();
            const formData = new FormData(gbForm);
            const name = formData.get('name');
            const message = formData.get('message');
            
            gbStatus.classList.remove('hidden', 'text-red-400', 'text-green-400');
            gbStatus.innerText = "Sender hilsen...";
            gbStatus.classList.add('text-white/60');

            try {
                const res = await fetch('/api/guestbook', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ name, message })
                });
                
                if (res.ok) {
                    gbStatus.innerText = "Tak! Din hilsen er modtaget og venter p친 godkendelse. 游꿀";
                    gbStatus.classList.replace('text-white/60', 'text-green-400');
                    gbForm.reset();
                } else {
                    throw new Error();
                }
            } catch {
                gbStatus.innerText = "Der opstod en fejl. Pr칮v igen senere.";
                gbStatus.classList.replace('text-white/60', 'text-red-400');
            }
        });
    }

    // RSVP Submission Logic
    const rsvpForm = document.getElementById('rsvp-form') as HTMLFormElement;
    const rsvpStatus = document.getElementById('rsvp-status');
    
    if (rsvpForm && rsvpStatus) {
        rsvpForm.addEventListener('submit', async (e) => {
            e.preventDefault();
            const formData = new FormData(rsvpForm);
            const name = formData.get('name');
            const plus_one = formData.get('plus_one') === 'true';
            const message = formData.get('message');
            
            rsvpStatus.classList.remove('hidden', 'text-red-400', 'text-green-400');
            rsvpStatus.innerText = "Sender RSVP...";
            rsvpStatus.classList.add('text-white/60');

            try {
                const res = await fetch('/api/rsvp', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ name, plus_one, message })
                });
                
                if (res.ok) {
                    rsvpStatus.innerText = "Fedt! Vi har modtaget din tilmelding. Ses til fest! 游꽄";
                    rsvpStatus.classList.replace('text-white/60', 'text-green-400');
                    rsvpForm.reset();
                    // Add a tiny extra confetti burst
                    confetti({ particleCount: 150, spread: 70, origin: { y: 0.8 } });
                } else {
                    throw new Error();
                }
            } catch {
                rsvpStatus.innerText = "Fejl ved tilmelding. Pr칮v venligst igen.";
                rsvpStatus.classList.replace('text-white/60', 'text-red-400');
            }
        });
    }
  }
