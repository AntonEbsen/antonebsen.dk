---
export interface Props {
  title: string;
  description?: string;
  image?: string;
  article?: boolean;
}


const { 
  title, 
  description = "Anton Meier Ebsen Jørgensen – Økonomistuderende (cand.polit.)", 
  article = false 
} = Astro.props;

const siteTitle = "Anton Meier Ebsen Jørgensen";
const pageTitle = title.includes(siteTitle) ? title : `${title} | ${siteTitle}`;
const canonicalURL = new URL(Astro.url.pathname, Astro.site || "https://antonebsen.dk");

// Image Logic: Use provided prop OR fallback to Dynamic OG
let socialImageURL;
if (Astro.props.image) {
  socialImageURL = new URL(Astro.props.image, Astro.url);
} else {
  // Generate Dynamic OG
  const ogTitle = title.replace(` | ${siteTitle}`, ''); // Clean title
  const ogEndpoint = new URL('/api/og', Astro.url);
  ogEndpoint.searchParams.set('title', ogTitle);
  ogEndpoint.searchParams.set('desc', description.slice(0, 80) + (description.length > 80 ? '...' : ''));
  socialImageURL = ogEndpoint;
}

// Breadcrumbs Logic
const pathSegments = Astro.url.pathname.split('/').filter(Boolean);
const breadcrumbItems = [
  {
    "@type": "ListItem",
    "position": 1,
    "name": "Home",
    "item": "https://antonebsen.dk"
  },
  ...pathSegments.map((segment, index) => {
    const url = `https://antonebsen.dk/${pathSegments.slice(0, index + 1).join('/')}`;
    // Format name: "ai-project" -> "Ai Project"
    const name = segment.replace(/-/g, ' ').replace(/\b\w/g, l => l.toUpperCase());
    return {
      "@type": "ListItem",
      "position": index + 2,
      "name": name,
      "item": url
    };
  })
];
---

<!-- Global Metadata -->
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<link rel="icon" href="/assets/img/favicon.ico" type="image/x-icon">
<meta name="generator" content={Astro.generator} />

<!-- Canonical URL -->
<link rel="canonical" href={canonicalURL} />

<!-- Primary Meta Tags -->
<title>{pageTitle}</title>
<meta name="title" content={pageTitle} />
<meta name="description" content={description} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content={article ? 'article' : 'website'} />
<meta property="og:url" content={Astro.url} />
<meta property="og:title" content={pageTitle} />
<meta property="og:description" content={description} />
<meta property="og:image" content={socialImageURL} />

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={Astro.url} />
<meta property="twitter:title" content={pageTitle} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={socialImageURL} />

<!-- JSON-LD Structured Data -->
<script type="application/ld+json" set:html={JSON.stringify({
  "@context": "https://schema.org/",
  "@graph": [
    {
      "@type": "Person",
      "name": "Anton Meier Ebsen Jørgensen",
      "url": "https://antonebsen.dk",
      "image": socialImageURL,
      "jobTitle": "Student of Economics (cand.polit)",
      "sameAs": [
        "https://www.linkedin.com/in/antonebsen/",
        "https://github.com/AntonEbsen"
      ]
    },
    {
      "@type": "WebSite",
      "name": "Anton Meier Ebsen Jørgensen",
      "url": "https://antonebsen.dk",
      "potentialAction": {
        "@type": "SearchAction",
        "target": "https://antonebsen.dk/search?q={search_term_string}",
        "query-input": "required name=search_term_string"
      }
    },
    {
      "@type": "BreadcrumbList",
      "itemListElement": breadcrumbItems
    }
  ]
})} />

