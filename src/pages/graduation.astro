---
import Layout from '@layouts/Layout.astro';
import Section from '@components/ui/Section.astro';
import Button from '@components/ui/Button.astro';

// We use SSR to handle the password post without exposing it in a JS variable
export const prerender = false;

let error = "";
let authenticated = false;

if (Astro.request.method === "POST") {
  try {
    const data = await Astro.request.formData();
    const password = data.get("password");
    
    // The password is 'cand.polit' (case insensitive)
    if (password?.toString().toLowerCase() === "cand.polit") {
      authenticated = true;
    } else {
      error = "Forkert adgangskode. Pr칮v igen.";
    }
  } catch (e) {
    error = "Der opstod en fejl. Pr칮v igen.";
  }
}

// Placeholder for the event date (e.g., June 1st, 2026)
const eventDate = "2026-06-01T18:00:00"; 
---

<Layout title="Dimission | Anton Ebsen" description="Fejring af min Masters dimission">
  <main class="min-h-[80vh] flex flex-col items-center justify-center px-4 py-20 relative overflow-hidden">
    
    {/* Background Glow */}
    <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] bg-accent/10 blur-[120px] rounded-full pointer-events-none -z-10"></div>

    {!authenticated ? (
      <div class="max-w-md w-full text-center space-y-8 animate-in fade-in slide-in-from-bottom-4 duration-700">
        <div class="space-y-3">
          <div class="w-16 h-16 bg-accent-soft rounded-2xl border border-accent/20 flex items-center justify-center mx-auto mb-6 shadow-glow">
             <i class="fa-solid fa-graduation-cap text-accent text-3xl"></i>
          </div>
          <h1 class="text-4xl font-bold tracking-tight text-white sm:text-5xl">Dimission</h1>
          <p class="text-dim text-lg">Indtast adgangskoden for at se invitationen til fejringen.</p>
        </div>

        <form method="POST" class="space-y-4">
          <div class="relative group">
            <input 
              type="password" 
              name="password" 
              placeholder="Adgangskode..." 
              required
              class="w-full px-5 py-4 bg-white/5 border border-glass-border rounded-2xl text-white outline-none focus:border-accent transition-all duration-300 placeholder:text-white/20"
            />
            <div class={`absolute -bottom-6 left-0 text-sm text-red-400 transition-opacity duration-300 ${error ? 'opacity-100' : 'opacity-0'}`}>
              {error}
            </div>
          </div>
          <button 
            type="submit" 
            class="w-full py-4 bg-accent hover:bg-accent-blue text-black font-bold rounded-2xl transition-all duration-300 transform active:scale-[0.98] shadow-lg shadow-white/5"
          >
            L친s op
          </button>
        </form>

        <p class="text-xs text-dim/50 italic">Hint: Titlen p친 min uddannelse (cand.xxxx)</p>
      </div>
    ) : (
      <div id="celebration-content" class="max-w-3xl w-full text-center space-y-12 animate-in fade-in zoom-in-95 duration-1000" data-event-date={eventDate}>
        <div class="space-y-6">
          <div class="inline-block px-4 py-1.5 rounded-full bg-accent-soft border border-accent/20 text-accent font-bold text-sm tracking-widest uppercase mb-4 animate-bounce">
            Klar til fejring! 游꿀
          </div>
          <h1 class="text-5xl font-extrabold tracking-tight text-white sm:text-7xl mb-4">
            Jeg er nu <span class="text-accent italic">Master.</span>
          </h1>
          <p class="text-xl text-dim leading-relaxed max-w-lg mx-auto">
            Efter 5 친rs studier er jeg endelig cand.polit! Det skal fejres, og du er hermed inviteret til min dimissionsfest.
          </p>
        </div>

        {/* Countdown Timer */}
        <div class="grid grid-cols-4 gap-4 max-w-lg mx-auto py-8 border-y border-glass-border">
          <div class="space-y-1">
            <span id="days" class="text-3xl font-bold text-white tabular-nums">00</span>
            <p class="text-[10px] text-dim font-bold uppercase tracking-widest">Dage</p>
          </div>
          <div class="space-y-1">
            <span id="hours" class="text-3xl font-bold text-white tabular-nums">00</span>
            <p class="text-[10px] text-dim font-bold uppercase tracking-widest">Timer</p>
          </div>
