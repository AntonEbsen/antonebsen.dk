---
interface Props {
  skills: any[];
}

const { skills } = Astro.props;
---

<div id="skill-network" class="w-full h-[400px] relative overflow-hidden bg-white/5 rounded-xl border border-white/10">
    <div class="absolute top-4 left-4 z-10">
        <h3 class="font-bold text-xs text-dim uppercase tracking-wider">The Ecosystem</h3>
    </div>
</div>

<script>
    import * as d3 from "d3";

    const container = document.getElementById('skill-network');
    if (container) {
        const width = container.clientWidth;
        const height = container.clientHeight;

        // Sample Data Construction (Client-side for now to avoid complex serialization)
        // Ideally this comes from props, but let's build a robust graph from the DOM data or passed JSON
        // For phase 4 MVP, we will visualize the core balance first.
        
        const nodes = [
            { id: "Python", group: "Data", r: 25 },
            { id: "Pandas", group: "Data", r: 15 },
            { id: "Excel", group: "Data", r: 20 },
            { id: "VBA", group: "Data", r: 15 },
            { id: "Stata", group: "Metrics", r: 20 },
            { id: "Econometrics", group: "Metrics", r: 25 },
            { id: "Macro", group: "Macro", r: 25 },
            { id: "MATLAB", group: "Macro", r: 15 },
            { id: "GAMS", group: "Macro", r: 15 },
            { id: "Communication", group: "Core", r: 25 },
            { id: "Astro", group: "Web", r: 15 },
            { id: "Tailwind", group: "Web", r: 15 },
        ];

        const links = [
            { source: "Python", target: "Pandas" },
            { source: "Python", target: "Excel" },
            { source: "Excel", target: "VBA" },
            { source: "Stata", target: "Econometrics" },
            { source: "Econometrics", target: "Macro" },
            { source: "Macro", target: "MATLAB" },
            { source: "Macro", target: "GAMS" },
            { source: "Python", target: "Econometrics" }, // Cross-disciplinary
            { source: "Communication", target: "Macro" },
            { source: "Communication", target: "Data" },
            { source: "Astro", target: "Tailwind" },
            { source: "Python", target: "Astro" }, // Automation
        ];

        const simulation = d3.forceSimulation(nodes as any)
            .force("link", d3.forceLink(links).id((d: any) => d.id).distance(60))
            .force("charge", d3.forceManyBody().strength(-200))
            .force("center", d3.forceCenter(width / 2, height / 2))
            .force("collide", d3.forceCollide().radius((d: any) => d.r + 5));

        const svg = d3.select("#skill-network").append("svg")
            .attr("width", width)
            .attr("height", height)
            .attr("viewBox", [0, 0, width, height]);

        const link = svg.append("g")
            .attr("stroke", "rgba(255,255,255,0.1)")
            .attr("stroke-opacity", 0.6)
            .selectAll("line")
            .data(links)
            .join("line")
            .attr("stroke-width", 1);

        const node = svg.append("g")
            .selectAll("g")
            .data(nodes)
            .join("g")
            .call(drag(simulation));

        node.append("circle")
            .attr("r", (d: any) => d.r)
            .attr("fill", (d: any) => {
                const colors: any = { "Data": "#3b82f6", "Metrics": "#ef4444", "Macro": "#eab308", "Core": "#10b981", "Web": "#a855f7" };
                return colors[d.group] || "#888"; 
            })
            .attr("stroke", "#fff")
            .attr("stroke-width", 1.5)
            .attr("opacity", 0.8);

        node.append("text")
            .text((d: any) => d.id)
            .attr("x", 0)
            .attr("y", (d: any) => d.r + 12) // Below the circle
            .attr("text-anchor", "middle")
            .attr("fill", "rgba(255,255,255,0.7)")
            .attr("font-size", "10px")
           // .attr("font-weight", "bold")
            .style("pointer-events", "none");

        simulation.on("tick", () => {
            link
                .attr("x1", (d: any) => d.source.x)
                .attr("y1", (d: any) => d.source.y)
                .attr("x2", (d: any) => d.target.x)
                .attr("y2", (d: any) => d.target.y);

            node
                .attr("transform", (d: any) => `translate(${d.x},${d.y})`);
        });

        function drag(simulation: any) {
            function dragstarted(event: any) {
                if (!event.active) simulation.alphaTarget(0.3).restart();
                event.subject.fx = event.subject.x;
                event.subject.fy = event.subject.y;
            }

            function dragged(event: any) {
                event.subject.fx = event.x;
                event.subject.fy = event.y;
            }

            function dragended(event: any) {
                if (!event.active) simulation.alphaTarget(0);
                event.subject.fx = null;
                event.subject.fy = null;
            }

            return d3.drag()
                .on("start", dragstarted)
                .on("drag", dragged)
                .on("end", dragended);
        }
    }
</script>
