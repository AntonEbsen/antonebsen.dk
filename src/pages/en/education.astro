---
import Layout from '@layouts/Layout.astro';
import Section from '@components/ui/Section.astro';
import Card from '@components/ui/Card.astro';
import Button from '@components/ui/Button.astro';
import Pill from '@components/ui/Pill.astro';
import SectionHeading from '@components/ui/SectionHeading.astro';
import ContactCard from '@components/common/ContactCard.astro';
import { getEntry } from 'astro:content';
const cv = (await getEntry('cv', 'en')).data;
import { createClient } from '@supabase/supabase-js';

export const prerender = false;

const supabase = createClient(import.meta.env.SUPABASE_URL, import.meta.env.SUPABASE_ANON_KEY);

// Fetch Education (optional, can use cv_en.json for consistency)
const education = cv.education;

// Fetch Projects (reusing projects table, but we'll show them in English context)
let { data: projects, error: projError } = await supabase
  .from('projects')
  .select('*')
  .order('created_at', { ascending: false })
  .limit(3);

if (projError) projects = [];

const ku = education.find(e => e.institution.includes("Copenhagen"));
const hhx = education.find(e => e.degree.includes("HHX"));
---

<Layout 
  title="Anton Meier Ebsen Jørgensen – Education" 
  description="Education profile: cand.polit./ba.polit., relevant courses, projects, and focus areas."
  bodyClass="edu-page"
>
  <style>
    .edu-wrap {
      max-width: 1200px;
      margin: 24px auto;
      padding: 0 16px 32px;
    }
    
    .hero-grid {
      display: grid;
      grid-template-columns: minmax(0, 1.6fr) minmax(0, 1fr);
      gap: 22px;
      align-items: start;
    }

    .two-col {
      display: grid;
      grid-template-columns: repeat(2, minmax(0,1fr));
      gap: 14px;
      margin-top: 12px;
    }

    .courses-grid {
      display: grid;
      grid-template-columns: repeat(3, minmax(0,1fr));
      gap: 14px;
      margin-top: 12px;
    }

    @media (max-width: 980px) {
      .hero-grid, .two-col, .courses-grid { 
        grid-template-columns: 1fr; 
      }
    }
  </style>

  <main class="edu-wrap">

    <!-- HERO -->
    <Section>
      <div class="hero-grid">
        <Card variant="glass" class="p-6">
          <p class="text-xs font-extrabold uppercase tracking-wider text-dim mb-3">Education</p>
          <h1 class="text-4xl leading-tight mb-4 font-bold">Courses, Projects, and Professional Profile</h1>
          <p class="text-lg leading-relaxed text-dim mb-6">
            Here I gather what becomes too long for the CV: selected courses, project work,
            and concretely what I've learned (methods, tools, models).
          </p>
  
          <div class="flex flex-wrap gap-3 mb-6">
            <Button href="#ku">University of Copenhagen</Button>
            <Button href="#hhx" variant="ghost">HHX</Button>
            <Button href="#courses" variant="ghost">Course Overview</Button>
            <Button href="#projects" variant="ghost">Project Work</Button>
          </div>
  
          <div class="flex flex-wrap gap-2">
            <Pill variant="accent">Macro</Pill>
            <Pill variant="accent">Econometrics</Pill>
            <Pill variant="accent">Modeling</Pill>
            <Pill variant="accent">Time Series</Pill>
            <Pill variant="accent">Python/SAS/GAMS</Pill>
          </div>
        </Card>
  
        <div class="hidden md:block">
          <Card variant="glass" class="p-4">
            <SectionHeading>Short Version?</SectionHeading>
            <p class="text-[13px] text-dim mb-4 opacity-70">
              The CV page has the "HR-friendly" overview. This page is for those who actually want to dive deep.
            </p>
            <Button href="/en/cv#education" variant="ghost" class="w-full">To CV Overview</Button>
          </Card>
        </div>
      </div>
    </Section>

    <!-- KU -->
    {ku && (
      <Section id="ku">
        <Card variant="default" class="p-6">
          <SectionHeading>{ku.institution} ({ku.degree})</SectionHeading>

          <div class="two-col">
            <Card variant="glass" class="p-4">
              <h3 class="text-base font-bold mb-2">Program & Focus</h3>
              <p class="text-dim text-[14px] leading-relaxed mb-4">
                {ku.description}
              </p>
              <ul class="list-none p-0 m-0 space-y-2 text-[13px] text-dim">
                {ku.bullets && ku.bullets.map(item => (
                  <li class="relative pl-3 before:content-['-'] before:absolute before:left-0 before:text-accent">{item}</li>
                ))}
              </ul>
            </Card>

            <Card variant="glass" class="p-4">
              <h3 class="text-base font-bold mb-2">Key Tools</h3>
              <div class="flex flex-wrap gap-2 mb-4">
                {ku.technologies && ku.technologies.map(tech => (
                  <Pill variant="default">{tech}</Pill>
                ))}
              </div>
              <p class="text-[13px] text-dim opacity-70">
                (Check the portfolio for concrete examples of how I use these tools.)
              </p>
            </Card>
          </div>
        </Card>
      </Section>
    )}

    <!-- COURSES -->
    <Section id="courses">
      <Card variant="bordered" class="p-6">
        <SectionHeading>Course Overview (Selection)</SectionHeading>
        <p class="text-dim opacity-70 mb-6">
          Note: These courses represent my academic core and specialization.
        </p>

        <div class="courses-grid">
          {cv.courses.map(course => (
            <Card variant="bordered" class="flex flex-col h-full bg-glass">
              <div class="flex justify-between items-start mb-3 gap-2">
                <h3 class="text-[16px] font-bold leading-tight m-0">{course.title}</h3>
                <Pill variant="accent" class="shrink-0">{course.tag}</Pill>
              </div>
              <p class="text-[13px] text-dim mb-3">{course.institution}</p>
              <p class="text-[14px] text-dim opacity-80 leading-relaxed mb-4 flex-grow">
                {course.description}
              </p>
              <div class="flex flex-wrap gap-2 mt-auto">
                {course.links && course.links.map(link => (
                  <a href={link.href} class="text-xs font-bold text-accent no-underline hover:text-white transition-colors">{link.text} →</a>
                ))}
              </div>
            </Card>
          ))}
        </div>
      </Card>
    </Section>

    <!-- PROJECTS -->
    <Section id="projects">
      <Card variant="bordered" class="p-6">
        <SectionHeading>Project Work (Selection)</SectionHeading>

        <div class="courses-grid">
          {projects.map(proj => (
            <Card variant="bordered" class="flex flex-col h-full bg-glass">
              <div class="flex justify-between items-start mb-3 gap-2">
                <h3 class="text-[16px] font-bold leading-tight m-0">{proj.title}</h3>
                <Pill variant="accent" class="shrink-0">{proj.tags && proj.tags[0] ? proj.tags[0] : 'Project'}</Pill>
              </div>
              <p class="text-[14px] text-dim opacity-80 leading-relaxed mb-4 flex-grow">
                {proj.description}
              </p>
              <div class="flex flex-wrap gap-2 mt-auto">
                 {proj.url && (
                  <a href={proj.url} class="text-xs font-bold text-accent no-underline hover:text-white transition-colors">View Project →</a>
                 )}
              </div>
            </Card>
          ))}
        </div>
        <div class="mt-6 text-center">
            <Button href="/en/portfolio" variant="ghost">View Full Portfolio</Button>
        </div>
      </Card>
    </Section>

    <!-- HHX -->
    {hhx && (
      <Section id="hhx">
        <Card variant="glass" class="p-6">
          <SectionHeading>{hhx.degree} ({hhx.institution})</SectionHeading>
          <p class="text-dim mb-4 leading-relaxed">
            {hhx.description}
          </p>
          <ul class="list-none p-0 m-0 space-y-2 text-[14px] text-dim">
            {hhx.bullets.map(item => (
              <li class="relative pl-3 before:content-['-'] before:absolute before:left-0 before:text-accent">{item}</li>
            ))}
          </ul>
        </Card>
      </Section>
    )}

    <!-- CTA -->
    <Section>
      <Card variant="default" class="p-6">
        <SectionHeading>Want to see certifications as well?</SectionHeading>
        <p class="text-dim opacity-70 mb-6">Certifications are "proof". Education is the "process". Both strengthen credibility.</p>
        <div class="flex flex-wrap gap-3">
          <Button href="/en/certifications">To Certifications</Button>
          <Button href="/en/contact" variant="ghost">Contact</Button>
        </div>
      </Card>
    </Section>

  </main>
</Layout>
